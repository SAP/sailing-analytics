/var/log/httpd/*log {
    missingok
    notifempty
    sharedscripts
    olddir /var/log/logrotate-target
    # use date as a suffix of the rotated file
    dateext
    compress
    delaycompress
    postrotate
        /bin/systemctl reload httpd.service > /dev/null 2>/dev/null || true
        mv /var/log/logrotate-target/*.gz /var/log/old
    endscript
}

