<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HeaderLayout">
        <attr name="headerText" format="reference|string" />
        <attr name="showChevron" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PanelButton">
        <attr name="buttonCaption" format="reference|string" />

        <attr name="buttonType" format="enum">
            <enum name="typeValue" value="0" />
            <enum name="typeImage" value="1" />
            <enum name="typeSwitch" value="2" />
            <enum name="typeFlag" value="3" />
        </attr>

        <attr name="buttonImage" format="reference" />
        <attr name="buttonValue" format="reference|string" />
        <attr name="buttonSwitch" format="reference|string" />

        <attr name="linePosition" format="enum">
            <enum name="none" value="-1" />
            <enum name="left" value="0" />
            <enum name="bottom" value="1" />
            <enum name="right" value="2" />
        </attr>

        <attr name="captionPosition" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>

        <attr name="imageSize" format="reference|dimension" />

        <attr name="showLock" format="boolean" />

        <attr name="warningSignPosition" format="enum">
            <enum name="none" value="-1" />
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="bottomRight" value="2" />
            <enum name="bottomLeft" value="3" />
        </attr>
    </declare-styleable>

</resources>