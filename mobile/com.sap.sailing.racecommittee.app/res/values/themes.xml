<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/AppTheme.Widget.DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Widget.NumberPicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:divider">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.Widget.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>
    
    <style name="AppTheme.LargeText" parent="AppTheme.Base">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>