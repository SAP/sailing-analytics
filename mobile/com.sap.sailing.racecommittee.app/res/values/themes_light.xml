<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme.Light" parent="AppTheme.Light.Base"/>

    <style name="AppTheme.Light.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:tabWidgetStyle">@style/AppTheme.Light.TabWidget</item>

        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="colorAccent">@color/light_colorAccent</item>
        <item name="android:textColorSecondary">?white</item>
        <item name="drawerArrowStyle">@style/AppTheme.Light.Widget.DrawerArrowStyle</item>
        <item name="editText">@style/AppTheme.Light.EditText</item>
        <item name="android:editTextColor">?white</item>
        <item name="android:dialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Light.SettingsAlertDialog</item>

        <!-- style attributes for popup menu -->
        <item name="android:popupMenuStyle">@style/AppTheme.Light.PopupMenuStyle</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>

        <!-- custom attributes because of custom themes -->
        <!-- colors -->
        <item name="black">@color/light_black</item>
        <item name="sap_blue_1">@color/constant_sap_blue_1</item>
        <item name="sap_gray">@color/light_sap_gray</item>
        <item name="sap_gray_black_20">@color/light_sap_gray_black_20</item>
        <item name="sap_gray_black_30">@color/light_sap_gray_black_30</item>
        <item name="sap_gray_black_40">@color/light_sap_gray_black_40</item>
        <item name="sap_gray_white_10">@color/light_sap_gray_white_10</item>
        <item name="sap_gray_white_20">@color/light_sap_gray_white_20</item>
        <item name="sap_light_gray">@color/light_sap_light_gray</item>
        <item name="sap_red_1">@color/constant_sap_red_1</item>
        <item name="sap_yellow_1">@color/constant_sap_yellow_1</item>
        <item name="white">@color/light_white</item>
        <item name="white_invert">@color/constant_white</item>

        <!-- styles -->
        <item name="button">@style/AppTheme.Light.Button</item>
        <item name="buttonSolidXSmall">@style/AppTheme.Light.Button.XSmall</item>
        <item name="buttonSolidSmall">@style/AppTheme.Light.Button.Small</item>
        <item name="buttonSolidNormal">@style/AppTheme.Light.Button.Normal</item>
        <item name="round">@style/AppTheme.Light.Round</item>
        <item name="text">@style/AppTheme.Light.Text</item>
        <item name="textXXSmall">@style/AppTheme.Light.Text.XXSmall</item>
        <item name="textXSmall">@style/AppTheme.Light.Text.XSmall</item>
        <item name="textSmall">@style/AppTheme.Light.Text.Small</item>
        <item name="textNormal">@style/AppTheme.Light.Text.Normal</item>
        <item name="textLarge">@style/AppTheme.Light.Text.Large</item>
        <item name="textXLarge">@style/AppTheme.Light.Text.XLarge</item>

        <item name="textHeader">@style/AppTheme.Light.Text.Header</item>
        <item name="textPanelCaption">@style/AppTheme.Light.Text.PanelCaption</item>
        <item name="textPanelHeader">@style/AppTheme.Light.Text.PanelHeader</item>
        <item name="floatLabel">@style/AppTheme.Light.Text.FloatLabel</item>

        <!-- drawables -->
        <item name="access_time_36dp">@drawable/ic_access_time_black_36dp</item>
        <item name="arrow_down">@drawable/arrow_down_light</item>
        <item name="arrow_down_large">@drawable/arrow_down_large_light</item>
        <item name="arrow_down_normal">@drawable/arrow_down_normal_light</item>
        <item name="arrow_drop_down_24dp">@drawable/ic_arrow_drop_down_grey_600_24dp</item>
        <item name="arrow_up">@drawable/arrow_up_light</item>
        <item name="arrow_up_large">@drawable/arrow_up_large_light</item>
        <item name="arrow_up_normal">@drawable/arrow_up_normal_light</item>
        <item name="button_filled_bordered">@drawable/button_filled_bordered_light</item>
        <item name="check_18dp">@drawable/ic_check_black_18dp</item>
        <item name="chevron_left_24dp">@drawable/ic_chevron_left_black_24dp</item>
        <item name="chevron_left_36dp">@drawable/ic_chevron_left_black_36dp</item>
        <item name="chevron_right_36dp">@drawable/ic_chevron_right_black_36dp</item>
        <item name="create">@drawable/ic_create_light</item>
        <item name="compass_back">@drawable/compass_back_light</item>
        <item name="compass_needle">@drawable/compass_needle_light</item>
        <item name="course_triangle_48dp">@drawable/course_triangle_48dp_light</item>
        <item name="course_triangle_64dp">@drawable/course_triangle_64dp_light</item>
        <item name="course_updown_48dp">@drawable/course_updown_48dp_light</item>
        <item name="course_updown_64dp">@drawable/course_updown_64dp_light</item>
        <item name="dns">@drawable/ic_dns_black</item>
        <item name="hearing">@drawable/ic_hearing_black</item>
        <item name="link_24dp">@drawable/ic_link_black_24dp</item>
        <item name="lock_outline">@drawable/ic_lock_outline_black</item>
        <item name="marker">@drawable/marker_light</item>
        <item name="marker_race">@drawable/marker_race_light</item>
        <item name="mic_48dp">@drawable/ic_mic_black_48dp</item>
        <item name="photo_camera">@drawable/ic_photo_camera_black</item>
        <item name="play_arrow_36dp">@drawable/ic_play_arrow_black_36dp</item>
        <item name="search_24dp_invert">@drawable/ic_search_white_24dp</item>
        <item name="spinner_background">@drawable/spinner_background_light</item>
        <item name="swipe_idle">@drawable/swipe_idle_light</item>
        <item name="swipe_left">@drawable/swipe_left_light</item>
        <item name="swipe_right">@drawable/swipe_right_light</item>
        <item name="tab_widget">@drawable/tabwidget_light</item>
        <item name="value_next">@drawable/value_next_light</item>
        <item name="value_prev">@drawable/value_prev_light</item>
        <item name="wind_off">@drawable/wind_off_light</item>
        <item name="wind_on">@drawable/wind_on_light</item>

        <!-- drawable drawable -->
        <item name="flag_ap_alpha_96dp">@drawable/flag_ap_alpha_96dp_light</item>
        <item name="flag_ap_hotel_96dp">@drawable/flag_ap_hotel_96dp_light</item>
        <item name="flag_november_alpha_96dp">@drawable/flag_november_alpha_96dp_light</item>
        <item name="flag_november_hotel_96dp">@drawable/flag_november_hotel_96dp_light</item>
        <item name="flags_abandon">@drawable/flags_abandon_light</item>
        <item name="flags_course">@drawable/flags_course_light</item>
        <item name="flags_more">@drawable/flags_more_light</item>
        <item name="flags_postpone">@drawable/flags_postpone_light</item>
        <item name="flags_recall">@drawable/flags_recall_light</item>
    </style>

    <style name="AppTheme.Light.PopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/constant_black</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/constant_black</item>
    </style>

    <style name="AppTheme.Light.Widget.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="AppTheme.Light.Round">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- custom styles -->
    <style name="AppTheme.Light.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_light</item>
        <item name="android:textColor">?white</item>
        <item name="android:textColorHint">?sap_light_gray</item>
    </style>

    <style name="AppTheme.Light.Button">
        <item name="android:textColor">@color/constant_white</item>
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Light.Button.Default">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/default_padding_half</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding_half</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>

    <style name="AppTheme.Light.Button.XSmall" parent="AppTheme.Light.Button.Default">
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

    <style name="AppTheme.Light.Button.Small" parent="AppTheme.Light.Button.Default">
        <item name="android:textSize">@dimen/textSize_22</item>
    </style>

    <style name="AppTheme.Light.Button.Normal" parent="AppTheme.Light.Button.Default">
        <item name="android:textSize">@dimen/textSize_26</item>
    </style>

    <style name="AppTheme.Light.Text">
        <item name="android:textColor">?white</item>
    </style>

    <style name="AppTheme.Light.Text.FloatLabel">
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

    <style name="AppTheme.Light.Text.XXSmall">
        <item name="android:textSize">@dimen/textSize_14</item>
    </style>

    <style name="AppTheme.Light.Text.XSmall">
        <item name="android:textSize">@dimen/textSize_18</item>
    </style>

    <style name="AppTheme.Light.Text.Small">
        <item name="android:textSize">@dimen/textSize_22</item>
    </style>

    <style name="AppTheme.Light.Text.Normal">
        <item name="android:textSize">@dimen/textSize_26</item>
    </style>

    <style name="AppTheme.Light.Text.Large">
        <item name="android:textSize">@dimen/textSize_32</item>
    </style>

    <style name="AppTheme.Light.Text.XLarge">
        <item name="android:textSize">@dimen/textSize_40</item>
    </style>

    <style name="AppTheme.Light.Text.Header" parent="AppTheme.Light.Text.Normal">
        <item name="android:textSize">@dimen/textSize_20</item>
    </style>

    <style name="AppTheme.Light.Text.PanelHeader">
        <item name="android:textColor">?sap_light_gray</item>
        <item name="android:textSize">@dimen/panel_button_header_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Light.Text.PanelCaption">
        <item name="android:textSize">@dimen/panel_button_caption_size</item>
    </style>

    <style name="AppTheme.Light.SettingsAlertDialog" parent="AppTheme.AlertDialog">
        <item name="colorPrimaryDark">@color/dialog_color_text</item>
        <item name="android:textColorSecondary">@color/dialog_color_text</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.Light.TabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/AppTheme.Light.TabWidgetText</item>
    </style>

    <style name="AppTheme.Light.TabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/textSize_32</item>
        <item name="android:textColor">?white</item>
    </style>

</resources>