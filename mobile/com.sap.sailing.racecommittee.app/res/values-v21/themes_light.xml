<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Light" parent="AppTheme.Light.Base">
        <item name="android:colorPrimary">@color/light_colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="android:colorAccent">@color/light_colorAccent</item>
        <item name="android:textColorPrimary">@color/light_colorPrimary</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:alertDialogTheme">@style/AppTheme.Light.AlertDialog.v21</item>
    </style>

    <style name="AppTheme.Light.AlertDialog.v21" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/light_colorAccent</item>
    </style>

    <style name="AppTheme.Light.Button">
        <item name="android:textColor">@color/constant_white</item>
        <item name="android:background">@drawable/button_light_ripple</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Light.Round">
        <item name="android:background">@drawable/round_button_ripple</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>