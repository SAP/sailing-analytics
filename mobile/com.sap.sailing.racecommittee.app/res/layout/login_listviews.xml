<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/event_header" android:layout_width="match_parent" android:layout_height="100dp">
        <TextView android:id="@+id/label_event" android:paddingLeft="25dp" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:textColor="@color/white"
                  android:layout_centerVertical="true" android:text="@string/label_login_events"/>
        <ImageView android:id="@+id/icon_event" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_expand_more_white_18dp" android:layout_centerVertical="true"
                   android:layout_alignParentRight="true" android:paddingRight="25dp"/>
        <TextView android:text="123" android:id="@+id/selected_event" android:layout_width="wrap_content" android:textColor="@color/white"
                  android:layout_height="wrap_content" android:layout_toLeftOf="@id/icon_event" android:paddingRight="25dp"
                  android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/event_line" android:layout_width="match_parent" android:layout_height="2dp"
          android:layout_below="@id/event_header" android:background="@color/black"/>
    <ListView android:id="@+id/event_listview" android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_below="@id/event_line"/>

    <RelativeLayout android:id="@+id/area_header" android:layout_width="match_parent" android:layout_height="100dp"
                    android:layout_below="@id/event_listview">
        <TextView android:id="@+id/label_area" android:paddingLeft="25dp" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:textColor="@color/white"
                  android:layout_centerVertical="true" android:text="@string/label_login_course_area"/>
        <ImageView android:id="@+id/icon_area" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_expand_more_white_18dp" android:layout_centerVertical="true"
                   android:layout_alignParentRight="true" android:paddingRight="25dp"/>
    </RelativeLayout>
    <View android:id="@+id/area_line" android:layout_width="match_parent" android:layout_height="2dp"
          android:layout_below="@id/area_header" android:background="@color/black"/>
    <ListView android:id="@+id/area_listview" android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_below="@id/area_line"/>

    <RelativeLayout android:id="@+id/position_header" android:layout_width="match_parent" android:layout_height="100dp"
                    android:layout_below="@id/area_listview">
        <TextView android:id="@+id/label_position" android:paddingLeft="25dp" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:textColor="@color/white"
                  android:layout_centerVertical="true" android:text="@string/label_login_position"/>
        <ImageView android:id="@+id/icon_position" android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_expand_more_white_18dp" android:layout_centerVertical="true"
                   android:layout_alignParentRight="true" android:paddingRight="25dp"/>
    </RelativeLayout>
    <View android:id="@+id/position_line" android:layout_width="match_parent" android:layout_height="2dp"
          android:layout_below="@id/position_header" android:background="@color/black"/>
    <ListView android:id="@+id/position_listview" android:layout_width="match_parent" android:layout_height="0dp"
              android:layout_below="@id/position_line"/>

    <Button android:id="@+id/login_submit" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:text="Sign Me Up"
            android:layout_alignParentEnd="true" android:layout_marginRight="50dp" android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"/>
</RelativeLayout>