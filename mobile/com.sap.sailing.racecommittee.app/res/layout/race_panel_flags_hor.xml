<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/sap_gray"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/postpone_flags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/postpone_flags_marker"
                android:layout_width="@dimen/thin_line"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="?attr/marker"/>

            <include layout="@layout/panel_button_postpone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/abandon_flags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/abandon_flags_marker"
                android:layout_width="@dimen/thin_line"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="?attr/marker"/>

            <include layout="@layout/panel_button_abandon"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recall_flags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recall_flags_marker"
                android:layout_width="@dimen/thin_line"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="?attr/marker"/>

            <include layout="@layout/panel_button_recall"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_flags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/course_flags_marker"
                android:layout_width="@dimen/thin_line"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="?attr/marker"/>

            <include layout="@layout/panel_button_course"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_flags"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/more_flags_marker"
                android:layout_width="@dimen/thin_line"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="?attr/marker"/>

            <include layout="@layout/panel_button_more"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/voice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/voice_marker"
                android:layout_width="@dimen/thin_line"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="?attr/marker"/>

            <include layout="@layout/panel_button_voice_record"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thin_line"
        android:layout_alignParentTop="true"
        android:background="?attr/black"/>
</RelativeLayout>