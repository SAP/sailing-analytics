<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/race_content_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sap_gray">

    <TextView
        android:id="@+id/timer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:gravity="center"
        tools:text="@string/time"
        android:textColor="@color/sap_light_gray"
        android:textSize="@dimen/textSize_40" />

    <ImageView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thin_line"
        android:layout_alignParentBottom="true"
        android:src="@drawable/marker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/default_margin"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sap_light_gray"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textSize_22"
                tools:text="@string/time_start" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_access_time_white_36dp"
                android:drawablePadding="@dimen/default_padding_half"
                android:drawableStart="@drawable/ic_access_time_white_36dp"
                tools:text="@string/time"
                android:textSize="@dimen/textSize_22"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/time_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sap_light_gray"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/time_finish"
                android:textSize="@dimen/textSize_22"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>