<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textChooseAPNovemberTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/choose_running_course_lr"
            android:textSize="16pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <ImageButton
                android:id="@+id/choose_unaone_button"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:contentDescription="@string/flag_ap"
                android:scaleType="fitCenter"
                android:src="@drawable/unaone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lr_course_1"
                android:textSize="16pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <ImageButton
                android:id="@+id/choose_bissotwo_button"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:contentDescription="@string/flag_november"
                android:scaleType="fitCenter"
                android:src="@drawable/bissotwo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lr_course_2"
                android:textSize="16pt" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>