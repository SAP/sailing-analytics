<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/race_reset_confirmation_header"
        android:textAppearance="@style/TextAppearance.Welter.BoldBigTitleLabel" />

    <TextView
        android:id="@+id/textRaceResetRaceInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/race_reset_confirmation_warning"
        android:textAppearance="@style/TextAppearance.Welter.BoldBigTitleLabel" />

</LinearLayout>