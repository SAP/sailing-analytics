<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:paddingTop="2dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="left"
                android:text="@string/please_pick_a_time"
                android:textAppearance="@style/TextAppearance.Welter.AppDescriptionText" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/empty"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_textfield" />

            <TimePicker
                android:id="@+id/setTimeStartTypetimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleX="1.5"
                android:scaleY="1.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="0.5" >

            <Button
                android:id="@+id/btnSetTimeStartTypeRescheduleTime"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="@string/reset_time" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/setTimeStartType_time_below_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:scaleY="1"
        android:text="@string/time_until_start"
        android:textAppearance="@style/TextAppearance.Welter.AppDescriptionText" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/empty"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setTimeStartType_raceStartTypeRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/select_raceStartType"
                android:textAppearance="@style/TextAppearance.Welter.AppDescriptionText" />
            
            <RadioGroup android:id="@+id/radioGroupRaceStartType" 
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonGateStart"
                    android:checked="true"
                    android:text="@string/gateStart_mode" />

                <RadioButton
                    android:id="@+id/radioButtonFixedLineStart"
                    android:text="@string/fixedLine" />
            </RadioGroup>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/setTimeStartType_resetTimeAPButton"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:contentDescription="@string/flag_ap"
                android:scaleType="fitCenter"
                android:src="@drawable/ap_flag" />

            <TextView
                android:id="@+id/setTimeStartType_apButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/postpone_race"
                android:textAppearance="@style/TextAppearance.Welter.AppDescriptionText" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>