<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Welter.Cell.Draggable.Waypoint.Item"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="6dip">

    <ImageView
        android:id="@id/drag_handle"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/drag_symbol"
        android:contentDescription="@string/drag_handle_description" />

    <LinearLayout
        android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.columnOne"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.columnOne.imgImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/markImage"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.columnOne.txtLeftMark"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:textColor="@drawable/text_selector"
            android:textIsSelectable="false"
            android:textSize="5pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.txtRoundingDirection"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@drawable/text_selector"
        android:textIsSelectable="false"
        android:textSize="7pt" />

    <LinearLayout
        android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.columnThree"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.columnThree.imgImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/markImage"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/Welter.Cell.Draggable.Waypoint.Item.columnThree.txtRightMark"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:textColor="@drawable/text_selector"
            android:textIsSelectable="false"
            android:textSize="5pt" />
    </LinearLayout>
</LinearLayout>
