<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/finished_panel_left"
        layout="@layout/race_finished_left"
        android:layout_width="@dimen/side_button_width_large"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/finished_panel_right"
        layout="@layout/race_finished_right"
        android:layout_width="@dimen/side_button_width_large"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <include
        android:id="@+id/finished_content"
        layout="@layout/race_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/finished_panel_left"
        android:layout_toLeftOf="@id/finished_panel_right" />

</RelativeLayout>