<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/side_button_width_large"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/record_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/voice_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/finished_recording"
            android:textAllCaps="true"
            android:textColor="?sap_light_gray"
            android:textSize="@dimen/textSize_22" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/voice_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/default_padding"
                android:drawableTop="?hearing_48dp"
                android:text="@string/finished_replay"
                android:textAppearance="?textNormal" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/thin_line"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?black" />

        <ImageView
            android:id="@+id/record_marker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_line"
            android:layout_alignParentBottom="true"
            android:background="@drawable/marker" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photo_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/photo_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/finished_list"
            android:textAllCaps="true"
            android:textColor="?sap_light_gray"
            android:textSize="@dimen/textSize_22" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/photo_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/default_padding"
                android:drawableTop="?photo_camera_48dp"
                android:text="@string/finished_photos"
                android:textAppearance="?textNormal" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/thin_line"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?black" />

        <ImageView
            android:id="@+id/photo_marker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_line"
            android:layout_alignParentBottom="true"
            android:background="@drawable/marker" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/list_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/finished_tracking"
            android:textAllCaps="true"
            android:textColor="?sap_light_gray"
            android:textSize="@dimen/textSize_22" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/list_header">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/default_padding"
                android:drawableTop="?dns_48dp"
                android:text="@string/finished_edit"
                android:textAppearance="?textNormal" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/thin_line"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?black" />

        <View
            android:id="@+id/list_marker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_line"
            android:layout_alignParentBottom="true"
            android:background="@drawable/marker" />
    </RelativeLayout>
</LinearLayout>