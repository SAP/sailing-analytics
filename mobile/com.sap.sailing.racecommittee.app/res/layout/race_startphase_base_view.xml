<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/race_startphase_base_start_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Welter.ExtraBigTitleLabel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/race_startphase_base_next_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel"
        android:visibility="gone" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/empty"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <include
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.618"
            layout="@layout/race_flag_space"
            android:visibility="gone" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#DADADA"
            android:visibility="gone" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ViewStub
                    android:id="@+id/race_startphase_base_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/race_startphase_base_abort_button"
                    android:layout_width="200dp"
                    android:layout_height="110dp"
                    android:contentDescription="@string/flag_ap"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ap_flag" />

                <TextView
                    android:id="@+id/abortingFlagButtonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/abort_starting_phase"
                    android:textAppearance="@style/TextAppearance.Welter.TitleLabel" />

                <Button
                    android:id="@+id/race_startphase_base_reset_time_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="@string/reset_time" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>