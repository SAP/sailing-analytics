<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/finished_panel_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/side_button_large"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/finished_panel_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/side_button_large"
        android:layout_alignParentBottom="true"/>

    <FrameLayout
        android:id="@+id/finished_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/finished_panel_desc"
        android:layout_below="@id/finished_panel_buttons"/>

    <FrameLayout
        android:id="@+id/finished_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>