<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/side_button_width_large"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:background="@drawable/border_gray"
            android:padding="@dimen/default_padding_half"
            android:textAppearance="?textNormal"
            android:layout_centerInParent="true"
            android:text="@string/protest_time"
            android:id="@+id/protest_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_line"
            android:background="?black"
            android:layout_alignParentBottom="true" />

        <View
            android:layout_width="@dimen/thin_line"
            android:layout_height="match_parent"
            android:background="?black"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="?sap_light_gray"
            android:textSize="@dimen/textSize_20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/finished_publishing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:layout_centerInParent="true"
            android:text="@string/finished_text_01"
            android:gravity="center"
            style="?textSmall"
            android:id="@+id/publish_advice" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/default_margin_twice"
            android:text="@string/finished_submit"
            style="?buttonSolidSmall"
            android:id="@+id/submit_button" />

        <View
            android:layout_width="@dimen/thin_line"
            android:layout_height="match_parent"
            android:background="?black"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</LinearLayout>