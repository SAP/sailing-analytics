<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/listView_row_height"
                android:paddingEnd="@dimen/listView_row_padding"
                android:paddingLeft="@dimen/listView_row_padding"
                android:paddingRight="@dimen/listView_row_padding"
                android:paddingStart="@dimen/listView_row_padding"
                android:paddingTop="@dimen/listView_row_padding">

    <ImageView
        android:id="@+id/set_path_finder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_right_grey600_24dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/set_path_finder"
        android:layout_toStartOf="@+id/set_path_finder"
        android:src="?check_18dp"/>

    <TextView
        android:id="@+id/start_procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/checked"
        android:padding="@dimen/default_padding_half"
        android:textAppearance="?textNormal"
        tools:text="Zulu"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thick_line"
        android:layout_alignParentBottom="true"
        android:background="?sap_gray"/>
</RelativeLayout>