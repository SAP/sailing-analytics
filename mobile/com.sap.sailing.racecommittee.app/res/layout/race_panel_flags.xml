<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/side_button_width"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?sap_gray">

        <RelativeLayout
            android:id="@+id/postpone_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/postpone_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="@drawable/marker" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:src="@drawable/flags_postpone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/flags_postpone"
                    android:textSize="@dimen/textSize_22" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/abandon_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/abandon_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="@drawable/marker" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:src="@drawable/flags_abandon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/flags_abandon"
                    android:textSize="@dimen/textSize_22" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recall_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recall_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="@drawable/marker" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:src="@drawable/flags_recall" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/flags_recall"
                    android:textSize="@dimen/textSize_22" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/course_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="@drawable/marker" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:src="@drawable/flags_course" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/flags_course"
                    android:textSize="@dimen/textSize_22" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/more_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="@drawable/marker" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:src="@drawable/flags_more" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/flags_more"
                    android:textSize="@dimen/textSize_22" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/thin_line"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?black" />
</RelativeLayout>