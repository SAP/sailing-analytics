<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/side_button_width"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?sap_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/postpone_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/postpone_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:layout_gravity="center_horizontal"
                    android:src="?flags_postpone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flags_postpone"
                    android:textAppearance="?textPanelCaption"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/abandon_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/abandon_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:gravity="center_horizontal"
                    android:src="?flags_abandon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/flags_abandon"
                    android:textAppearance="?textPanelCaption"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recall_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recall_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:gravity="center_horizontal"
                    android:src="?flags_recall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/flags_recall"
                    android:textAppearance="?textPanelCaption"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/course_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:layout_gravity="center_horizontal"
                    android:src="?flags_course"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/flags_course"
                    android:textAppearance="?textPanelCaption"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/more_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/side_button_imageSize"
                    android:layout_height="@dimen/side_button_imageSize"
                    android:gravity="center_horizontal"
                    android:src="?flags_more"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/flags_more"
                    android:textAppearance="?textPanelCaption"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/voice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/voice_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="?mic_48dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_voice"
                    android:textAppearance="?textPanelCaption"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/thin_line"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?black"/>
</RelativeLayout>