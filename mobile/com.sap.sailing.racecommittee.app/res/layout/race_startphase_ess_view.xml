<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/raceCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Welter.ExtraBigTitleLabel" />

    <TextView
        android:id="@+id/nextFlagCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/empty"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/flagDisplaySpaceLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.618"
            android:gravity="fill_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/upFlagsSpace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/currentlyDisplayedFlag"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/start_mode_flag"
                    android:src="@drawable/ap_flag" />

                <com.sap.sailing.racecommittee.app.ui.views.VerticalTextView
                    android:id="@+id/flagsUpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/flags_up"
                    android:textAppearance="@style/TextAppearance.Welter.VeryBigTitleLabel" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/downFlagsSpace"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/nextFlagToBeDisplayed"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/start_mode_flag"
                    android:src="@drawable/three_min_flag" />

                <com.sap.sailing.racecommittee.app.ui.views.VerticalTextView
                    android:id="@+id/flagsDownLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/flags_down"
                    android:textAppearance="@style/TextAppearance.Welter.VeryBigTitleLabel" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#DADADA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.99"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/abortingFlagButton"
                android:layout_width="200dp"
                android:layout_height="110dp"
                android:contentDescription="@string/flag_ap"
                android:scaleType="fitCenter"
                android:src="@drawable/ap_flag" />

            <TextView
                android:id="@+id/abortingFlagButtonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="2dp"
                android:text="@string/abort_starting_phase"
                android:textAppearance="@style/TextAppearance.Welter.TitleLabel" />

            <Button
                android:id="@+id/resetTimeButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/reset_time" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>