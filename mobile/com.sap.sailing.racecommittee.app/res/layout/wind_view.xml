<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:background="@color/welter_extralight_gray_transparent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_wind_direction"
                android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_direction_degrees" />

            <EditText
                android:id="@+id/editTextWindDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/in_degrees"
                android:inputType="numberDecimal"
                android:minWidth="200dp"
                android:textSize="24sp" />

            <com.sap.sailing.racecommittee.app.ui.views.CompassView
                android:id="@+id/compassView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.sap.sailing.racecommittee.app.ui.views.CompassView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_margin="18dp"
            android:background="@color/welter_deep_gray"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_marginRight="26dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_wind_speed"
                android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wind_speed_knots" />

            <EditText
                android:id="@+id/editTextWindSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/in_knots"
                android:inputType="numberDecimal"
                android:minWidth="200dp"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekbar_wind_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="500"
                android:padding="10dp"
                android:progress="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="@string/check_all_data"
                android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel" />

            <TextView
                android:id="@+id/textWaitingForGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waiting_for_gps"
                android:textAppearance="@style/TextAppearance.Welter.TitleLabel"
                android:textColor="@color/welter_red"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_wind_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/store_wind" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>