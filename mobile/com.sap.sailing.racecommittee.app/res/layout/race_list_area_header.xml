<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_drawer_cell_height"
    android:background="?sap_gray">

    <ImageView
        android:id="@+id/protest_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        tools:src="@drawable/flag_bravo_48dp"/>

    <ImageView
        android:id="@+id/delimiter_line"
        android:layout_width="@dimen/thin_line"
        android:layout_height="match_parent"
        android:background="?black"
        android:layout_toStartOf="@id/protest_image"/>

    <ImageView
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thin_line"
        android:background="?black"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/navigation_drawer_left_padding"
        android:layout_toStartOf="@id/delimiter_line"
        android:orientation="vertical">

        <TextView
            android:id="@+id/boat_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?textNormal"
            tools:text="Extreme 40"/>

        <TextView
            android:id="@+id/fleet_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?textSmall"
            tools:text="Day 1 - Yellow"/>
    </LinearLayout>
</RelativeLayout>