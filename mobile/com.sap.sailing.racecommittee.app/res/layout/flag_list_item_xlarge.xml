<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/line"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/flag"
        android:layout_width="@dimen/flags"
        android:layout_height="@dimen/flags"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin_half"
        android:padding="5dp"
        tools:src="?attr/flag_ap_hotel_96dp"/>

    <ImageView
        android:id="@+id/more_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/side_padding"
        android:src="@drawable/ic_chevron_right_grey600_24dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/confirm"
        style="?attr/buttonSolidNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_toLeftOf="@id/more_data"
        android:text="@string/set_signal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/side_padding"
        android:layout_marginLeft="@dimen/default_margin_half"
        android:layout_marginRight="@dimen/default_margin_half"
        android:layout_marginTop="@dimen/side_padding"
        android:layout_toLeftOf="@id/confirm"
        android:layout_toRightOf="@id/flag"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="?attr/white"
            android:textSize="@dimen/checked_item_text"
            tools:text="Xray"/>

        <TextView
            android:id="@+id/second_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="?attr/white"
            android:textSize="@dimen/checked_item_small_text"
            tools:text="Individual Recall"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/thick_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/default_margin_half"
        android:layout_marginRight="@dimen/side_padding"
        android:layout_toRightOf="@id/flag"
        android:background="?attr/sap_gray"/>
</RelativeLayout>