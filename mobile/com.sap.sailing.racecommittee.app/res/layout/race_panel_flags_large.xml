<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/side_button"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?sap_gray"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/postpone_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/postpone_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <include layout="@layout/race_panel_flags_postpone"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/abandon_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/abandon_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <include layout="@layout/race_panel_flags_abandon"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recall_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/recall_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <include layout="@layout/race_panel_flags_recall"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/course_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <include layout="@layout/race_panel_flags_course"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_flags"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/more_flags_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <include layout="@layout/race_panel_flags_more"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/voice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/voice_marker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/thin_line"
                android:layout_alignParentBottom="true"
                android:src="?marker"/>

            <include layout="@layout/race_panel_flags_record"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/thin_line"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?black"/>
</RelativeLayout>