<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Welter.Cell.Positioning"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/drag_handle"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_weight="0"
        android:background="@drawable/drag_symbol"
        android:contentDescription="@string/drag_handle_description" />
    
    <TextView
        android:id="@+id/Welter.Cell.Positioning.columnOne.txtTitle"
        android:layout_marginLeft="5dp"
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@drawable/text_selector"
        android:textSize="9pt"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/Welter.Cell.Positioning.columnTwo.txtTitle"
        android:layout_width="215dp"
        android:layout_height="fill_parent"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:textColor="@drawable/text_selector"
        android:textSize="9pt"
        android:textIsSelectable="false" />

</LinearLayout>