<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/race_schedule_course_header"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:background="?attr/sap_gray_black_30">

        <RelativeLayout
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/sap_gray_black_30"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chooser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_prev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/load_prev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/side_padding"
                android:paddingLeft="@dimen/side_padding"
                android:paddingRight="@dimen/side_padding"
                android:paddingTop="@dimen/side_padding">

                <Button
                    android:id="@+id/takeHistoryCourse"
                    style="?attr/button"
                    android:layout_width="@dimen/default_button_width"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/side_padding"
                    android:paddingRight="@dimen/side_padding"
                    android:text="@string/take_previous_short"
                    android:textSize="@dimen/textSize_18"/>
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/previous_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/load_prev"
                android:layout_margin="@dimen/side_padding"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/assets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/side_padding"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/course_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/side_padding"
                android:paddingLeft="@dimen/side_padding"
                android:paddingRight="@dimen/side_padding"
                android:paddingTop="@dimen/side_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/publishCourse"
                        style="?attr/button"
                        android:layout_width="@dimen/default_button_width"
                        android:layout_height="@dimen/default_button_height"
                        android:layout_marginBottom="@dimen/side_padding"
                        android:text="@string/publish"
                        android:textSize="@dimen/textSize_18"/>

                    <Button
                        android:id="@+id/unpublishCourse"
                        style="?attr/button"
                        android:layout_width="@dimen/default_button_width"
                        android:layout_height="@dimen/default_button_height"
                        android:text="@string/unpublish"
                        android:textSize="@dimen/textSize_18"/>
                </LinearLayout>
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/new_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottom_bar"/>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>