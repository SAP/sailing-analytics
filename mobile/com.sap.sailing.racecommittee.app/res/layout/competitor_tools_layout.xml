<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tools_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp">

    <FrameLayout
        android:id="@+id/list_button_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/sap_gray">

        <ImageView
            android:id="@+id/list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="?attr/list_single_24dp" />
    </FrameLayout>

    <com.sap.sailing.racecommittee.app.ui.views.SearchView
        android:id="@+id/competitor_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <FrameLayout
        android:id="@+id/competitor_sort"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/competitor_search"
        android:background="?attr/sap_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="?attr/sortby_24dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/competitor_entry_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/competitor_sort"
        android:layout_toRightOf="@id/list_button_layout" />

</RelativeLayout>
