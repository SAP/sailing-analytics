<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/race_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/sap_gray_black_30"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/racing_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/panel_left"
        android:layout_toLeftOf="@id/panel_right"
        android:layout_toRightOf="@id/panel_left"
        android:layout_toStartOf="@id/panel_right"/>
</RelativeLayout>