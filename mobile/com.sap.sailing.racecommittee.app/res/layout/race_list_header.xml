<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_drawer_image_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/constant_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/nav_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/round_button"
        android:padding="10dp"
        android:src="@drawable/ic_assignment_white_48dp" />

    <TextView
        android:id="@+id/regatta_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/nav_button"
        android:layout_toStartOf="@id/nav_button"
        tools:text="Marina Bay / Viewer"
        android:textSize="@dimen/textSize_32"
        android:paddingLeft="@dimen/default_padding_half"
        android:paddingRight="@dimen/default_padding_half"
        android:textColor="@color/constant_white"
        />

    <TextView
        android:id="@+id/regatta_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nav_button"
        android:layout_toStartOf="@id/nav_button"
        android:layout_above="@id/regatta_data"
        android:paddingLeft="@dimen/default_padding_half"
        android:paddingRight="@dimen/default_padding_half"
        android:singleLine="true"
        android:textColor="@color/constant_white"
        tools:text="Extreme Sailing Series 2015 Act 1 Singapore"
        android:textSize="@dimen/textSize_32" />
</RelativeLayout>
