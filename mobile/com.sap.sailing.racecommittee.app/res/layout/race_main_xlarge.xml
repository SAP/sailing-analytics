<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/race_panel_setup"
        android:layout_width="@dimen/side_button"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/race_panel_flags"
        android:layout_width="@dimen/side_button"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/race_panel_flags"
        android:layout_toRightOf="@id/race_panel_setup"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/race_panel_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"/>

        <RelativeLayout
            android:id="@+id/race_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/race_panel_extra"
        android:layout_width="@dimen/side_button"
        android:layout_height="@dimen/side_button"/>

    <FrameLayout
        android:id="@+id/protest_time_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
