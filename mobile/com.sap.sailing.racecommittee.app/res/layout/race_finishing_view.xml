<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/raceCountUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currentlyLoading"
        android:textAppearance="@style/TextAppearance.Welter.ExtraBigTitleLabel" />

    <TextView
        android:id="@+id/nextFlagCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Welter.BigTitleLabel" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@android:drawable/divider_horizontal_textfield" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <!-- DISPLAY SECTION -->

        <RelativeLayout
            android:id="@+id/InnerRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.618"
            android:gravity="fill_horizontal" >

            <ImageView
                android:id="@+id/blueFlag"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:contentDescription="@string/flag_blue"
                android:src="@drawable/blue_flag_mini" />

            <ImageView
                android:id="@+id/xrayFlag"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:contentDescription="@string/flag_Xray"
                android:src="@drawable/xray_flag"
                android:visibility="gone" />
            
            <ImageView
                android:id="@+id/golfFlag"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:contentDescription="@string/flag_golf"
                android:src="@drawable/golf_flag"
                android:visibility="gone" />

            <!-- END DISPLAY SECTION -->

            <com.sap.sailing.racecommittee.app.ui.views.VerticalTextView
                android:id="@+id/flagsUpLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="@string/flags_up"
                android:textAppearance="@style/TextAppearance.Welter.VeryBigTitleLabel" />

            <com.sap.sailing.racecommittee.app.ui.views.VerticalTextView
                android:id="@+id/flagsDownLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:text="@string/flags_down"
                android:textAppearance="@style/TextAppearance.Welter.VeryBigTitleLabel" />
            </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#DADADA" />

