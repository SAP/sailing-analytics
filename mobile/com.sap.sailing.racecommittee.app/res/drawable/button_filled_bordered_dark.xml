<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <solid
                android:color="@color/constant_sap_yellow_1"/>

            <stroke
                android:width="@dimen/thin_line"
                android:color="@color/dark_sap_gray_white_10"/>

            <corners
                android:radius="0dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <solid
                android:color="@color/dark_sap_gray"/>

            <stroke
                android:width="@dimen/thin_line"
                android:color="@color/dark_sap_gray_white_10"/>

            <corners
                android:radius="0dp"/>
        </shape>
    </item>
</selector>