<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme using Material Design here. -->
        <item name="android:buttonStyle">@style/shadowLessButtonStyle</item>
        <item name="android:colorPrimaryDark">@color/fiori_primary_color</item>
    </style>
    
    <style name="shadowLessButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
