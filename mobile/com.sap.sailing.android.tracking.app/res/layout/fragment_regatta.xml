<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="215dp" >

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/picture" />

        <LinearLayout
            android:id="@+id/add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/white_transparent"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/add_photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/add_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Add Team Photo"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/competitor_info_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/black_transparent"
            android:baselineAligned="false"
            android:measureWithLargestChild="false"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/competitor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="Peter von Mustermann"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/flag_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.53"
                android:cropToPadding="true"
                android:gravity="right|center_vertical"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ar"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:padding="0dp"
                android:text="GER 13"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/competitor_info_layout"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/background_box"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageButton
                android:id="@+id/change_photo_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>

        <View
            android:id="@+id/bottom_bar"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_alignBottom="@+id/competitor_info_layout"
            android:layout_alignParentLeft="true"
            android:background="@color/sap_yellow" />

        <View
            android:id="@+id/top_bar"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/sap_yellow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_date_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/start_tracking_box"
        android:layout_below="@id/image"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/regatta_starts_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/regatta_starts_in"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/three_boxes_regatta_starts"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/regatta_starts_in"
            android:baselineAligned="false"
            android:gravity="center|top"
            android:measureWithLargestChild="false"
            android:orientation="horizontal"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/three_boxes_days_box"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/regatta_starts_in"
                android:layout_margin="5dp"
                android:background="@drawable/background_box"
                android:baselineAligned="false"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/starts_in_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/starts_in_days_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/days"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_boxes_hours_box"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/regatta_starts_in"
                android:layout_margin="5dp"
                android:background="@drawable/background_box"
                android:baselineAligned="false"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/starts_in_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/starts_in_hours_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/hours"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/three_boxes_minutes_box"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/regatta_starts_in"
                android:layout_margin="5dp"
                android:background="@drawable/background_box"
                android:baselineAligned="false"
                android:gravity="center"
                android:measureWithLargestChild="false"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/starts_in_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/starts_in_minutes_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/minutes"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_tracking_box"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@id/bottomLayout"
        android:background="@color/gray" >

        <View
            android:id="@+id/white_bar"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white_transparent" />

        <Button
            android:id="@+id/start_tracking"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/rounded_btn_green"
            android:padding="10dp"
            android:text="@string/start_tracking"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/please_listen_to_announcements"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>