<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_background">

    <com.sap.sailing.android.shared.ui.customviews.OpenSansToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp">

            <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/toolbar_text_color"
                android:textSize="16sp"/>

            <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
                android:id="@+id/toolbar_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/toolbar_text_color"
                android:textSize="12sp"/>
        </LinearLayout>
    </com.sap.sailing.android.shared.ui.customviews.OpenSansToolbar>

    <View
        android:id="@+id/toolbar_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_separator_height"
        android:layout_below="@id/toolbar"
        android:background="@color/separator_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/stop_tracking"
        android:layout_below="@id/toolbar_separator"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tracking_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="0dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/stop_tracking"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/title_page_indicator"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/stop_tracking_button"
        android:padding="0dp"
        android:text="@string/stop_tracking"
        android:textSize="@dimen/highlight_text_size"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/title_page_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"/>

</RelativeLayout>