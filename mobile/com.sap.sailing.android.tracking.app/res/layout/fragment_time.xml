<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:paddingTop="15dp">

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/tracking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:text="@string/tracking_time"/>

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/wait_for_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tracking_time"
            android:layout_toEndOf="@+id/tracking_time"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentTop="true"
            android:text="@string/waiting_for_gps"/>

        <com.sap.sailing.android.shared.ui.customviews.AutoResizeLightTextView
            tools:ignore="InconsistentLayout"
            android:id="@+id/tracking_time_label"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/initial_timer_text_zerozero"
            android:gravity="center"
            android:textSize="100sp"/>

    </RelativeLayout>
</RelativeLayout>