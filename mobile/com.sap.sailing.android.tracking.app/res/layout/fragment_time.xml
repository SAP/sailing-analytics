<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:paddingTop="15dp">

    <TextView
        android:id="@+id/tracking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/tracking_time"
        android:textColor="@color/fiori_text_color"
        android:textSize="@dimen/default_text_size"/>

    <TextView
        android:id="@+id/wait_for_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tracking_time"
        android:layout_toRightOf="@+id/tracking_time"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/waiting_for_gps"
        android:textColor="@color/fiori_text_color"
        android:textSize="@dimen/default_text_size"/>

    <com.sap.sailing.android.shared.ui.customviews.AutoResizeLightTextView
        android:id="@+id/tracking_time_label"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/initial_timer_text_zerozero"
        android:textSize="100sp"
        tools:ignore="InconsistentLayout"/>

</RelativeLayout>