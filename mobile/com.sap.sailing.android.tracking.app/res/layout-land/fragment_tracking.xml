<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/mode_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gps_quality"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tracking_mode" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/mode_label"
            android:layout_alignBottom="@id/mode_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="@string/tracking_mode_caching"
            android:textColor="@color/sap_green" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/tracking_unsent_fixes_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/mode_label"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tracking_unsent_fixes" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/tracking_unsent_fixes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBaseline="@id/tracking_unsent_fixes_label"
            android:layout_alignBottom="@id/tracking_unsent_fixes_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="@string/none" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/tracking_status_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/tracking_unsent_fixes_label"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tracking_status" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/tracking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tracking_status_label"
            android:layout_alignBottom="@id/tracking_status_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text="@string/tracking_status_tracking"
            android:textColor="@color/sap_green" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/gps_quality"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tracking_gps_accuracy" />

        <!-- Separators -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mode_label"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tracking_unsent_fixes_label"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tracking_status_label"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/gps_quality"
            android:background="@android:color/darker_gray" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/tracking_time_info_label"
            android:background="@android:color/darker_gray" />

        <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
            android:id="@+id/tracking_time_info_label"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tracking_status_label"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/tracking_time" />

        <com.sap.sailing.android.shared.ui.customviews.AutoResizeTextView
            tools:ignore="InconsistentLayout"
            android:id="@+id/tracking_time_label"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/tracking_time_info_label"
            android:layout_alignBottom="@+id/tracking_time_info_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="end"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/initial_timer_text_zerozero" />

       <LinearLayout
            android:id="@+id/gps_quality_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal" >

            <com.sap.sailing.android.shared.ui.customviews.OpenSansTextView
                android:id="@+id/gps_accuracy_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="9dp"
                android:paddingLeft="9dp"
                android:text="" />

            <com.sap.sailing.android.shared.ui.customviews.SignalQualityIndicatorView
                android:id="@+id/gps_quality_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/signal_accuracy_indicator_view_description"
                android:focusable="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                app:signalQuality="none" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
