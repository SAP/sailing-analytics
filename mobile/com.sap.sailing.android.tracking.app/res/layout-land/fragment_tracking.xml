<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.sap.sailing.android.tracking.app.views"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sap.sailing.android.tracking.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black" >

    <ScrollView
        android:id="@+id/SonucScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black" >

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/mode_label"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/gps_quality"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/tracking_mode" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/mode_label"
                android:layout_alignBottom="@id/mode_label"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:text="@string/tracking_mode_caching"
                android:textColor="@color/sap_green" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/tracking_unsent_fixes_label"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/mode_label"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/tracking_unsent_fixes" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/tracking_unsent_fixes"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignBaseline="@id/tracking_unsent_fixes_label"
                android:layout_alignBottom="@id/tracking_unsent_fixes_label"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:text="@string/zero" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/tracking_status_label"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/tracking_unsent_fixes_label"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/tracking_status" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/tracking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tracking_status_label"
                android:layout_alignBottom="@id/tracking_status_label"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:text="@string/tracking_status_tracking"
                android:textColor="@color/sap_green" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/gps_quality"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/tracking_gps_accuracy" />

            <!-- Separators -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mode_label"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tracking_unsent_fixes_label"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tracking_status_label"
                android:background="@android:color/darker_gray" />
            
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/gps_quality"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tracking_time_info_label"
                android:background="@android:color/darker_gray" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                android:id="@+id/tracking_time_info_label"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tracking_status_label"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/tracking_time" />

            <com.sap.sailing.android.tracking.app.customviews.AutoResizeTextView
                android:id="@+id/tracking_time_label"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/tracking_time_info_label"
                android:layout_alignBottom="@+id/tracking_time_info_label"
                android:layout_alignParentLeft="true"
                android:gravity="right"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="00:00:00" />

           <LinearLayout
                android:id="@+id/gps_quality_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >
                
                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                    android:id="@+id/gps_accuracy_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/gps_quality"
                    android:layout_alignLeft="@+id/gps_quality_indicator"
                    android:paddingRight="9dp"
                    android:text="" />

                <com.sap.sailing.android.tracking.app.customviews.SignalQualityIndicatorView
                    android:id="@+id/gps_quality_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/signal_accuracy_indicator_view_description"
                    android:focusable="true"
                    android:paddingRight="10dp"
                    app:signalQuality="none" />
                
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/stop_tracking_box"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white_transparent" />

        <com.sap.sailing.android.tracking.app.customviews.OpenSansButton
            android:id="@+id/stop_tracking"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/rounded_btn_red"
            android:padding="10dp"
            android:text="@string/stop_tracking"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>