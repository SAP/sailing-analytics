<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/sap_yellow" />

    <LinearLayout
        android:id="@+id/two_panels_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/start_tracking_box"
        android:layout_below="@id/top_bar"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc_regatta_user_image"
                android:scaleType="centerCrop"
                android:src="@drawable/picture" />

            <LinearLayout
                android:id="@+id/add_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white_transparent"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/add_photo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/desc_add_photo_button"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_menu_camera" />

                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                    android:id="@+id/add_photo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text="@string/add_team_photo"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/competitor_info_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/black_transparent"
                android:baselineAligned="false"
                android:measureWithLargestChild="false"
                android:orientation="horizontal"
                android:padding="10dp" >

                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                    android:id="@+id/competitor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:text=""
                    android:textColor="@color/white" />
                
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.53"
                    android:cropToPadding="true"
                    android:gravity="right"
                    android:paddingTop="3dp"
                	android:paddingBottom="3dp"
                    android:paddingRight="5dp" >

                    <ImageView
                        android:id="@+id/flag_image"
                        android:layout_width="20dp"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/content_description_flag_icon"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                    android:id="@+id/sail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:padding="0dp"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/competitor_info_layout"
                android:layout_toRightOf="@+id/add_photo"
                android:background="@drawable/background_transparent_box"
                android:orientation="horizontal"
                android:padding="0dp" >

                <Button
                    android:id="@+id/change_photo_button"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/stift" />
            </LinearLayout>
        </RelativeLayout>

        <!-- RIGHT SIDE -->

        <RelativeLayout
            android:id="@+id/right_side_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/black"
                android:isScrollContainer="true"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:id="@+id/thank_you_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:measureWithLargestChild="false"
                        android:orientation="horizontal"
                        android:visibility="invisible" >

                        <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                            android:id="@+id/thank_you_note"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:padding="5dp"
                            android:text="@string/thank_you_you_successfully_participated"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/start_date_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:baselineAligned="false"
                        android:measureWithLargestChild="false"
                        android:orientation="horizontal" >

                        <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                            android:id="@+id/regatta_starts_in"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:text="@string/regatta_starts_in"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/three_boxes_regatta_starts"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_below="@+id/regatta_starts_in"
                            android:baselineAligned="false"
                            android:gravity="center"
                            android:measureWithLargestChild="false"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <LinearLayout
                                android:id="@+id/three_boxes_days_box"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/background_box"
                                android:baselineAligned="false"
                                android:gravity="center"
                                android:measureWithLargestChild="false"
                                android:orientation="vertical"
                                android:padding="0dp" >

                                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                                    android:id="@+id/starts_in_days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:textColor="@color/white"
                                    android:textSize="40sp" />

                                <com.sap.sailing.android.tracking.app.customviews.AutoResizeTextView
                                    android:id="@+id/starts_in_days_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:padding="0dp"
                                    android:text="@string/days"
                                    android:singleLine="true"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/three_boxes_hours_box"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/background_box"
                                android:baselineAligned="false"
                                android:gravity="center"
                                android:measureWithLargestChild="false"
                                android:orientation="vertical"
                                android:padding="0dp" >

                                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                                    android:id="@+id/starts_in_hours"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:textColor="@color/white"
                                    android:textSize="40sp" />

                                <com.sap.sailing.android.tracking.app.customviews.AutoResizeTextView
                                    android:id="@+id/starts_in_hours_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:padding="0dp"
                                    android:text="@string/hours"
                                    android:singleLine="true"
                                    android:textColor="@color/white" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/three_boxes_minutes_box"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@drawable/background_box"
                                android:baselineAligned="false"
                                android:gravity="center"
                                android:measureWithLargestChild="false"
                                android:orientation="vertical"
                                android:padding="0dp" >

                                <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
                                    android:id="@+id/starts_in_minutes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:textColor="@color/white"
                                    android:textSize="40sp" />

                                <com.sap.sailing.android.tracking.app.customviews.AutoResizeTextView
                                    android:id="@+id/starts_in_minutes_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:padding="0dp"
                                    android:text="@string/minutes"
                                    android:singleLine="true"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_above="@+id/start_tracking_box"
        android:layout_alignParentLeft="true"
        android:background="@color/sap_yellow" />

    <RelativeLayout
        android:id="@+id/start_tracking_box"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_above="@id/bottomLayout"
        android:background="@color/gray" >

        <View
            android:id="@+id/white_bar"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white_transparent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/white_bar"
            android:orientation="horizontal" >

            <com.sap.sailing.android.tracking.app.customviews.OpenSansButton
                android:id="@+id/show_leaderboards_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.50"
                android:background="@drawable/rounded_btn_yellow"
                android:padding="5dp"
                android:text="@string/show_leaderboard"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <com.sap.sailing.android.tracking.app.customviews.OpenSansButton
                android:id="@+id/start_tracking"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.50"
                android:background="@drawable/rounded_btn_green"
                android:padding="5dp"
                android:text="@string/start_tracking"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/darker_gray" >

        <com.sap.sailing.android.tracking.app.customviews.OpenSansTextView
            android:id="@+id/bottom_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/please_listen_to_announcements"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>