
<metal:do use-macro="main">

    <metal:do fill-slot="main">
        <tal:do define="started view.session.get('started', False)">
            <tal:if condition="started">
            Hello
            </tal:if>

            <tal:else condition="not started">
            <b>It seems that you did not start the listener. Please do so before trying to display waypoint info.</b>
            </tal:else>
        </tal:do>
    </metal:do>

</metal:do>
