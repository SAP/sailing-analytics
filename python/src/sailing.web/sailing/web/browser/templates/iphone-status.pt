<!DOCTYPE html>
<html>
  <head>
    <title>SAP Sailing Analytics</title>
    <meta content='width = device-width, initial-scale = 2.3, user-scalable = no' name='viewport'>
    <meta content='yes' name='apple-mobile-web-app-capable'>
    <meta content='black' name='apple-mobile-web-app-status-bar-style'>
    <link href='${request.application_url}/moderator-static/iphone-splash-screen.png' rel='apple-touch-startup-image'>
    <link href='${request.application_url}/moderator-static/sap-sailing-app-icon.png' rel='apple-touch-icon-precomposed'>
    <link href='${request.application_url}/moderator-static/mobile.css' media='screen' rel='stylesheet' type='text/css'>
  </head>
  <body tal:define="event view.currentIPhoneEvent()">
    <form>
      <ul class='overview'>
        <li class='event'>
            <h2>Event: ${event.name}</h2>
        </li>
        <li class='current-race'>
          <select>
            <tal:for repeat="racename event.races">
                <tal:do define="race view.raceBy(event.name, racename)">
                <option>${race.name} {len(race.current_legs)&gt;0 and '(Running)' or ''}</option>
                </tal:do>
            </tal:for>
          </select>
        </li>
      </ul>
    </form>
    <table class='race-table' id='r1-m1'>
      <thead>
        <tr>
          <th colid='1'>
            <span>Rank</span>
          </th>
          <th colid='2'>
            <span>Name</span>
          </th>
          <th colid='3'>
            <span>Gap</span>
          </th>
        </tr>
      </thead>
      <tbody>
        <tal:for repeat="">
        <tr class='odd' rowid='1'>
          <td>1</td>
          <td>EVANS</td>
          <td>20</td>
        </tr>
        </tal:for>
      </tbody>
    </table>
  </body>
  <script src='${request.application_url}/moderator-static/jquery.js'></script>
</html>
