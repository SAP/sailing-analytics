@require 'theme';

.advantages_on_line_chart_container {
	position: absolute !important;
	top: 0px;
	bottom: 50px;
	left: 0px;
	right: 0px;
	font-family: DASHBOARD_FONT_FAMILY !important;
}

.confidence_bar_container {
	position: absolute;
	height: 50px;
	width: 100%;
	bottom: 0px;
	background-color: white;	
}

.confidence_bar{
	position: absolute;
	top: 0px;
	left: 15px;
	right: 15px;
	height: 15px;
	/* @alternate */ background: -moz-linear-gradient(left, #FFDD00 0%, #008FFF 100%); /* FF3.6+ */
    /* @alternate */ background: -webkit-gradient(linear, left bottom, right bottom, color-stop(0%,#FFDD00), color-stop(100%,#008FFF)); /* Chrome,Safari4+ */
    /* @alternate */ background: -webkit-linear-gradient(left, #FFDD00 0%,#008FFF 100%); /* Chrome10+,Safari5.1+ */
    /* @alternate */ background: -o-linear-gradient(left, #FFDD00 0%,#008FFF 100%); /* Opera 11.10+ */
    /* @alternate */ background: -ms-linear-gradient(left, #FFDD00 0%,#008FFF 100%); /* IE10+ */
    /* @alternate */ background: linear-gradient(to right, #FFDD00 0%,#008FFF 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#FFDD00', endColorstr='#008FFF',GradientType=0 ); /* IE6*/
}

.confidence_bar_header{
	position: absolute;
	top: 0px;
	left: 15px;
	right: 15px;
	height: 15px;
	color: white;
	font-size: 11px;
	text-align: center;
	vertical-align: center;
	font-family: DASHBOARD_FONT_FAMILY !important;
}

.confidence_bar_label {
	position: absolute;
	top: 20px;
	font-size: 12px;
	color: grey;
	font-family: DASHBOARD_FONT_FAMILY !important;
}

.confidence_bar_min_label {
	left: 15px;
}

.confidence_bar_max_label {
	right: 15px;
	text-align: right;
}