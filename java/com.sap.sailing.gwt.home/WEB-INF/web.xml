<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<filter>
		<filter-name>GWTCacheControlServletFilter</filter-name>
		<filter-class>com.sap.sailing.gwt.server.GWTCacheControlServletFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>GWTCacheControlServletFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<display-name>Sailing Events Service</display-name>
	    <servlet-name>SailingEventsService</servlet-name>
    	<servlet-class>com.sap.sailing.gwt.home.server.SailingEventsServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SailingEventsService</servlet-name>
		<url-pattern>/com.sap.sailing.gwt.home.Home/sailingevents</url-pattern>
	</servlet-mapping>
</web-app>
