<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
	<ui:with field='i18n' type='com.sap.sailing.gwt.home.client.i18n.TextMessages'/>
    <ui:style>
		.panel {
		    width: 100%;
		    height: 55px;
			background-color: #FFFFFF;
		}
		.panel:after {
			clear: both;
		}
		.logoAndTitle {
			float: left;
		}
		.menu {
			float: right;	
		}
		.languageSelection {
			float: right;	
		}
    </ui:style>
	<ui:with field="resources" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <g:FlowPanel styleName="{style.panel}">
    	<g:FlowPanel styleName="{style.logoAndTitle}">
    	    <g:Image resource='{resources.sapLogo66}'/>
			<g:Label ui:field="titleLabel" />
    	</g:FlowPanel>
    	<g:FlowPanel styleName="{style.menu}">
			<s:MainMenu />
    	</g:FlowPanel>
    	<g:FlowPanel styleName="{style.languageSelection}">
    		<s:LocaleSelectionComposite ui:field="localeSelectionComposite" />
    	</g:FlowPanel>
		
     </g:FlowPanel>
</ui:UiBinder>