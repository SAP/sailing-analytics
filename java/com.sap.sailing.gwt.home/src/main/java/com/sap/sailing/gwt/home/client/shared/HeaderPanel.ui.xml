<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
	<ui:with field='i18n' type='com.sap.sailing.gwt.home.client.i18n.TextMessages'/>
	<ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
		<ui:style>
.site-header {
  font-size: 16px;
  font-size: 1rem;
  background: #333;
  border-bottom: 5px solid #f0ab00;
  height: 4.0625em;
  line-height: 3.75em;
  width: 100%;
}
.logo {
  margin: 0.625em 0;
  float: left;
}
.navigation {
  float: right;
}
.navigation_link {
  display: inline-block;
  font-size: 0.875em;
  color: #f6f9fc;
  text-transform: uppercase;
  padding: 0 2.1875em;
}
.navigation_link:hover {
  background-color: rgba(246,249,252,0.1);
  text-decoration: none;
}
.navigation_link-search img {
  vertical-align: middle;
}
.navigation-home .navigation_link-home,
.navigation-events .navigation_link-events,
.navigation-boat-classes .navigation_link-boat-classes,
.navigation-solutions .navigation_link-solutions,
.navigation-sponsoring .navigation_link-sponsoring {
  background: #f0ab00;
}
.navigation-home .navigation_link-home:hover,
.navigation-events .navigation_link-events:hover,
.navigation-boat-classes .navigation_link-boat-classes:hover,
.navigation-solutions .navigation_link-solutions:hover,
.navigation-sponsoring .navigation_link-sponsoring:hover {
  background-color: rgba(240,171,0,0.9);
}
    </ui:style>
	<g:HTML>
<header class="{style.site-header}">
  <div class="{res.mainCss.container} {style.site-header}"><img src="images/logo.png" alt="SAP Sailing Analytics" class="{style.logo}"/>
	    <nav class="{style.navigation}">
        <a href="/" class="{style.navigation_link} {style.navigation_link-home}">Home</a>
        <a href="/event.html" class="{style.navigation_link} {style.navigation_link-events}">Events</a>
        <a href="" class="{style.navigation_link} {style.navigation_link-boat-classes}">Boat Classes</a>
        <a href="" class="{style.navigation_link} {style.navigation_link-solutions}">Solutions</a>
        <a href="" class="{style.navigation_link} {style.navigation_link-sponsoring}">Sponsoring</a>
        <a href="" class="{style.navigation_link} {style.navigation_link-search}"><img src="images/search-icon.png" alt="Search"/></a>
        </nav>
  </div>
</header>
	</g:HTML>

</ui:UiBinder>