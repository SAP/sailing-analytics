<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	 xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="i18n" type="com.sap.sse.gwt.theme.client.resources.i18n.TextMessages" />
	<ui:with field="res" type="com.sap.sse.gwt.theme.client.resources.ThemeResources" />
    <ui:with field="local_res" type="com.sap.sse.gwt.theme.client.component.sapfooter.SAPFooterResources" />
  <g:HTMLPanel>
    <!-- Website footer-->
    <footer class="{local_res.css.sitefooter}">
      <div class="{res.mediaCss.grid}">
        <div class="{res.mediaCss.small12} {res.mediaCss.medium8} {res.mediaCss.columns}">
	      <div class="{local_res.css.sitefooter_copyright}"><ui:text from='{i18n.footerCopyright}'/></div>
	      <div class="{local_res.css.sitefooter_links}">
	          <a href="http://www.sap.com/about/legal/impressum.html" target="_blank" class="{local_res.css.sitefooter_links_link}">
	              <ui:text from='{i18n.footerLegal}'/>
	          </a>
	          <a href="http://www.sap.com/about/legal/privacy.html" target="_blank" class="{local_res.css.sitefooter_links_link}">
	              <ui:text from='{i18n.footerPrivacy}'/>
	          </a>
	          <a href="mailto:sailing_analytics%40sap.com?subject=[SAP Sailing] Feedback" target="_blank" class="{local_res.css.sitefooter_links_link}">
	              <ui:text from='{i18n.footerFeedback}'/>
	          </a>
	       </div>
        </div>
	        <div class="{res.mediaCss.small12} {res.mediaCss.medium4} {res.mediaCss.columns} {local_res.css.sitefooter_language}">
	        <div ui:field="languageSelectionDiv">
				<ui:text from='{i18n.footerLanguage}'/>:<g:Anchor ui:field="changeLanguageLink" styleName="{local_res.css.sitefooter_language_link}" />
			</div>	
        </div>
      </div>
    </footer>
  </g:HTMLPanel>
</ui:UiBinder>