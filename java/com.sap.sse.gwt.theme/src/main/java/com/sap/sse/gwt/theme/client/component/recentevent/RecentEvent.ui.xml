<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="i18n" type="com.sap.sse.gwt.theme.client.resources.i18n.TextMessages" />
	<ui:with field="res" type="com.sap.sse.gwt.theme.client.resources.ThemeResources" />

    <ui:with field="local_res" type="com.sap.sse.gwt.theme.client.component.recentevent.RecentEventResources" />
    <g:HTMLPanel styleName="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large4} {res.mediaCss.columns}">
	    <div class="{local_res.css.eventteasercontainer}">
	        <g:Anchor ui:field="eventOverviewUi" styleName="{local_res.css.eventteaser}">
		        <div class="{local_res.css.eventteaser_image}" ui:field="eventImageContainerUi" >
		          <div ui:field="isLiveUi" data-labeltype="live" class="{local_res.css.eventteaser_series} {res.mainCss.label}"></div>
		        </div>
		        <div class="{local_res.css.eventteaser_name}"><span ui:field="eventNameUi" /></div>
		        <div class="{local_res.css.eventteaser_location}">
		            <span ui:field="venueNameUi" />,&nbsp;<span ui:field="eventDateUi" />
		        </div>
	        </g:Anchor>
	    </div>
    </g:HTMLPanel>
</ui:UiBinder>
