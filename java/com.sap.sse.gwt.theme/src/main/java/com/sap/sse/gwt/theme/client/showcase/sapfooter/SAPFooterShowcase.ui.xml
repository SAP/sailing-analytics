<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ux="urn:import:com.sap.sse.gwt.theme.client.showcase"
	xmlns:sap="urn:import:com.sap.sse.gwt.theme.client.component.sapfooter">
	<ui:style>
	.showcase_content {
		width: 100%;
		display: block;
		margin: 10px;
	}
	</ui:style>
	<ux:ComponentShowCase name="SAP Footer" >
		<ux:description>
			<g:HTMLPanel>
				A SAP footer.
				<p>Import: xmlns:sap="urn:import:com.sap.sse.gwt.theme.client.component.sapfooter"</p>
			</g:HTMLPanel>
		</ux:description>
		<ux:component>
			<g:HTMLPanel styleName="{style.showcase_content}">
				<sap:SAPFooter ui:field="sapFooter"></sap:SAPFooter>
			</g:HTMLPanel>
		</ux:component>
	</ux:ComponentShowCase>
</ui:UiBinder> 