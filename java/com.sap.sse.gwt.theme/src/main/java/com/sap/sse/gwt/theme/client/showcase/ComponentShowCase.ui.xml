<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.outerpanel {
		margin: 20px;
	}
	.componentName {
		font-size: 20px;
		font-weight: bold;
		magin-bottom: 10px;

	}
	.componentDescription {
		margin-bottom: 30px;
		border-bottom: 3px solid black;
		padding: 20px;
		width: 100%;

	}
	</ui:style>
	<g:HTMLPanel styleName="{style.outerpanel}">
		<div class="{style.componentName}" ui:field="componentNameUi"></div>
		<g:SimplePanel styleName="{style.componentDescription}" ui:field="componentDescriptionUi">
		</g:SimplePanel>
		<g:SimplePanel ui:field="componentPanelUi">
		</g:SimplePanel>
	</g:HTMLPanel>
</ui:UiBinder> 