[Unit]
Description=SAP Sailing Analytics Server
Wants=apache2.service
After=network.target apache2.service

[Service]
EnvironmentFile=-/home/sailing/environment
EnvironmentFile=-/home/sailing/servers/%I/environment
WorkingDirectory=/home/sailing/servers/%I
User=sailing
Group=sailing
ExecStart=/home/sailing/start_foreground
Restart=on-failure
