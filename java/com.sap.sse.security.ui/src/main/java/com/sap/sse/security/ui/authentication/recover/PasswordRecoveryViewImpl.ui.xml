<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n_sec" type="com.sap.sse.security.ui.client.i18n.StringMessages" />
    <ui:with field="res" type="com.sap.sse.gwt.common.CommonSharedResources" />
    <ui:with field="local_res" type="com.sap.sse.security.ui.authentication.UserManagementResources" />
    <g:HTMLPanel>
        <div class="{local_res.css.form_description}"><ui:text from="{i18n_sec.enterUsernameOrEmail}" /></div>
        <div class="{local_res.css.form_errors}" ui:field="formErrorUi"></div>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.email}" /></label>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="emailUi"/>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.username}" /></label>
        <g:CheckBox visible="false" text="{i18n_sec.reallyUseLeadingOrTrailingSpacesInUsername}" ui:field="reallyUseLeadingOrTrailingSpacesInUsernameUi"/>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="usernameUi"/>
        <div class="{local_res.css.form_actions}">
            <g:Button styleName="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimary} {res.mainCss.buttonarrowrightwhite}" 
                    ui:field="resetPasswordUi"><ui:text from="{i18n_sec.resetPassword}" /></g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
