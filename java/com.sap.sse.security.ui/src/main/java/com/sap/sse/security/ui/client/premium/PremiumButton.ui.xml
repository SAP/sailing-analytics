<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sse.security.ui.client.i18n.StringMessages" />
    <ui:style type="com.sap.sse.security.ui.client.premium.PremiumButton.Style">
        .premium-container, 
        .premium-container .premium-button input:disabled + label {
            cursor: pointer;
        }
        .premium-permitted .premium-container, 
        .premium-permitted .premium-container .premium-button input:disabled + label {
            cursor: default;
        }
        .premium-container .premium-button input:disabled {
	        pointer-events: none;
	    }
        .premium-permitted .premium-container .premium-button input {
            box-shadow: -3px 0 #ffffff, -6px 0 #d2af25;
        }
        .premium-container .premium-icon {
            width: 17px;
            height: 17px;
            margin: 1px 3px;
            vertical-align: bottom;
        }
    </ui:style>
    <g:FocusPanel ui:field="container">
        <g:FlowPanel addStyleNames="{style.premium-container}">
            <g:Button ui:field="button" addStyleNames="{style.premium-button}"/>
            <g:Image ui:field="image" addStyleNames="{style.premium-icon}"/>
        </g:FlowPanel>
    </g:FocusPanel>
</ui:UiBinder> 