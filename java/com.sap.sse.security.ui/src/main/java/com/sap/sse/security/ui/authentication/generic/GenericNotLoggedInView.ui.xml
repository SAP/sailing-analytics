<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="com.sap.sse.gwt.common.CommonSharedResources" />
    <ui:style>
    .message {
        font-weight: bold;
        font-style: italic;
        display: inline-block;
        padding-right: 1em;
    }
    
    </ui:style>
    <g:HTMLPanel>
        <div ui:field="messageUi" class="{style.message}" />
        <g:Button styleName="{res.mainCss.button} {res.mainCss.buttonprimary}" ui:field="buttonUi" />
    </g:HTMLPanel>
</ui:UiBinder> 