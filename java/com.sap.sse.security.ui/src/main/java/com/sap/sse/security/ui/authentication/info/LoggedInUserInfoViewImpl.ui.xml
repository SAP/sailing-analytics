<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n_sec" type="com.sap.sse.security.ui.client.i18n.StringMessages" />
    <ui:with field="res" type="com.sap.sse.gwt.common.CommonSharedResources" />
    <ui:with field="local_res" type="com.sap.sse.security.ui.authentication.UserManagementResources" />
    <g:HTMLPanel>
        <div class="{local_res.css.form_title} {local_res.css.form_subtitle}"><ui:text from="{i18n_sec.signedInAsTitle}" /></div>
        <div class="{local_res.css.info_user}">
            <div class="{local_res.css.info_user_image}">
                <div class="{local_res.css.info_user_image_item}" ui:field="userImageUi"></div>
            </div>
            <div class="{local_res.css.info_user_realname}" ui:field="userRealnameUi"></div>
            <div class="{local_res.css.info_user_username}" ui:field="userUsernameUi"></div>
        </div>
         <div class="{local_res.css.form_actions}">
            <g:Anchor styleName="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimaryoutlined}" 
                    ui:field="userProfileUi"><ui:text from="{i18n_sec.userDetails}" /></g:Anchor>
            <g:Anchor styleName="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimaryoutlined}" 
                    ui:field="signOutUi"><ui:text from="{i18n_sec.signOut}" /></g:Anchor>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
