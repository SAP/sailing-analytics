<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:com.sap.sse.gwt.client.controls">
    <ui:with field="i18n" type="com.sap.sse.security.ui.client.i18n.StringMessages"/>
    <ui:with field="icon_res" type="com.sap.sse.security.ui.client.IconResources" />
    <ui:with field="local_res" type="com.sap.sse.security.ui.login.LoginViewResources" />
	<g:HTMLPanel styleName="{local_res.css.loginform}">
	    <div class="{local_res.css.loginform_header}">
		<img src="{icon_res.sapLogo.getSafeUri}" />
		<g:Label styleName="{local_res.css.loginform_header_appname}" ui:field="appName" />
	    </div>
	    <div class="{local_res.css.loginform_content}">
			    <div><ui:text from="{i18n.generalWelcome}" /></div>
			    <div><s:TextBoxWithWatermark ui:field="userNameTextBox" styleName="{local_res.css.glowing_border}" /></div>
				<div>
				    <s:PasswordTextBoxWithWatermark ui:field="passwordTextBox" styleName="{local_res.css.glowing_border}" />
				    <g:Anchor href="javascript:;" ui:field="forgotPasswordAnchor" text="{i18n.forgotPassword}" />
				</div>
				<div>
				    <g:Button ui:field="loginButton" text="{i18n.signIn}" styleName="{local_res.css.button}" />
				</div>
				<g:HTMLPanel ui:field="oAuthPanel" />
				<hr/>
				<div>
				    <ui:text from="{i18n.newUser}" />
					<g:Anchor ui:field="signUpAnchor" text="{i18n.signUp}" />    
				</div>
		</div>
	</g:HTMLPanel>     
</ui:UiBinder>
