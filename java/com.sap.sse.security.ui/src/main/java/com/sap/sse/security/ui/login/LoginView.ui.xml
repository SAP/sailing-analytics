<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sse.security.ui.client.StringMessages"/>
    <ui:with field="local_res" type="com.sap.sse.security.ui.login.LoginViewResources" />
	<g:HTMLPanel styleName="{local_res.css.login}">
		<div class="{local_res.css.centered}">
			<div class="{local_res.css.form}">
			    <div><ui:text from='{i18n.username}'/></div>
				<div><g:TextBox ui:field="userNameTextBox" /></div>
				<div><ui:text from='{i18n.password}'/></div>
				<div><g:PasswordTextBox ui:field="passwordTextBox" /></div>
				<g:Button ui:field="loginButton" text="{i18n.signIn}" />
				<g:Button ui:field="passwordResetButton" text="{i18n.resetPassword}" />
				<g:Anchor ui:field="signUpAnchor" text="{i18n.signUp}" />
				<g:HTMLPanel ui:field="oAuthPanel" />
			</div>
		</div>
	</g:HTMLPanel>     
</ui:UiBinder>    
