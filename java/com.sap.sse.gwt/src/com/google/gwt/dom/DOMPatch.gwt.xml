<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN" "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module>
  <inherits name="com.google.gwt.dom.DOM"/>
  
  <define-property values="true,false" name="patchedDOM"/>
  <set-property name="patchedDOM" value="true"/>

  <replace-with class="com.google.gwt.dom.client.DOMImplWebkitPatched">
    <when-type-is class="com.google.gwt.dom.client.DOMImpl"/>
    <all>
      <when-property-is name="patchedDOM" value="true"/>
      <when-property-is name="user.agent" value="safari"/>
    </all>
  </replace-with>

  <replace-with class="com.google.gwt.dom.client.DOMImplIE9Patched">
    <when-type-is class="com.google.gwt.dom.client.DOMImpl"/>
    <all>
      <when-property-is name="patchedDOM" value="true"/>
      <any>
        <when-property-is name="user.agent" value="ie9"/>
        <when-property-is name="user.agent" value="ie10"/>
      </any>
    </all>
  </replace-with>

  <replace-with class="com.google.gwt.dom.client.DOMImplIE8Patched">
    <when-type-is class="com.google.gwt.dom.client.DOMImpl"/>
    <all>
      <when-property-is name="patchedDOM" value="true"/>
      <when-property-is name="user.agent" value="ie8"/>
    </all>
  </replace-with>

  <replace-with class="com.google.gwt.dom.client.DOMImplMozillaPatched">
    <when-type-is class="com.google.gwt.dom.client.DOMImpl"/>
    <all>
      <when-property-is name="patchedDOM" value="true"/>
      <when-property-is name="user.agent" value="gecko1_8"/>
    </all>
  </replace-with>
</module>
