<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

 		.slider {
		}
	
		.slick-prev:before {
			color: #dddddd;
			font-size: 30px;
			height: 30px;
			width: 30px;
			left: 0px;
		}
 
		.slick-prev {
			left: 0px;
			z-index: 1;
		}

		.slick-next {
			right: 0px;
			z-index: 1;
		} 

		.slick-next:before {
			color: #dddddd;
			font-size: 30px;
			height: 30px;
			width: 30px;
			right: 0px;
		} 

    </ui:style>

	<g:HTMLPanel styleName="{style.slider}" ui:field="sliderMainUi">

	    <button 
	        ui:field="slickPrev" 
	        class="slick-prev {style.slick-prev}"
			data-role="none" 
			type="button" 
			style="display: block;">Previous</button>
	    
		<button 
		    ui:field="slickNext" 
		    class="slick-next {style.slick-next}"
			data-role="none" 
			type="button" 
			style="display: block;">Next</button>

	</g:HTMLPanel>

</ui:UiBinder>