<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
	<ui:style>
        @external slick-slide, slick-prev, slick-next, slick-track;
        .slider {
			width: 100%;

        }

		.slider .slick-track {
			
		}

        .slider ul > li > button:before {
            font-size: 15px;
        }
		
		.slider .slick-slide {
            margin-left: 15px;
            margin-right: 15px;
			background-color: #fcfcfc;
		}
		
		.slider .slick-prev {
			left: 20px;
			z-index:1;
			height: 60px;
			width: 60px;

		}
		.slider .slick-prev:before {
			color: #000000;
			font-size: 60px;
			left: -60px;
			
		} 
		.slider .slick-next {
			right: 20px;
			z-index:1;
			height: 60px;
			width: 60px;
		} 
		.slider .slick-next:before {
			color: #000000;
			font-size: 60px;
			left: -60px;
		} 
    </ui:style>
    
	<div class="{style.slider}" ui:field="sliderMainUi" >
	</div>
</ui:UiBinder>