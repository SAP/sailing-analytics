<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
	<ui:style>
        .slider {
			width: 100%;

        }
        .slider > ul > li > button:before {
            font-size: 15px;
        }

        .slider img {
            margin: 10px;
        }
	

	
 	.slider {
			width: 100%;
    }

		.slick-prev {
			left: 20px;
			z-index:1;
			height: 60px;
			width: 60px;

		}
		.slick-prev:before {
			color: #000000;
			font-size: 60px;
			left: -60px;
		} 
		.slick-next {
			right: 20px;
			z-index:1;
			height: 60px;
			width: 60px;
		} 
		.slick-next:before {
			color: #000000;
			font-size: 60px;
			left: -60px;
		} 



    </ui:style>
    
	<div class="{style.slider}" ui:field="sliderMainUi" >
	    <button ui:field="slickPrev" class="slick-prev {style.slick-prev}" data-role="none" type="button" style="display: block;">Previous</button>
	    <button ui:field="slickNext" class="slick-next {style.slick-next}" data-role="none" type="button" style="display: block;">Next</button>
	</div>
</ui:UiBinder>