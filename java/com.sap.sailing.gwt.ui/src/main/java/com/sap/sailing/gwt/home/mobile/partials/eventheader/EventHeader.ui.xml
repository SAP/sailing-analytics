<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">

	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.eventheader.EventHeaderResources" />

	<g:HTMLPanel>
		<div class="{res.mediaCss.grid}">
			<div ui:field="eventHeader" class="{local_res.css.eventheader} {res.mediaCss.small12} {res.mediaCss.columns}">
				<div class="{local_res.css.eventheader_info} {res.mediaCss.small12} {res.mediaCss.columns}">
					<div class="{local_res.css.eventheader_info_title}">
						<!-- IF event.name -->
						<h3 class="{local_res.css.eventheader_info_title_text}">
							<span ui:field="eventNameUi"></span>
							<br ui:field="nameSeparatorUi" />
							<span ui:field="eventRegattaUi"></span>
							<!-- event.name -->
							<!-- IF event.state -->
 			            	<div data-labeltype="live" ui:field="eventStateUi" class="{local_res.css.eventheader_info_title_text_label} {res.mainCss.label}">
				            </div>
				            <!-- IF END -->
						</h3>
						<!-- IF END -->
					</div>
					<div class="{local_res.css.eventheader_info_subtitle}">
						<!-- IF event.logo -->
						<a ui:field="eventLogoUi" class="{local_res.css.eventheader_info_subtitle_logo}"></a>
						<!-- IF END -->
						<div class="{local_res.css.eventheader_info_subtitle_info}">
							<!-- IF (event.name || event.date) -->
							<div ui:field="eventDateUi" class="{local_res.css.eventheader_info_subtitle_info_date}">
								<!-- event.date -->
							</div>
							<div ui:field="eventLocationUi" class="{local_res.css.eventheader_info_subtitle_info_location}">
								<!-- event.venue.name -->, <!-- event.venue.country -->
							</div>
							<!-- IF END -->
						</div>
					</div>
				</div>
					<a ui:field="tractracLogoContainer"  href="https://www.tractrac.com" class="{local_res.css.eventheader_info_subtitle_tractrac_logo_container}">
					     <img src="http://www.dev.tractrac.com/web/wp-content/themes/pivot/style/img/logo-light.png" class="{local_res.css.eventheader_info_subtitle_tractrac_logo}"></img>
					</a>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>