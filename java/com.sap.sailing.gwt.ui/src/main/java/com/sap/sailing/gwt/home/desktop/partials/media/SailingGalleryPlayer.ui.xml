<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style gss="true">
		@external slick-active;
		.mainSlider {
			height: 100%;
		}
		.mainSlider div {
			height: 100%;
		}
		.subSlider img {
			margin-top: 10px;
			margin-right: 10px;
			border: 4px solid transparent;
			cursor: pointer;
		}
		.subSlider .slick-active {
			border: 4px solid white;
		}
		.previewBar {
			border-top: 1px solid white;
			padding: 10px;
			
		}
		.content {
			width: 100%;
			height: 100%;
		}
		.subcontent {
			border-top: 1px solid #ebebeb;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer top="0" bottom="150">
			<g:HTMLPanel styleName="{style.content}">
				<div class="mainSlider {style.mainSlider}" ui:field="mainSliderUi"></div>
			</g:HTMLPanel>
		</g:layer>
		<g:layer height="120" bottom="0">
			<g:HTMLPanel styleName="{style.subcontent}">
				<div class="subSlider {style.subSlider}" ui:field="subSliderUi"></div>
			</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 