<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.place.event">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.regatta.RegattaResources" />
    <g:HTMLPanel>

<!-- A view, introducing a regatta-->
<div class="{local_res.css.regatta}">
  <div class="{res.mainCss.grid}">
    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
      <div class="{local_res.css.regatta_intro}">
          <g:Anchor ui:field="regattaImageWithLink">
	          <img src="images/home/regatta-boatclass_sample.png" alt="" height="140" width="140"  class="{local_res.css.regatta_intro_image}"></img>
          </g:Anchor>
          <g:HTMLPanel ui:field="regattaImage">
	          <img src="images/home/regatta-boatclass_sample.png" alt="" height="140" width="140"  class="{local_res.css.regatta_intro_image}"></img>
          </g:HTMLPanel>
        <div class="{local_res.css.regatta_intro_header}">
          <div class="{res.mainCss.grid}">
            <div class="{res.mediaCss.small4} {res.mediaCss.columns}">
	          <g:Anchor ui:field="regattaNameWithLink">
	              <h3 ui:field="regattaName1" class="{local_res.css.regatta_intro_header_name} {local_res.css.regatta_intro_header_namelink}" />
	          </g:Anchor>
	          <g:HTMLPanel ui:field="regattaNameDiv">
	              <h3 ui:field="regattaName2" class="{local_res.css.regatta_intro_header_name}"></h3>
	          </g:HTMLPanel>
              <div ui:field="isLiveDiv" data-labeltype="live" class="{res.mainCss.label}"><ui:text from='{i18n.live}'/></div>
              <div ui:field="isFinishedDiv" data-labeltype="finished" class="{res.mainCss.label}"><ui:text from='{i18n.finished}'/></div>
            </div>
            <div class="{res.mediaCss.small8} {res.mediaCss.columns}">
              <div class="{local_res.css.regatta_intro_header_details}">
                <div class="{local_res.css.regatta_intro_header_details_item}"><ui:text from='{i18n.regattaCompetitors}'/>&nbsp;<span class="{local_res.css.regatta_intro_header_details_item_value}"><span ui:field="competitorsCount" /></span></div>
                <div class="{local_res.css.regatta_intro_header_details_item}"><ui:text from='{i18n.regattaRaces}'/>&nbsp;<span class="{local_res.css.regatta_intro_header_details_item_value}"><span ui:field="racesCount" /></span></div>
                <div class="{local_res.css.regatta_intro_header_details_item}"><ui:text from='{i18n.regattaTracked}'/>&nbsp;<span class="{local_res.css.regatta_intro_header_details_item_value}"><span ui:field="trackedRacesCount" /></span></div>
                <div class="{local_res.css.regatta_intro_header_details_item}">
                  <div ui:field="leaderboardGroupName" data-labeltype="" class="{local_res.css.regatta_intro_header_details_label} {res.mainCss.label}"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div ui:field="regattaPhasesInfoDiv" class="{local_res.css.regatta_intro_phases}">
            <div ui:field="regattaPhasesPanel" />
            <div class="{local_res.css.regatta_intro_phases_leaderboardlink}">
                <g:Anchor ui:field="leaderboardLink"><ui:text from='{i18n.leaderBoard}'/></g:Anchor>
			</div>
        </div>
        <div ui:field="isScheduledDiv" class="{local_res.css.regatta_intro_scheduled}">
            <ui:text from='{i18n.regattaRegattaStarts}'/>:&nbsp;<span ui:field="scheduledStart" />
        </div>
        <div ui:field="isFinishedDiv2" class="{local_res.css.regatta_intro_results}">
            <s:regatta.RegattaCompetitor ui:field="competitorWithRank1" />
            <s:regatta.RegattaCompetitor ui:field="competitorWithRank2" />
            <s:regatta.RegattaCompetitor ui:field="competitorWithRank3" />
        </div>
        <table ui:field="isLiveDiv2" class="{local_res.css.regatta_intro_fleets}">
            <g:HTMLPanel ui:field="liveRaceInfosPerFleetPanel" />
        </table>
      </div>
    </div>
  </div>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
