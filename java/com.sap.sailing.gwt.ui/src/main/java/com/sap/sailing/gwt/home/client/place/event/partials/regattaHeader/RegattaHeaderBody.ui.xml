<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:s="urn:import:com.sap.sailing.gwt.home.client.place.event.ui"
	>

  <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
  <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.ui.regattaHeader.RegattaHeaderResources" />

  <g:HTMLPanel>
    <div class="{local_res.css.regattaheader_logo}">
      <img src="<!-- regatta.image -->" />
    </div>
    <div class="{local_res.css.regattaheader_content}">
      <div class="{local_res.css.regattaheader_content_title}">
        <!-- regatta.name -->
        <!-- IF regatta.isLive -->
        <div data-labeltype="live" class="{res.mainCss.label}">
          <ui:text from='{i18n.playModeLive}' />
        </div>
        <!-- IFEND regatta.isLive -->
        <!-- IF regatta.isFinished -->
        <div data-labeltype="finished" class="{res.mainCss.label}">
          <ui:text from='{i18n.raceIsFinished}' />
        </div>
        <!-- IFEND regatta.isFinished -->
        <!-- IF regatta.isProgress -->
        <div data-labeltype="progress" class="{res.mainCss.label}">
          <ui:text from='{i18n.isProgress}' />
        </div>
        <!-- IFEND regatta.isProgress -->
        <!-- IF regatta.isUpcoming -->
        <div data-labeltype="upcoming" class="{res.mainCss.label}">
          <ui:text from='{i18n.isUpcoming}' />
        </div>
        <!-- IFEND regatta.isUpcoming -->
      </div>
      <div class="{local_res.css.regattaheader_content_details}">
        <div class="{local_res.css.regattaheader_content_details_item}">
          <!-- regatta.competitorsCount -->
          <ui:text from='{i18n.competitors}' />
        </div>
        <div class="{local_res.css.regattaheader_content_details_item}">
          <!-- regatta.racesCount -->
          <ui:text from='{i18n.regattaHeaderRacesCount}' />
        </div>
        <div class="{local_res.css.regattaheader_content_details_item}">
          <!-- regatta.trackedCount -->
          <ui:text from='{i18n.tracked}' />
        </div>
        <div class="{local_res.css.regattaheader_content_details_item}">
          <!-- regatta.category -->
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>