<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
		.disclaimerItem {
			border-color: black;
			border-width: 1px;
			border-style: solid;
			font-family: monospace, monospace;
			display: block;
			margin-top: 1em;
			margin-bottom: 1em;
			padding: 1em;
		}
		
		.disclaimerItemTitle {
			font-size: 1.3em;
			margin: 5px 0px 5px 0px;
			font-weight: bold;
		}
		
		.disclaimerItemContent {
			overflow-wrap: break-word;
		}
	</ui:style>
    <g:HTMLPanel>
        <div ui:field="disclaimerItem" class="{style.disclaimerItem}" >
	        <g:Label ui:field="disclaimerItemTitle" styleName="{style.disclaimerItemTitle}" />
	        <div ui:field="disclaimerItemContent" class="{style.disclaimerItemContent}" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder>    
