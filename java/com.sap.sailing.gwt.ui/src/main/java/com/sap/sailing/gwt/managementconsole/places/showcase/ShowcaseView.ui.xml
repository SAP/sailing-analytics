<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
             
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <g:HTMLPanel>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <div class="{app_res.fonts.title}">
                    Example Page
                </div>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.text}">
                    Based on new UI design.
                </div>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="username">
                    USERNAME
                </label>
                <input id="username" placeholder="Username" />
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="password">
                    PASSWORD
                </label>
                <input id="password" placeholder="Password" type="password" />
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}">
                <g:Button text="{i18n.save}" addStyleNames="{app_res.style.button} {app_res.style.primary}" />
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}">
                <g:Button text="{i18n.create}" addStyleNames="{app_res.style.button} {app_res.style.highlighted}" />
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}">
                <g:Button text="{i18n.cancel}" addStyleNames="{app_res.style.button}" />
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.mediumoffset4} {res.mediaCss.medium4}" style="text-align: center">
                <g:Button text="{i18n.goBack}" addStyleNames="{app_res.style.anchor}" />
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}" style="text-align: right">
                <g:Button text="{i18n.forgotPassword}" addStyleNames="{app_res.style.anchor} {app_res.style.highlighted}" />
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>