<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />

    <g:HTMLPanel addStyleNames="{res.mediaCss.grid}">
        <div class="{res.mediaCss.columns}">
            <div ui:field="messageUi" class="{res.mediaCss.small12} {app_res.fonts.pageTitle}" />
            <div class="{res.mediaCss.small12} {res.mediaCss.medium4} {res.mediaCss.large3}">
                <g:Button ui:field="controlUi" addStyleNames="{app_res.style.button} {app_res.style.primary}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>