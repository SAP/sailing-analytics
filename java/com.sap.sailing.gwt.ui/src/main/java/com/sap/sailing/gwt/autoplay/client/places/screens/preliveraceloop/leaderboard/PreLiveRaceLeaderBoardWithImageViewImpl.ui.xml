<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rf="urn:import:com.sap.sse.gwt.client.panels">
	<ui:with field="res"
		type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
	<ui:style>
	.left {
		position: absolute;
		display: inline-block;
		width: 50%;
		top: 0px;
		bottom: 0px;
		overflow-y: auto;
	}
	
	.right {
		position: absolute;
		display: inline-block;
		right: 0px;
		height: 100%;
		width: 50%;
	}
	
	.bottom {
		width: 100%;
		height: 80px;
		font-size: 50px;
		text-align: center;
		position: absolute;
		bottom: 0px;
		background-color: #008fcc;
		color: white;
	}
	
	.image {
		top: 5%;
		display: block;
		margin: auto;
		min-width: 50%;
		height: 85%;
		width: auto;
		padding-bottom: 2em;
	}
	
	.subline1 {
		font-size: 20px;
		font-weight: bold;
		text-align: center;
	}
	
	.subline2 {
		font-size: 20px;
		text-align: center;
	}
	
	.subline3 {
		font-size: 20px;
		text-align: center;
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{res.style.slideBackground}">
		<rf:ResizableFlowPanel ui:field="leaderBoardHolder"
			styleName="{style.left}" />
		<rf:ResizableFlowPanel ui:field="infoHolder"
			styleName="{style.right}">
			<g:Image ui:field="image" styleName="{style.image}" />
			<g:Label ui:field="subline1" styleName="{style.subline1}" />
			<g:Label ui:field="subline2" styleName="{style.subline2}" />
			<g:Label ui:field="subline3" styleName="{style.subline3}" />
		</rf:ResizableFlowPanel>
		<rf:ResizableFlowPanel ui:field="nextRace"
			styleName="{style.bottom}">
			<g:Label ui:field="bottomInfoPanel" />
		</rf:ResizableFlowPanel>
	</rf:ResizableFlowPanel>
</ui:UiBinder> 