<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    	xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="shr" type="com.sap.sailing.gwt.home.shared.SharedHomeResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.recents.EventsOverviewRecentResources" />
	<g:HTMLPanel addStyleNames="{local_res.css.eventsoverviewrecent_year}">
		<g:HTMLPanel ui:field="headerDiv"
			addStyleNames="{local_res.css.eventsoverviewrecent_year_header} {local_res.css.accordion_trigger}">
			<div class="{res.mediaCss.grid}">
				<div class="{res.mediaCss.small5} {res.mediaCss.columns}">
					<h3 class="{local_res.css.eventsoverviewrecent_year_header_title}">
						<span ui:field="year" />
					</h3>
				</div>
				<div class="{res.mediaCss.small7} {res.mediaCss.columns}">
					<table class="{local_res.css.eventsoverviewrecent_year_header_info}">
						<tr>
							<td>
								<div class="{local_res.css.eventsoverviewrecent_year_header_info_item}">
									<span ui:field="eventsCount" class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}" />
								</div>
							</td>
							<td>
								<div class="{local_res.css.eventsoverviewrecent_year_header_info_arrow}">
									<img src="{shr.arrowDownGrey.getSafeUri}"
										class="{local_res.css.eventsoverviewrecent_year_header_info_arrow_image}"></img>
								</div>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</g:HTMLPanel>
		<div ui:field="contentDiv" class="{local_res.css.eventsoverviewrecent_year_content} {local_res.css.accordion_content}">
			<mp:stage.Stage ui:field='eventStage'/>
			<g:FlowPanel ui:field="recentEventsTeaserPanel" styleName="{res.mediaCss.grid}" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder>