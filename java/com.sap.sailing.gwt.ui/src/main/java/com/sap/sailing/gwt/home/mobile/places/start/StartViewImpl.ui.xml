<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
    xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
    xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    >
    <ui:with 
        field="res" 
        type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages"/>
    <ui:style>
        .headerWrapper {
            background-color: #f2f2f2;
        }
        .action {
            border-radius: .384615384615385em;
            width: 100%;
            text-align: center;
        }
        .buttonContainer {
            margin: 2em 10px 0;
        
}
    </ui:style>    
    <g:HTMLPanel>
        <div class="{style.headerWrapper}">
            <mp:quickfinder.Quickfinder ui:field="quickFinderUi" />
        </div>
        <mp:stage.Stage ui:field='stage'/>
        <mp:anniversary.MobileAnniversaries ui:field="anniversariesUi"/>
        <div class="{style.buttonContainer}">
            <a ui:field="showAllEventsUi" class="{res.mainCss.button} {res.mainCss.buttonstrong} {res.mainCss.buttonarrowrightwhite} {style.action}"><ui:text from='{i18n.mainEventShowAll}'/></a>
        </div>
        <mp:socialfooter.SocialFooter/>
    </g:HTMLPanel>
</ui:UiBinder>
