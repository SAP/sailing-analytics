<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.regatta.RegattaResources" />
    <g:HTMLPanel>

<tr class="{local_res.css.regatta_intro_fleets_fleet}">
  <td>
    <div class="{local_res.css.regatta_intro_fleets_fleet_item} {local_res.css.regatta_intro_fleets_fleet_itemfirst}">{fleet.name}</div>
  </td>
  <td>
    <div class="{local_res.css.regatta_intro_fleets_fleet_item}">{fleet.phase.name}&nbsp;-&nbsp;<span class="{local_res.css.regatta_intro_fleets_fleet_item_value}">{fleet.race.name}</span>
    </div>
  </td>
  <td>
    <div class="{local_res.css.regatta_intro_fleets_fleet_item} {res.mediaCss.hideonsmall}">
        {#if regatta.isScheduled}<ui:text from='{i18n.regattaScheduledAt}'/>&nbsp;{/if regatta.isScheduled}
        {#if regatta.isLive}<ui:text from='{i18n.regattaStartedAt}'/>&nbsp;{/if regatta.isLive}
        {#if regatta.isFinished}<ui:text from='{i18n.regattaFinishedAt}'/>&nbsp;{/if regatta.isFinished}{fleet.time}
    </div>
  </td>
  <td>
    <div class="{local_res.css.regatta_intro_fleets_fleet_item} {res.mediaCss.hideonsmall}"><img src="images/flagImage" class="{local_res.css.regatta_intro_fleets_fleet_item_flag}"></img></div>
  </td>
  <td>
    <div class="{local_res.css.regatta_intro_fleets_fleet_item} {res.mediaCss.showonlarge}"><ui:text from='{i18n.regattaCourse}'/>&nbsp;<span class="{local_res.css.regatta_intro_fleets_fleet_item_value}">{fleet.course}</span></div>
  </td>
  <td>
    <div class="{local_res.css.regatta_intro_fleets_fleet_item} {res.mediaCss.showonlarge}"><ui:text from='{i18n.regattaArea}'/>&nbsp;<span class="{local_res.css.regatta_intro_fleets_fleet_item_value}">{fleet.area}</span></div>
  </td>
  <td class="{local_res.css.regatta_intro_fleets_fleet_live}">
      {#if regatta.isLive}<a href="#" data-labeltype="live" class="{res.mainCss.label}"><ui:text from='{i18n.watchNow}'/></a>{/if regatta.isLive}
  </td>
</tr>
    </g:HTMLPanel>
</ui:UiBinder>
