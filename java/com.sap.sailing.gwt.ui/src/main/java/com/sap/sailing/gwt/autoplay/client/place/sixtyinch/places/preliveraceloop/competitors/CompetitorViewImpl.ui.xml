<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rf="urn:import:com.sap.sse.gwt.client.panels">
	<ui:with field="res"
		type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
	<ui:style>
	.image {
		display: inline-block;
		height: auto;
		width: 33.3%;
		max-height: 90%;
		border-radius: 4px;
	}
	
	.image img {
		display: block;
		height: auto;
		width: 100%;
		max-height: 90%;
		border-radius: 4px;
	}
	
	.image::before {
		box-shadow: inset 0 0px white, 0 0px white, 0 0 0px 0px white, 0 0 10px
			5px white;
		position: absolute;
		top: 0;
		height: 100%;
		content: "";
	}
	
	.subline1 {
		font-size: 30px;
		position: absolute;
		text-align: center;
		width: 30%;
		height: 10%;
		font-weight: bold;
		bottom: 40px;
		left: 34%;
	}
	.subline2 {
        font-size: 30px;
        position: absolute;
        text-align: center;
        width: 30%;
        height: 10%;
        font-weight: bold;
        bottom: 10px;
        left: 34%;
    }
    .holder{
	
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{style.holder">
		<rf:ResizableFlowPanel styleName="{style.image}">
			<g:Image ui:field="image1" />
		</rf:ResizableFlowPanel>
		<g:Label ui:field="subline1" styleName="{style.subline1}" />
		<g:Label ui:field="subline2" styleName="{style.subline2}" />
	</rf:ResizableFlowPanel>
</ui:UiBinder> 