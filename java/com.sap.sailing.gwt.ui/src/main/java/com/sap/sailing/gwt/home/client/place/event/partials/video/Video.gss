.videoitem {
  font-size: inherit;
}
.videoitem .playbutton {
  font-size: inherit;
}
.videoitem .info {
  font-size: inherit;
}
.videoitem .playicon {
  position: absolute;
  top: 50%;
  left: 50%;
  cursor: pointer;
  width: 5.333333333333333em;
  height: 5.333333333333333em;
  -webkit-transform: translate(-50%, -50%);
     -moz-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  background-image: url("../images/home/play.png");
}
.videoitem .videoplaceholder {
  height: 100%;
}
.videoitem .videoplaceholder_image {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}
.videoitem iframe {
  width: 100%;
}
.video {
  font-size: 1rem;
  height: 28.333333333333332em;
  position: relative;
  margin-top: 1.333333333333333em;
}
@media (max-width: 976px) {
  .video {
    height: 22em;
  }
}
.video_content {
  height: 100%;
  width: 100%;
}
.video_content_item {
  width: 100%;
  height: 100%;
  position: relative;
}
.video_content_item_play {
  font-size: inherit;
}
.video_content_item_video {
  height: 100%;
  width: 100%;
}
.video_content_item_info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  color: #f6f9fc;
  padding: 1.333333333333333em;
  background: rgba(0,0,0,0.6);
}
.video_content_item_info.info {
  font-size: inherit;
}
.video_content_item_info_text {
  font-size: inherit;
  padding: 0 2em 0 0;
}
.video_content_item_info_text_title {
  font-size: 1.466666666666667em;
  display: inline-block;
  margin: 0;
  padding: 0;
}
.video_content_item_info_text_titlesmall {
  font-size: 1.2em;
}
.video_content_item_info_text .label {
  display: inline-block;
  margin-left: 1.25em;
  text-transform: capitalize;
}
.video_content_item_info_text p {
  margin: 0;
  padding: 0;
}
.video_content_item_info_button {
  font-size: 0.933333333333333em;
  float: right;
  height: 100%;
  cursor: pointer;
  margin-right: -1.071428571428571em;
  white-space: nowrap;
  text-transform: uppercase;
}
