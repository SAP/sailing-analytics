<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:sse="urn:import:com.sap.sse.gwt.client"
	xmlns:dp="urn:import:com.sap.sailing.gwt.home.desktop.partials">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
		.events-overview-navigation {
		    font-size: 1rem;
		}
		.breadcrumb {
		  font-size: 1rem;
		  /* @alternate */ font-size: 0.866666666666667em;
		  font-weight: 600;
		  padding: 0.666666666666667em 0;
		}
	</ui:style>
	<g:HTMLPanel addStyleNames="{res.mediaCss.grid}">
		<div class="{res.mediaCss.small12} {res.mediaCss.columns}">
			<sse:breadcrumb.BreadcrumbPane ui:field="breadcrumbs" addStyleNames="{style.breadcrumb}" />
			<dp:eventsupcoming.EventsOverviewUpcoming ui:field='upcomingEventsWidget'/>
			<dp:eventsrecent.EventsOverviewRecent ui:field='recentEventsWidget'/>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>    
