<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:c="urn:import:com.sap.sailing.gwt.common.client.controls.tabbar">
	<ui:with field="res"
		type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
	.header {
		position: relative;
		font-size: 1rem;
		color: #666;
		background: #f2f2f2;
		border-bottom: 1px solid #dedede;
	}
	
	.back {
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		width: 1.333333333333333em;
		border-right: 1px solid #cfcfcf;
		background-color: #dedede;
		background-image: url("images/home/breadcrumb-arrow__back.png");
		background-position: center center;
		background-repeat: no-repeat;
		background-size: 50%;
		-webkit-transition: background-color 0.2s, border-color 0.2s;
		-moz-transition: background-color 0.2s, border-color 0.2s;
		transition: background-color 0.2s, border-color 0.2s;
	}
	
	.back:hover {
		background-color: #cfcfcf;
	}
	
	.content {
		width: 100%;
		height: 100%;
	}
	
	.tabs {
		clear: both;
		padding-top: 1rem;
	}
	</ui:style>

	<g:FlowPanel>
		<g:HTMLPanel addStyleNames="{style.header}">
			<a class="{style.back}" ui:field="back" style="display: none;"></a>
			<div class="{res.mediaCss.grid}">
				<g:SimplePanel ui:field="additionalHeader" />

				<c:TabBar ui:field="tabBar" addStyleNames="{res.mediaCss.small12} {res.mediaCss.columns}" />
			</div>
		</g:HTMLPanel>
		<g:SimplePanel ui:field="tabContentPanelUi" addStyleNames="{style.content}" />
	</g:FlowPanel>
</ui:UiBinder>