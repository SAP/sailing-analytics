<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.autoplay.client.shared.oldleaderboard.OldLeaderboardResources" />
		<g:HTMLPanel>
		    <g:HTMLPanel ui:field="contentPanel" styleName="{local_res.css.leaderboardAndTitlePanel}">
		        <table class="{local_res.css.leaderboardAndTitleTable}">
		            <tr>
		                <td width="50%"><div ui:field="lastScoringCommentDiv" class="{local_res.css.regattaleaderboard_meta_scoring_comment}"></div></td>
						<td width="50%"><div ui:field="lastScoringUpdateTextDiv" class="{local_res.css.regattaleaderboard_meta_update_text}"></div></td>
		             </tr>
					<tr>
					    <td><div ui:field="scoringSchemeDiv" class="{local_res.css.regattaleaderboard_meta_scoring_type}"></div></td>
						<td><div ui:field="lastScoringUpdateTimeDiv" class="{local_res.css.regattaleaderboard_meta_update_timestamp}"></div></td>
					</tr>
					<tr>
						<td colspan="2">
							<g:HTMLPanel ui:field="oldLeaderboardPanel">
							</g:HTMLPanel>
						</td>
					</tr>
     			</table>
		    </g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>    
