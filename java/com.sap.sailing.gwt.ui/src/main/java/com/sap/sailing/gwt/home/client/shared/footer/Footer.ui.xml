<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.footer.FooterResources" />
    <g:HTMLPanel>
		<!-- Website footer-->
		<footer class="{local_res.css.sitefooter}">
		  <div class="{res.mainCss.grid}">
		    <div class="{res.mediaCss.small8} {res.mediaCss.columns}">
		      <div class="{local_res.css.sitefooter_copyright}"><ui:text from='{i18n.footerCopyright}'/></div>
		      <div class="{local_res.css.sitefooter_links}">
		          <a href="http://www.sap.com/about/legal/impressum.html" target="_blank" class="{local_res.css.sitefooter_links_link}">
		              <ui:text from='{i18n.footerLegal}'/>
		          </a>
		          <a href="http://www.sap.com/about/legal/privacy.html" target="_blank" class="{local_res.css.sitefooter_links_link}">
		              <ui:text from='{i18n.footerPrivacy}'/>
		          </a></div>
		    </div>
		    <div class="{res.mediaCss.small4} {res.mediaCss.columns} {local_res.css.sitefooter_language}">
		        <ui:text from='{i18n.footerLanguage}'/>:<g:Anchor ui:field="changeLanguageLink" styleName="{local_res.css.sitefooter_language_link}" /></div>
		  </div>
		</footer>
	</g:HTMLPanel>
</ui:UiBinder>
