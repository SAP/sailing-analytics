<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:com.sap.sse.gwt.client.controls.languageselect"
             xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.footer.FooterResources" />
    <g:HTMLPanel>
        <!-- Footer mobile -->
        <footer class="{local_res.css.sitefooter}">
            <div class="{res.mediaCss.grid}">
                <l:LanguageSelector  ui:field="languageSelector" labelText="{i18n.footerLanguage}"
                    addStyleNames="{local_res.css.sitefooter_language} {res.mediaCss.small12} {res.mediaCss.columns}"/>
                <div class="{local_res.css.sitefooter_links} {res.mediaCss.small12} {res.mediaCss.columns}">
                    <a ui:field="imprintAnchorLink"> 
                        <ui:text from='{i18n.footerLegal}' />
                    </a>
<!--                     <a href="http://www.sap.com/about/legal/impressum.html" -->
<!--                         title="{i18n.footerLegal}"> -->
<!--                         <ui:text from='{i18n.footerLegal}' /> -->
<!--                     </a> -->
                    |
                    <a href="https://www.sap.com/about/legal/privacy.html"
                        title="{i18n.footerPrivacy}">
                        <ui:text from='{i18n.footerPrivacy}' />
                    </a>
                    <br></br>
                    <a ui:field="supportAnchor" href="https://support.sapsailing.com"
                        title="{i18n.footerSupport}">
                        <ui:text from='{i18n.footerSupport}' />
                    </a>
                    |
                    <a ui:field="feedbackAnchor" href="" title="{i18n.footerFeedback}">
                        <ui:text from='{i18n.footerFeedback}' />
                    </a>
                    |
                    <a ui:field="desktopUi" href="HomeDesktop.html" title="Desktop">
                        Desktop
                    </a>
                    <br></br>
                    <g:Anchor title="{i18n.whatsNew}" ui:field="whatsNewLinkUi">
                        <ui:text from='{i18n.whatsNew}' />
                    </g:Anchor>
                </div>
                <div ui:field="copyrightDiv" class="{res.mediaCss.small12} {res.mediaCss.columns}">
                    <ui:text from='{i18n.footerCopyright}' />
                </div>
            </div>
        </footer>
    </g:HTMLPanel>
</ui:UiBinder>