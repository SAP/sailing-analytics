<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.managementconsole.partials.header.HeaderResources" />

    <g:HTMLPanel tag="header" addStyleNames="{local_res.style.header}">
        <a ui:field="logoAnchor" class="{res.mediaCss.hideonsmall} {local_res.style.logo}" target="_blank" />
        <g:FlowPanel tag="nav" ui:field="desktopMenu" addStyleNames="{res.mediaCss.hideonsmall} {local_res.style.menu}" />
        <div ui:field="actions" class="{local_res.style.actions}">
            <g:Anchor ui:field="userDetails" addStyleNames="{res.mediaCss.hideonsmall} {local_res.style.account}" />
            <a ui:field="navigationAnchor" class="{res.mediaCss.showonsmall} {app_res.icons.icon} {app_res.icons.iconNavigation}" />
            <nav ui:field="mobileMenu" class="{res.mediaCss.showonsmall} {local_res.style.menuMobile}">
                <g:FlowPanel ui:field="mobileMenuActions" />
                <div class="{local_res.style.separator}" />
                <g:Anchor ui:field="userDetailsMobile" text="{i18n.userDetails}"
                    addStyleNames="{app_res.style.anchor} {local_res.style.item}" />
                <g:Anchor ui:field="signOutMobile" text="{i18n.signOut}"
                    addStyleNames="{app_res.style.anchor} {app_res.style.highlighted} {local_res.style.item}" />
            </nav>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>