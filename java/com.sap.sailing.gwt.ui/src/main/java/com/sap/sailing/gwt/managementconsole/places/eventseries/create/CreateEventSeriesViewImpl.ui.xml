<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dt="urn:import:com.sap.sse.gwt.client.controls.datetime"
             xmlns:los="urn:import:com.sap.sailing.gwt.managementconsole.partials.inputs.listofstrings">
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <g:HTMLPanel>
        <div class="{res.mediaCss.grid}">     
            <div class="{res.mediaCss.column}">
                <g:Anchor ui:field="back" addStyleNames="{app_res.icons.icon} {app_res.icons.iconBack} {app_res.style.backNavigation}" />
            </div>
        </div>
        <div class="{res.mediaCss.grid}" style="padding-bottom:2rem;">
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.title}"><ui:text from='{i18n.createEventSeries}' /></div>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.text}"><ui:text from='{i18n.createEventSeriesSubtitle}' /></div>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="eventSeriesName"><ui:text from='{i18n.nameLabel}' /></label>
                <input ui:field="nameInput" placeholder="{i18n.eventSeriesNamePlaceholder}"/>
            </div>
             <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="description"><ui:text from='{i18n.description}' /></label>
                <input ui:field="description" placeholder="{i18n.description}"/>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="shortName"><ui:text from='{i18n.shortName}' /></label>
                <input ui:field="shortName" placeholder="{i18n.shortName}"/>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="isPublic"><ui:text from='{i18n.isListedOnHomepage}' /></label>
                <g:CheckBox ui:field="isPublic"/>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}" style="float:right">
                <g:Button ui:field="createEventSeriesButton" text="{i18n.createEventSeriesButton}" addStyleNames="{app_res.style.button} {app_res.style.buttonRight} {app_res.style.primary}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>