<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.place.event"
    xmlns:p="urn:import:com.sap.sailing.gwt.home.client.place.leaderboard"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.regattaleaderboard.EventRegattaLeaderboardResources" />
    <ui:with field="local_res2" type="com.sap.sailing.gwt.home.client.shared.leaderboard.RegattaAnalyticsResources" />
	<g:HTMLPanel>
		<s:header.CompactEventHeader ui:field='eventHeader'/>
		<div class="{res.mainCss.grid}">
    		<div class="{res.mainCss.navbar}">
			    <h3 class="{local_res.css.eventregattaleaderboard_meta_title}">
			        <span style="color:darkgrey;"><ui:text from='{i18n.regatta}'/></span>
			        <span ui:field="title"></span>
			    </h3>
    		</div>
		</div>
		  <div class="{res.mainCss.grid}">
    		<div class="{res.mainCss.navbar}">
    		    <g:Anchor ui:field="leaderboardAnchor" href="javascript:;" styleName="{res.mainCss.navbar_button}"><ui:text from="{i18n.leaderboard}" /></g:Anchor>
    		    <g:Anchor ui:field="competitorChartsAnchor" href="javascript:;" styleName="{res.mainCss.navbar_button}"><ui:text from="{i18n.competitorsAnalytics}" /></g:Anchor>
    		</div>
          </div>
		<g:HTMLPanel ui:field="leaderboardTabPanel">
			<!-- The leaderboard of a regatta-->
			<div class="{res.mainCss.grid} {local_res.css.eventregattaleaderboard_meta}">
			  <div class="{res.mediaCss.small9} {res.mediaCss.columns}">
			    <div ui:field="lastScoringCommentDiv" class="{local_res.css.eventregattaleaderboard_meta_update}"></div>
			    <div ui:field="lastScoringUpdateTimeDiv" class="{local_res.css.eventregattaleaderboard_meta_update}"></div>
			    <div ui:field="liveRaceDiv" style="color:red;" class="{local_res.css.eventregattaleaderboard_meta_update}"></div>
			  </div>
			  <div class="{res.mediaCss.small3} {res.mediaCss.columns}">
				<g:Anchor ui:field="autoRefreshAnchor" href="javascript:;" styleName="{res.mainCss.button} {local_res.css.eventregattaleaderboard_meta_reload}"></g:Anchor>
			    <g:Anchor ui:field="settingsAnchor" href="javascript:;" styleName="{res.mainCss.button} {local_res.css.eventregattaleaderboard_meta_settings}"></g:Anchor>
	     	  </div>
			  <div class="{res.mediaCss.large12} {res.mediaCss.columns}">
	              	<g:HTMLPanel ui:field="oldLeaderboardPanel" styleName="{local_res2.css.oldLeaderboardPanel}">
	        		</g:HTMLPanel>
			   </div>
			</div>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="competitorChartsTabPanel">
			<div class="{res.mainCss.grid}">
			   <div class="{res.mediaCss.large12} {res.mediaCss.columns}">
			    <h3><ui:text from="{i18n.competitorsAnalytics}" /></h3>
			    <g:ListBox ui:field="chartTypeSelectionListBox" />
              	<g:HTMLPanel ui:field="competitorChartsPanel">
        		</g:HTMLPanel>
			  </div>
			</div>		    		    
		</g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>    
