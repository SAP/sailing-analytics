<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.place.event"
    xmlns:p="urn:import:com.sap.sailing.gwt.home.client.place.series"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.event.regattaleaderboard.EventRegattaLeaderboardResources" />
    <ui:with field="local_res2" type="com.sap.sailing.gwt.home.client.place.event.seriesanalytics.EventSeriesAnalyticsResources" />
	<g:HTMLPanel>
		<s:header.CompactEventHeader ui:field='eventHeader'/>
		<div class="{res.mediaCss.grid} {local_res.css.regattaleaderboard}">
		  <div class="{res.mediaCss.small12} {res.mediaCss.columns} {local_res.css.regattaleaderboard_meta}">
		    <h3 class="{local_res.css.regattaleaderboard_meta_title}">
		        <span style="color:darkgrey;"><ui:text from='{i18n.series}'/></span>
		        <span ui:field="title"></span>
		    </h3>		      
		      <div ui:field="liveRaceDiv" class="{res.mainCss.label} {local_res.css.regattaleaderboard_meta_status} {local_res.css.regattaleaderboard_meta_statuslive}">
		          <ui:text from='{i18n.live}'/>
		      </div>
		  </div>
		  <div class="{res.mediaCss.small12} {res.mediaCss.columns} {local_res.css.regattaleaderboard_meta_navigation}">
			<g:Anchor ui:field="overallLeaderboardAnchor" styleName="{res.mainCss.navbar_button}"><ui:text from="{i18n.overallLeaderboard}" /></g:Anchor>
		    <g:Anchor ui:field="regattaLeaderboardsAnchor" styleName="{res.mainCss.navbar_button}"><ui:text from="{i18n.regattaLeaderboards}" /></g:Anchor>
			<g:Anchor ui:field="competitorChartsAnchor" styleName="{res.mainCss.navbar_button}"><ui:text from="{i18n.competitorsAnalytics}" /></g:Anchor>
		  </div>
		</div>
		<g:HTMLPanel ui:field="overallLeaderboardTabPanel">
			<s:oldleaderboard.OldLeaderboard ui:field='oldOverallLeaderboardComposite'/>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="regattaLeaderboardsTabPanel">
			<s:oldmultileaderboard.OldMultiLeaderboard ui:field='oldRegattaLeaderboardsComposite'/>
		</g:HTMLPanel>	
		<g:HTMLPanel ui:field="competitorChartsTabPanel">
			<s:oldcompetitorcharts.OldCompetitorCharts ui:field='oldCompetitorChartsComposite'/>
		</g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>    
