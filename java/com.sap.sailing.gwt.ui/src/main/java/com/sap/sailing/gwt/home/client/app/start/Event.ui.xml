<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
	<ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:style>
.event {
  font-size: 16px;
  font-size: 1rem;
  display: inline-block;
  margin-right: 1.875em;
  margin-bottom: 2.8125em;
  width: 23.125em;
}
.event:hover {
  text-decoration: none;
}
.event:nth-child(3n+3) {
  margin-right: 0;
}
.event_image {
  position: relative;
}
.event_image_new {
  position: absolute;
  bottom: 0;
  right: 0;
}
.event_name {
  font-size: 1.375em;
  font-weight: bold;
  color: #00a2df;
  margin-top: 0.3125em;
}
.event_location {
  color: #222;
}
    </ui:style>
	<g:HTMLPanel>
		<figure class="{style.event_image}"><img src="images/event-1.jpg"/></figure>
	  	<div class="{style.event_name}"><g:Label ui:field="eventName"/></div>
		<div class="{style.event_location}"><g:Label ui:field="eventLocation"/></div>
	</g:HTMLPanel>
</ui:UiBinder>