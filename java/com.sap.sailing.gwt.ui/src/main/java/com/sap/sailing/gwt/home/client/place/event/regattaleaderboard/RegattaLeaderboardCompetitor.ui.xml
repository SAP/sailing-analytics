<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.eventregattaleaderboard.RegattaLeaderboardCompetitorResources" />
    <g:HTMLPanel>

<tr class="{local_res.css.leaderboardcompetitor}">
  <td class="{local_res.css.leaderboardcompetitor_itemcenter}">{competitor.rank}</td>
  <td class="{local_res.css.leaderboardcompetitor_item}"><img src="assets/flags/{competitor.countryCode}.png" alt="{competitor.nationality}" width="32" height="32" class="{local_res.css.leaderboardcompetitor_nationality}"></img><span>{competitor.sailID}</span></td>
  <td class="{local_res.css.leaderboardcompetitor_item}">{competitor.name}</td>
  <td class="{local_res.css.leaderboardcompetitor_itemcenter}">
    <table class="{local_res.css.leaderboardcompetitor_item_table}">
      <tr>{#each raceScore in competitor.raceScores}<s:eventRegattaLeaderboard.RegattaLeaderboardCompetitorRaceScore ui:field='raceScore'></s>{/each competitor.raceScores}
      </tr>
    </table>
  </td>
  <td class="{local_res.css.leaderboardcompetitor_itemcenter}">{competitor.totalPoints}</td>
</tr>
    </g:HTMLPanel>
</ui:UiBinder>
