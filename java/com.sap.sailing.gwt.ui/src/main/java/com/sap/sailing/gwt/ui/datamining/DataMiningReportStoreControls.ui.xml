<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sse.datamining.ui.client.StringMessages" />
    <ui:style>
        .inline {
        display: inline-block
        }
        .seperator {
        background-color: gray;
        height: 1.6666666em;
        width: 1px;
        display: inline-block;
        vertical-align: middle;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.inline}">
        <div class="{style.seperator}" />
        <div class="{style.inline}"><ui:text from='{i18n.loadOrSaveReports}' /></div>
        <g:SuggestBox ui:field="suggestBoxUi" />
        <g:Button ui:field="saveReportButtonUi" />
        <g:Button ui:field="loadReportButtonUi" />
        <g:Button ui:field="removeReportButtonUi" />
    </g:HTMLPanel>
</ui:UiBinder> 