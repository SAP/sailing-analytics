<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
             
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <g:HTMLPanel>
        <div class="{res.mediaCss.grid}">     
            <div class="{res.mediaCss.column}">
                <g:Anchor ui:field="back" addStyleNames="{app_res.icons.icon} {app_res.icons.iconBack} {app_res.style.backNavigation}" />
            </div>
        </div>
        <div class="{res.mediaCss.grid}" style="padding-bottom:2rem;">
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.title}"><ui:text from='{i18n.addRegattaClass}' /></div>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.text}"><ui:text from='{i18n.addRegattaSubtitle}' /></div>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="boatClass"><ui:text from='{i18n.boatClassLabel}' /></label>
                <input id="boatClass" placeholder="{i18n.boatClassPlaceholder}"/>
            </div>
             <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="name"><ui:text from='{i18n.regattaNameLabel}' /></label>
                <input id="name" placeholder="49 Regatta"/>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small3} {res.mediaCss.medium3}">
                <label for="races"><ui:text from='{i18n.racesLabel}' /></label>
                <input id="races" placeholder="10" style="min-width: 2rem;"/>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small9} {res.mediaCss.medium9}">
                <label for="ranking"><ui:text from='{i18n.rankingLabel}' /></label>
                <input id="ranking" placeholder="One-Design"/>
            </div>           
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="scoring"><ui:text from='{i18n.scoringSystemLabel}' /></label>
                <input id="scoring" placeholder="Low Point System"/>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}" style="float:right">
                <g:Button ui:field="addRegattaButton" text="{i18n.addRegattaButton}" addStyleNames="{app_res.style.button} {app_res.style.buttonRight} {app_res.style.primary}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>