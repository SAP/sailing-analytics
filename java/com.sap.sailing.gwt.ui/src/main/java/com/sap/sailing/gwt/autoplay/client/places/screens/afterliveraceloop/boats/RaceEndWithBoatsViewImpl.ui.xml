<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rf="urn:import:com.sap.sse.gwt.client.panels">
	<ui:with field="res"
		type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
	<ui:style gss="true">
	.left {
		position: absolute;
		display: inline-block;
		width: 40%;
		height: 100%;
		overflow-y: auto;
	}
	
	.right {
		position: absolute;
		display: inline-block;
		right: 0px;
		width: 60%;
		height: 93%;
		padding: 0px;
	}
	
	.image {
		display: inline-block;
		height: calc(70% - 70px);
		margin-top: 15%;
		margin-bottom: calc(15% + 70px);
		margin-left: 1%;
		margin-right: 1%;
		width: 31.3%;
		
	}
	
	.image img {
		display: block;
		height: 90%;
		width: 100%;
		max-height: 90%;
		border-radius: 4px;
	}
	
	.image::before {
		box-shadow: inset 0 0px white, 0 0px white, 0 0 0px 0px white, 0 0 10px
			5px white;
		position: absolute;
		top: 0;
		height: 100%;
		content: "";
	}
	
	.subline1 {
	    margin-top: 10px;
		font-size: 35px;
		text-align: center;
		font-weight: bold;
	}
	
	.subline2 {
        margin-top: 10px;
		font-size: 30px;
		text-align: center;
		font-weight: bold;
	}
	
	.subline3 {
		font-size: 30px;
		text-align: center;
        font-weight: bold;
	}
	
	.statistics {
		position: absolute;
		background-color: black;
		width: 60%;
		right: 0px;
		bottom: 0px;
		height: 80px;
		font-size: 1rem;
		display: flex;
		-webkit-align-items: center;
		-moz-box-align: center;
		-ms-flex-align: center;
		align-items: center;
		-webkit-justify-content: space-around;
		-ms-flex-pack: distribute;
		justify-content: space-around;
		background: #333;
		border-top: .3125em solid #f0ab00;
		padding: .9375em 0;
	}
	
	.info-overlay__item {
		text-align: center;
		color: #fff;
		-webkit-box-flex: 1;
		-webkit-flex: 1 0 auto;
		-moz-box-flex: 1;
		-ms-flex: 1 0 auto;
		flex: 1 0 auto;
		border-right: 1px solid #999;
	}
	
	.info-overlay__item__value {
		font-size: 1.5em;
	}
	
	.info-overlay__item__property {
		font-size: 1em;
		font-weight: 700;
		text-transform: uppercase;
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{res.style.slideBackground}">
		<rf:ResizableFlowPanel ui:field="leaderBoardHolder"
			styleName="{style.left}" />
		<rf:ResizableFlowPanel ui:field="infoHolder"
			styleName="{style.right}">
			<rf:ResizableFlowPanel styleName="{style.image}">
				<g:FlowPanel ui:field="image2" />
			    <g:Label ui:field="subline2" styleName="{style.subline2}" />
			</rf:ResizableFlowPanel>
			<rf:ResizableFlowPanel styleName="{style.image}">
				<g:FlowPanel ui:field="image1" />
			    <g:Label ui:field="subline1" styleName="{style.subline1}" />
			</rf:ResizableFlowPanel>
			<rf:ResizableFlowPanel styleName="{style.image}">
				<g:FlowPanel ui:field="image3" />
			    <g:Label ui:field="subline3" styleName="{style.subline3}" />
			</rf:ResizableFlowPanel>
		</rf:ResizableFlowPanel>
		<rf:ResizableFlowPanel styleName="{style.statistics}"
			ui:field="statistics">
			<rf:ResizableFlowPanel styleName="{style.info-overlay__item}">
				<g:Label ui:field="statisticValue1" styleName="{style.info-overlay__item__value}">10.3 kts</g:Label>
				<g:Label ui:field="statisticProperty1" styleName="{style.info-overlay__item__property}">Wind</g:Label>
			</rf:ResizableFlowPanel>
			<rf:ResizableFlowPanel styleName="{style.info-overlay__item}">
				<g:Label ui:field="statisticValue2" styleName="{style.info-overlay__item__value}">10.3 kts</g:Label>
				<g:Label ui:field="statisticProperty2" styleName="{style.info-overlay__item__property}">Wind</g:Label>
			</rf:ResizableFlowPanel>
			<rf:ResizableFlowPanel styleName="{style.info-overlay__item}">
				<g:Label ui:field="statisticValue3" styleName="{style.info-overlay__item__value}">10.3 kts</g:Label>
				<g:Label ui:field="statisticProperty3" styleName="{style.info-overlay__item__property}">Wind</g:Label>
			</rf:ResizableFlowPanel>
		</rf:ResizableFlowPanel>
	</rf:ResizableFlowPanel>
</ui:UiBinder> 