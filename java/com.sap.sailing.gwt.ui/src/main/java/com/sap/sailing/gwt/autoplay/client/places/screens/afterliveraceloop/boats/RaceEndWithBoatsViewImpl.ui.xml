<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rf="urn:import:com.sap.sse.gwt.client.panels">
	<ui:with field="res"
		type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
	<ui:style>
	.left {
		position: absolute;
		display: inline-block;
		width: 40%;
		height: 100%;
		overflow-y: auto;
		bottom: 60px;
	}
	
	.right {
		position: absolute;
		display: inline-block;
		right: 0px;
		height: 100%;
		width: 60%;
	}
	
	.image {
		display: inline-block;
		height: auto;
        margin-left: 5%;
        margin-right: 5%;
		width: 20%;
		height: 90%;
		border-radius: 4px;
	}
	
	.image img {
		display: block;
		height: auto;
		width: 100%;
		max-height: 90%;
		border-radius: 4px;
	}
	
	.image::before {
		box-shadow: inset 0 0px white, 0 0px white, 0 0 0px 0px white, 0 0 10px
			5px white;
		position: absolute;
		top: 0;
		height: 100%;
		content: "";
	}
	
	.subline1 {
		font-size: 30px;
		position: absolute;
		text-align: center;
		width: 30%;
		height: 10%;
		font-weight: bold;
		bottom: 40px;
		left: 34%;
	}
	
	.subline2 {
		font-size: 30px;
		position: absolute;
		text-align: center;
		width: 30%;
		height: 10%;
		font-weight: bold;
		bottom: 40px;
		left: 0%;
	}
	
	.subline3 {
		font-size: 30px;
		position: absolute;
		text-align: center;
		width: 30%;
		height: 10%;
		font-weight: bold;
		bottom: 40px;
		right: 0%;
	}
	
	.bottom {
		font-size: 20px;
		text-align: center;
	}
	
	.bottomLine {
		
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{res.style.slideBackground}">
		<rf:ResizableFlowPanel ui:field="leaderBoardHolder"
			styleName="{style.left}" />
		<rf:ResizableFlowPanel ui:field="infoHolder"
			styleName="{style.right}">
			<rf:ResizableFlowPanel styleName="{style.image}">
				<g:Image ui:field="image1" />
			</rf:ResizableFlowPanel>
			<rf:ResizableFlowPanel styleName="{style.image}">
				<g:Image ui:field="image2" />
			</rf:ResizableFlowPanel>
			<rf:ResizableFlowPanel styleName="{style.image}">
				<g:Image ui:field="image3" />
			</rf:ResizableFlowPanel>
			<g:Label ui:field="subline1" styleName="{style.subline1}" />
			<g:Label ui:field="subline2" styleName="{style.subline2}" />
			<g:Label ui:field="subline3" styleName="{style.subline3}" />
		</rf:ResizableFlowPanel>
		<rf:ResizableFlowPanel styleName="{res.style.bottom">
			<g:Label ui:field="bottomText" styleName="{style.bottomLine" />
		</rf:ResizableFlowPanel>
	</rf:ResizableFlowPanel>
</ui:UiBinder> 