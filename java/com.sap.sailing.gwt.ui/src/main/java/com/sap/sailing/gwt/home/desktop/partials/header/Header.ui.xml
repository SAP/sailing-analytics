<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
  <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
  <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.desktop.partials.header.HeaderResources" />
  <g:HTMLPanel tag="header" addStyleNames="{local_res.css.siteheader}">
    <!-- Website header-->
      <div class="{res.mediaCss.grid}" style="display:table;">
        <div class="{local_res.css.siteheader_logo}">
          <a ui:field="logoAnchor" href="https://www.sap.com/sponsorships">
            <img ui:field="logoImage" src="images/home/logo-small@2x.png" alt="{i18n.headerLogo}" class="{local_res.css.siteheader_logo_image}"></img>
            <p class="{local_res.css.siteheader_logo_title}">
              <ui:text from='{i18n.headerLogo}' />
            </p>
          </a>
        </div>
        <nav class="{local_res.css.sitenavigation}">
          <!-- -->
          <g:Anchor ui:field="startPageLink"
            styleName="{local_res.css.sitenavigation_link}" text="{i18n.home}" />
          <g:Anchor ui:field="eventsPageLink"
            styleName="{local_res.css.sitenavigation_link}" text="{i18n.events}" />
          <g:Anchor ui:field="solutionsPageLink"
            styleName="{local_res.css.sitenavigation_link}" text="{i18n.solutions}" />
          <g:Anchor ui:field="adminConsolePageLink"
            styleName="{local_res.css.sitenavigation_link}" text="{i18n.manageEvents}" target="adminConsoleWindow"/>
          <g:Anchor ui:field="dataMiningPageLink"
            styleName="{local_res.css.sitenavigation_link}" text="{i18n.dataMining}" target="dataMiningWindow"/>
        </nav>
        <nav class="{local_res.css.sitenavigation_fixed}">
        <!-- -->
            <g:Anchor ui:field="headerNavigationIcon" styleName="{local_res.css.sitenavigation_link} {local_res.css.header_navigation_icon}"></g:Anchor>
            <div ui:field="headerNavigationDropDownMenuContainer" class="{local_res.css.sitenavigation_dropdown_container}">
		    <ul>
		        <li id="a">
		            <g:Anchor ui:field="startPageLinkMenu"
		                styleName="{local_res.css.sitenavigation_link}" text="{i18n.home}" />
		        </li>
		        <li id="b">
		            <g:Anchor ui:field="eventsPageLinkMenu"
		                styleName="{local_res.css.sitenavigation_link}" text="{i18n.events}" />
		        </li>
		        <li id="c">
		            <g:Anchor ui:field="solutionsPageLinkMenu"
		                styleName="{local_res.css.sitenavigation_link}"
		                text="{i18n.solutions}" />
		        </li>
		        <li id="d">
		            <g:Anchor ui:field="adminConsolePageLinkMenu"
		                styleName="{local_res.css.sitenavigation_link}"
		                text="{i18n.manageEvents}" target="adminConsoleWindow" />
		        </li>
		        <li id="e">
		            <g:Anchor ui:field="dataMiningPageLinkMenu"
		                styleName="{local_res.css.sitenavigation_link}"
		                text="{i18n.dataMining}" target="dataMiningWindow" />
		        </li>
		    </ul>
            </div>
            <span class="{local_res.css.search} {local_res.css.sitenavigation_search}">
            <g:TextBox ui:field="searchText" styleName="{local_res.css.search_textfield}" />
            <g:Button ui:field="searchButton" styleName="{res.mainCss.button} {res.mainCss.buttonsearch} {local_res.css.search_button}" />
          </span>
          <g:Anchor addStyleNames="{local_res.css.sitenavigation_link} {local_res.css.user_menu_button}" ui:field="usermenu"/>
          <div id="usrMngmtFlyover" />
          <!--  -->
        </nav>
      </div>
  </g:HTMLPanel>
</ui:UiBinder>
