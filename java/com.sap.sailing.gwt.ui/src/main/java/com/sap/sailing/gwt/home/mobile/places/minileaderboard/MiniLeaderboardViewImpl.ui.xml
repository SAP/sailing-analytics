<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
    xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	>
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />

	<ui:with 
		field="res" 
		type="com.sap.sailing.gwt.home.mobile.resources.SharedResources" />

	<ui:style>
		.fullWidthButton {
			width: 100%;
			margin-bottom: 1rem;
			text-align: center;		
		}
		.holder {
			padding: 1rem;
		}
		.notAvailableMessage {
			font-size: 1.5em;
			margin: 1em 0em;
			line-height: 1.4em;
		}
	</ui:style>	

	<g:HTMLPanel>
		<mp:minileaderboard.MinileaderboardBox ui:field="minileaderboardUi"/>


		<div class="{style.holder}">
	   		<a class="{res.mainCss.button} {res.mainCss.buttonprimary} {style.fullWidthButton}" ui:field="gotoDesktopUi"
	   		><ui:text from="{i18n.gotoDesktop}" /></a>
		</div>
  
	</g:HTMLPanel>	
   	
</ui:UiBinder>    
