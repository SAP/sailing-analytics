<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
    xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	>
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />

	<ui:with 
		field="res" 
		type="com.sap.sailing.gwt.home.mobile.resources.SharedResources" />

	<ui:style>
		.headerWrapper {
			background-color: #f2f2f2;
			padding-bottom: 10px;
		}
	</ui:style>	
	<g:HTMLPanel>
		<div class="{style.headerWrapper}">
			<mp:eventheader.EventHeader ui:field="eventHeaderUi" />
			<mp:quickfinder.Quickfinder ui:field="quickFinderUi" />
			<!-- TODO do we need this here? -->
			<!-- 
			<mp:simpleinfoblock.SimpleInfoBlock ui:field="sailorInfoUi" /> 
			-->
		</div>
		<mp:minileaderboard.MinileaderboardBox ui:field="minileaderboardUi"/>
	</g:HTMLPanel>	
</ui:UiBinder>
