<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sp="urn:import:com.sap.sailing.gwt.home.shared.partials">
    <ui:with field="res"
        type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="i18n_sec"
        type="com.sap.sse.security.ui.client.i18n.StringMessages" />

    <g:HTMLPanel addStyleNames="{res.mediaCss.grid}">
        <form action="" method="">
            <div class="{res.mainCss.input}">
                <div class="{res.mainCss.input_label}">
                    <ui:text from='{i18n_sec.password}' />
                </div>
                <g:PasswordTextBox ui:field="newPasswordUi"
                    addStyleNames="{res.mainCss.input_input}" />
            </div>
            <div class="{res.mainCss.input}">
                <div class="{res.mainCss.input_label}">
                    <ui:text from='{i18n_sec.passwordRepeat}' />
                </div>
                <g:PasswordTextBox ui:field="newPasswordConfirmationUi"
                    addStyleNames="{res.mainCss.input_input}" />
            </div>
            <g:Button ui:field="changePasswordUi"
                addStyleNames="{res.mainCss.button} {res.mainCss.buttonprimary}">
                <ui:text from='{i18n_sec.changePassword}' />
            </g:Button>
        </form>
    </g:HTMLPanel>
</ui:UiBinder>    
