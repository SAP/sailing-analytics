<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.shared.usermanagement.UserManagementResources" />
    <g:HTMLPanel>
        <div class="{local_res.css.form_title} {local_res.css.form_subtitle}">TODO Signed in as:</div>
        <div class="{local_res.css.info_user}">
            <div class="{local_res.css.info_user_image}">
                <div class="{local_res.css.info_user_image_item}" ui:field="userImageUi"></div>
            </div>
            <div class="{local_res.css.info_user_realname}" ui:field="userRealnameUi">TODO Max Mustermann</div>
            <div class="{local_res.css.info_user_username}" ui:field="userUsernameUi">TODO user001</div>
        </div>
         <div class="{local_res.css.form_actions}">
            <g:Anchor addStyleNames="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimaryoutlined}" 
                    ui:field="userProfileUi">TODO User profile</g:Anchor>
            <g:Anchor addStyleNames="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimaryoutlined}" 
                    ui:field="signOutUi">TODO Sign out</g:Anchor>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
