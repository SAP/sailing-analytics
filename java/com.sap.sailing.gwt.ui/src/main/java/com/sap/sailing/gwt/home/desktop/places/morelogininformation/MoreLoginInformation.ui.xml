<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:login="urn:import:com.sap.sailing.gwt.home.desktop.places.morelogininformation">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.shared.places.morelogininformation.MoreLoginInformationResources" />
    <ui:style>

    </ui:style>
    <g:HTMLPanel addStyleNames="{res.mediaCss.grid}">
        <h1 class="{res.mediaCss.small12} {res.mediaCss.columns}"><ui:text from="{i18n.moreLoginInformationHeadline}" /></h1>
        <p class="{res.mediaCss.small12} {res.mediaCss.columns}"><ui:text from="{i18n.moreLoginInformationIntroduction}" /></p>
        <login:MoreLoginInformationContent title="{i18n.moreLoginInformationSectionUserSettingsHeading}" image="{local_res.settings.getSafeUri}" imageOnLeft="true" content="{i18n.moreLoginInformationSectionUserSettingsDescription}" />
        <login:MoreLoginInformationContent title="{i18n.strategySimulator}" image="{local_res.simulator.getSafeUri}" imageOnLeft="false" content="{i18n.moreLoginInformationSectionStrategySimulatorDescription}" />
        <login:MoreLoginInformationContent title="{i18n.moreLoginInformationSectionUserNotificationsHeading}" image="{local_res.notifications.getSafeUri}" imageOnLeft="true" content="{i18n.moreLoginInformationSectionUserNotificationsDescription}" />
    </g:HTMLPanel>
</ui:UiBinder>
