.header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.header .logo,
.header .actions {
    flex-shrink: 0;
}

.header .logo,
.header .logo:hover,
.header .logo:visited {
    display: inline-block;
    gwt-sprite: "sapLogo";
    background-size: cover;
    width: 80px;
    height: 40px;
    text-decoration: none;
}

.header .actions .menu-mobile {
    background-color: BACKGROUND_COLOR_DARKEST;
    padding: 1rem;
    position: fixed;
    top: 0;
    bottom: 0;
    right: -100%;
    z-index: 1;
    overflow-y: auto;
    transition: right 500ms ease;
}

.header .actions .menu-mobile.active {
    right: 0;
}

.header .actions .menu-mobile .item {
    display: block;
    padding: .75rem;
}

.header .actions .menu-mobile .separator {
    height: 1px;
    background-color: TEXT_COLOR_INPUTS;
    margin: 1.5em .75rem .75rem;
}

.header .actions .account {
    background-image: resourceUrl('loggedout');
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    width: 4rem;
    height: 3rem;
}

@media (min-width: 45em) {
    .header {
        justify-content: space-between;
    }

    .header .menu {
        flex-flow: row wrap;
        padding: 0 1rem;
        flex-shrink: 1;
        justify-content: center;
    }

    .header .menu > .item {
        padding: 0 1rem;
    }

    .header .menu > a:hover {
        color: GENERIC_COLOR_HIGHLIGHT;
    }
}
