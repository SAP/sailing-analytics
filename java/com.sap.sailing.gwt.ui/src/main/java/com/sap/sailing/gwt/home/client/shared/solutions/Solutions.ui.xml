<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.solutions.SolutionsResources" />
    <g:HTMLPanel>

<!-- Page displays all solutions-->
<div class="{local_res.css.solutions}">
  <div class="{local_res.css.solutions_nav}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}"><a href="#sailing-analytics" class="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsSAPHeadline}'/></a><a href="#race" class="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsRaceHeadline}'/></a><a href="#post-race" class="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsPostHeadline}'/></a><a href="#training-diary" class="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsTrainingHeadline}'/></a><a href="#simulator" class="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsSimulatorHeadline}'/></a></div>
    </div>
  </div>
  <div id="sailing-analytics" class="{local_res.css.solutions_content} {local_res.css.solutions_contentsap}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.smalloffset7} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsSAPHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsSAPText1}'/></p>
        <p><ui:text from='{i18n.solutionsSAPText2}'/></p>
      </div>
    </div>
  </div>
  <div id="race" class="{local_res.css.solutions_content} {local_res.css.solutions_contentrace}">
    <div class="{local_res.css.parallax}"></div>
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsRaceHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsRaceText}'/></p>
      </div>
    </div>
  </div>
  <div id="post-race" class="{local_res.css.solutions_content} {local_res.css.solutions_contentpost}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.smalloffset7} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsPostHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsPostText}'/></p>
      </div>
    </div>
  </div>
  <div id="training-diary" class="{local_res.css.solutions_content} {local_res.css.solutions_contenttraining}">
    <div class="{local_res.css.parallax}"></div>
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsTrainingHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsTrainingText}'/></p><a href="https://itunes.apple.com/de/app/stg-trainingstagebuch/id779563635?l=en&amp;mt=8" target="_blank" class="{local_res.css.solutions_content_linkappstore}"><img src="../images/appstore.png"></img></a>
      </div>
    </div>
  </div>
  <div id="simulator" class="{local_res.css.solutions_content} {local_res.css.solutions_contentsimulator}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.smalloffset7} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsSimulatorHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsSimulatorText}'/></p>
      </div>
    </div>
  </div>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
