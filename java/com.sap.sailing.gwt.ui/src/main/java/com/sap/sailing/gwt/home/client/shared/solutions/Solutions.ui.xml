<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.solutions.SolutionsResources" />
    <g:HTMLPanel>

<!-- Page displays all solutions-->
<div class="{local_res.css.solutions}">
  <div class="{local_res.css.solutions_nav}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">    
          <g:Anchor ui:field="sailingAnalyticsAnchor" styleName="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsSAPHeadline}'/></g:Anchor>
          <g:Anchor ui:field="raceAnchor" styleName="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsRaceHeadline}'/></g:Anchor>
          <g:Anchor ui:field="postRaceAnchor" styleName="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsPostHeadline}'/></g:Anchor>
          <g:Anchor ui:field="trainingDiaryAnchor" styleName="{local_res.css.solutions_nav_link}"><ui:text from='{i18n.solutionsTrainingHeadline}'/></g:Anchor>
          <g:Anchor ui:field="simulatorAnchor" styleName="{local_res.css.solutions_nav_link}" ><ui:text from='{i18n.solutionsSimulatorHeadline}'/></g:Anchor>
      </div>
    </div>
  </div>
  <div ui:field="sailingAnalytics" class="{local_res.css.solutions_content} {local_res.css.solutions_contentsap}">
    <div class="{res.mainCss.grid} {local_res.css.solutions_content_grid} {local_res.css.solutions_contentsap_grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.smalloffset7} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsSAPHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsSAPText1}'/></p>
        <p><ui:text from='{i18n.solutionsSAPText2}'/></p><a href="#" class="{res.mainCss.button}">Read More</a>
      </div>
    </div>
  </div>
  <div ui:field="race" class="{local_res.css.solutions_content} {local_res.css.solutions_contentrace}">
    <div class="{local_res.css.solutions_content_parallax} {local_res.css.solutions_contentrace_parallax">
      <div class="{local_res.css.solutions_contentrace_parallax_background}"></div>
    </div>
    <div class="{res.mainCss.grid} {local_res.css.solutions_content_grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsRaceHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsRaceText}'/></p><a href="#" class="{res.mainCss.button}">Start Tour</a>
      </div>
    </div>
  </div>
  <div ui:field="postRace" class="{local_res.css.solutions_content} {local_res.css.solutions_contentpost}">
    <div class="{res.mainCss.grid} {local_res.css.solutions_contentpost_grid} {local_res.css.solutions_content_grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.smalloffset7} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsPostHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsPostText}'/></p>
      </div>
    </div>
  </div>
  <div ui:field="trainingDiary" class="{local_res.css.solutions_content} {local_res.css.solutions_contenttraining}">
    <div class="{local_res.css.solutions_content_parallax} {local_res.css.solutions_contenttraining_parallax}">
      <div class="{local_res.css.solutions_contenttraining_parallax_background}"></div>
    </div>
    <div class="{res.mainCss.grid} {local_res.css.solutions_content_grid} {local_res.css.solutions_contenttraining_grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsTrainingHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsTrainingText}'/></p>
        <a href="https://itunes.apple.com/de/app/stg-trainingstagebuch/id779563635?l=en&amp;mt=8" target="_blank" class="{local_res.css.solutions_content_linkappstore}">
            <img src="images/home/appstore.png"></img>
		</a>
      </div>
    </div>
  </div>
  <div ui:field="simulator" class="{local_res.css.solutions_content} {local_res.css.solutions_contentsimulator}">
    <div class="{res.mainCss.grid} {local_res.css.solutions_contentsimulator_grid} {local_res.css.solutions_content_grid}">
      <div class="{res.mediaCss.small5} {res.mediaCss.smalloffset7} {res.mediaCss.columns}">
        <h2><ui:text from='{i18n.solutionsSimulatorHeadline}'/></h2>
        <p><ui:text from='{i18n.solutionsSimulatorText}'/></p><a href="#" class="{res.mainCss.button}">Learn More</a>
      </div>
    </div>
  </div>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
