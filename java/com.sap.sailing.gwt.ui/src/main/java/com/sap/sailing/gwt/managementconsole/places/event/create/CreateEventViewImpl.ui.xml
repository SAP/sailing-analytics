<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
             
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <g:HTMLPanel>
        <div class="{res.mediaCss.grid}">     
            <div class="{res.mediaCss.column}">
                <g:Anchor ui:field="back" addStyleNames="{app_res.icons.icon} {app_res.icons.iconBack} {app_res.style.backNavigation}" />
            </div>
        </div>
        <div class="{res.mediaCss.grid}" style="padding-bottom:2rem;">
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.title}"><ui:text from='{i18n.createEvent}' /></div>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12}">
                <div class="{app_res.fonts.text}"><ui:text from='{i18n.createEventSubtitle}' /></div>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="name"><ui:text from='{i18n.nameLabel}' /></label>
                <input id="name" placeholder="{i18n.eventNamePlaceholder}"/>
            </div>
             <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="date"><ui:text from='{i18n.dateLabel}' /></label>
                <input id="date" placeholder="{i18n.datePlaceholder}"/>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="venue"><ui:text from='{i18n.venueLabel}' /></label>
                <input id="venue" placeholder="{i18n.venuePlaceholder}"/>
            </div>
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
	            <div class="{res.mediaCss.small12}">
	                <label for="course_areas"><ui:text from='{i18n.courseAreasLabel}' /></label> 
	            </div>
	            <div style="width:90%;float:left">
	                <input id="course_areas" placeholder="{i18n.courseAreaPlaceholder}" style="margin: 0 0 1rem;"/>
	            </div>
	            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}" style="width:10%;padding-left:0">  
	                <g:Anchor addStyleNames="{app_res.icons.icon} {app_res.icons.iconClose} {app_res.style.flexItemFixedWidth}" />
	            </div>
	            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}" style="padding:0">
	            <g:Anchor addStyleNames="{app_res.icons.icon} {app_res.icons.iconAdd} {app_res.style.flexItemFixedWidth}" />
	            </div>
            </div>
        </div>
        <div class="{res.mediaCss.grid}">
            <div class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium4}" style="float:right">
                <g:Button ui:field="createEventButton" text="{i18n.createEventButton}" addStyleNames="{app_res.style.button} {app_res.style.buttonRight} {app_res.style.primary}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>