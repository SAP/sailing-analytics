<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.desktop.partials.mainevents.MainEventsResources" />
    <g:HTMLPanel>
		<!-- The events main content-->
		<div class="{local_res.css.mainevents} {res.mainCss.mainsection}">
		  <div class="{res.mediaCss.grid}">
		    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
		      <header class="{res.mainCss.mainsection_header}">
		        <h3 class="{res.mainCss.mainsection_header_title}"><ui:text from='{i18n.mainEventTitle}'/></h3>
		      </header>
		    </div>
		  </div>
		  <g:FlowPanel ui:field="recentEventsTeaserPanel" styleName="{res.mediaCss.grid}">
		    <!-- the recent events will be inserted here -->
		  </g:FlowPanel>
		  <div class="{res.mediaCss.grid} {res.mainCss.mainsection_navigation}">
		    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
		        <g:Anchor ui:field="showAllEventsAnchor" styleName="{res.mainCss.button}"><ui:text from='{i18n.mainEventShowAll}'/></g:Anchor>
		    </div>
		  </div>
		</div>
    </g:HTMLPanel>
</ui:UiBinder>
