<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:style type="com.sap.sailing.gwt.ui.client.media.VideoJSPlayer.VideoJSStyle" ui:field="style">
        @external vjs-big-play-button;
        .vjs-big-play-button {
            display: none !important;
        }
        .player {
            width: 100%;
            height: 100%;
        }

        .invertedVideoPlayer canvas{
            transform: rotate(180deg) translateX(50%) translateZ(0) !important;
        }
    </ui:style>
    <div ui:field="playerHolder" class="{style.player}">
    </div>
</ui:UiBinder>