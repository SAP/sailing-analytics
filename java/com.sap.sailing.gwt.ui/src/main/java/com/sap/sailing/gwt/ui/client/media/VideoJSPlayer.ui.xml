<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:com.sap.sse.gwt.client.media">
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style type="com.sap.sailing.gwt.ui.client.media.VideoJSPlayer.VideoJSStyle" ui:field="style">
        @external vjs-big-play-button;
        .vjs-big-play-button {
            display: none !important;
        }
        .player {
            width: 100%;
            height: 100%;
        }

        .invertedVideoPlayer canvas{
            transform: rotate(180deg) translateX(50%) translateZ(0) !important;
        }
    </ui:style>
    <!-- <g:HTMLPanel> TODO bug6105: if we do this, nothing works anymore... but we need to somehow embed the m:MediaMenuIcon widget in here... -->
      <div ui:field="playerHolder" class="{style.player} {res.mainCss.media_wrapper}">
        <!-- <m:MediaMenuIcon ui:field="videoPlayerMenuButton" fontSize="20px" /> -->
      </div>
    <!-- </g:HTMLPanel> -->
</ui:UiBinder>