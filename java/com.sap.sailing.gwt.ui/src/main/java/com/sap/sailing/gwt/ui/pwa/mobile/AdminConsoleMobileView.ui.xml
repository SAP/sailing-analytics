<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:mobile="urn:import:com.sap.sailing.gwt.ui.pwa.mobile"
    xmlns:sse="urn:import:com.sap.sse.gwt.client">
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
    .mainContent {
        height: 100%;
    }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.mainContent}"> 
        <mobile:header.Header ui:field="header" />    
        <g:SimplePanel ui:field="content" />     
        <mobile:footer.Footer ui:field="footer" />
    </g:HTMLPanel>
</ui:UiBinder>