<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.stage.StageResources" />
    <g:HTMLPanel>

<div class="{local_res.css.stageteaser} {local_res.css.swiperslide}">
  <div class="{local_res.css.stageteaser_background}">
    <div style="background-image: url('images/home/banner-background.jpg')" class="{local_res.css.stageteaser_background_image}"></div>
  </div>
  <div class="{local_res.css.stageteaser_content}">
    <header class="{local_res.css.stageteaser_content_header}">
      <p class="{local_res.css.stageteaser_content_header_subtitle}"><span ui:field="subtitle" /></p>
      <h2 class="{local_res.css.stageteaser_content_header_title}"><span ui:field="title" /></h2>
      <div ui:field="countDown" data-starttime="xxx" data-days="xxx" data-hours="xxx" data-minutes="xxx" data-seconds="xxx" class="{local_res.css.stageteaser_content_header_countdown} {local_res.css.countdown}">
        <div class="{local_res.css.countdown_pane}">
          <div class="{local_res.css.countdown_pane_count}"></div>
          <div class="{local_res.css.countdown_pane_unit}"></div>
        </div>
        <div class="{local_res.css.countdown_pane}">
          <div class="{local_res.css.countdown_pane_count}"></div>
          <div class="{local_res.css.countdown_pane_unit}"></div>
        </div>
      </div>
    </header>
  </div>
  <div ui:field="bandCount" data-bandcount="" class="{local_res.css.stageteaser_content_band}">
    <div class="{res.mainCss.grid}">
        <g:HTMLPanel ui:field="stageTeaserBandsPanel" />
    </div>
  </div>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
