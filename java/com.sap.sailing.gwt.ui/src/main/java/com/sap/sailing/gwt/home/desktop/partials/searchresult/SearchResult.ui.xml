<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:ccb="urn:import:com.sap.sse.gwt.client.controls.busyindicator">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages"/>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.desktop.partials.searchresult.SearchResultResources" />
    <g:HTMLPanel addStyleNames="{local_res.css.searchresult}">
	  <div class="{local_res.css.searchresult_header}">
	    <div class="{res.mediaCss.grid}">
	      <div class="{res.mediaCss.small8} {res.mediaCss.columns}">
	        <div class="{local_res.css.searchresult_form}">
	          <label class="{local_res.css.searchresult_form_label} {local_res.css.searchresult_header_formlabel}">
	            <ui:text from='{i18n.searchResultHeaderLabel}'/>
	          </label>
	          <g:TextBox ui:field="searchInputUi" styleName="{local_res.css.searchresult_form_input} {local_res.css.searchresult_header_input}" />
	          <g:Button ui:field="searchButtonUi" text="{i18n.searchResultHeaderButton}" styleName="{res.mainCss.button} {local_res.css.searchresult_form_button}" />
	        </div>
	      </div>
	    </div>
	  </div>
	  
	  <div class="{local_res.css.searchresult_content}">
	    <div class="{res.mediaCss.grid} {local_res.css.searchresult_content_amount}">
	      <div class="{res.mediaCss.small8} {res.mediaCss.columns}">
	        <h5><span ui:field="searchResultAmountUi"></span></h5>
	      </div>
	    </div>
	    <div class="{res.mediaCss.grid}">
	      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
		    <g:FlowPanel ui:field="searchResultContainerUi" />
	      </div>
          <ccb:SimpleBusyIndicator ui:field="busyIndicatorUi" />
	    </div>
	  </div>
	  <!-- 
	  <div class="{local_res.css.searchresult_footer}" >
	  </div>
	   -->
    </g:HTMLPanel>
</ui:UiBinder>
