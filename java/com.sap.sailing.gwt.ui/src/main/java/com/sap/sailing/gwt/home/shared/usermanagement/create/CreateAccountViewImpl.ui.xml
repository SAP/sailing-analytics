<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="i18n_sec" type="com.sap.sse.security.ui.client.i18n.StringMessages" />
    <ui:with field="res" type="com.sap.sse.security.ui.client.usermanagement.UserManagementSharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.shared.usermanagement.UserManagementResources" />
    <g:HTMLPanel>
        <div class="{local_res.css.form_description}"><ui:text from="{i18n_sec.generalWelcome}" /></div>
        <div class="{local_res.css.form_errors}" ui:field="formErrorUi"></div>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.email}" /></label>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="emailUi"/>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.username}" /></label>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="usernameUi"/>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.name}" /></label>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="nameUi"/>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.company}" /></label>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="companyUi"/>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.password}" /></label>
        <g:PasswordTextBox addStyleNames="{local_res.css.form_input}" ui:field="passwordUi"/>
        <label class="{local_res.css.form_label}"><ui:text from="{i18n_sec.passwordRepeat}" /></label>
        <g:PasswordTextBox addStyleNames="{local_res.css.form_input}" ui:field="passwordConfirmationUi"/>
        <div class="{local_res.css.form_actions}">
            <g:Anchor addStyleNames="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimaryoutlined}" 
                    ui:field="signInUi"><ui:text from="{i18n_sec.signIn}" /></g:Anchor>
            <g:Anchor addStyleNames="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimary} {res.mainCss.buttonarrowrightwhite}" 
                    ui:field="createAccountUi"><ui:text from="{i18n_sec.signUp}" /></g:Anchor>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
