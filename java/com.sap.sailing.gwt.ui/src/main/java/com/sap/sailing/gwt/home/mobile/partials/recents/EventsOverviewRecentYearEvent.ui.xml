<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
  <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
  <ui:with field="i18n_ubi" type="com.sap.sailing.gwt.home.client.i18n.TextMessages" />
  <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.eventsoverviewrecent.EventsOverviewRecentYearEventResources" />
  <g:HTMLPanel>
    <div class="{local_res.css.eventsoverviewrecent_event}">
      <a href="<!-- event.link -->" title="<!-- event.name -->">
        <div class="{local_res.css.eventteaser_title}">
          <div class="{local_res.css.eventteaser_title_name}">
            <!-- event.name -->
            <!-- IF event.state && event.state != 'finished' -->
            <div data-labeltype="<!-- event.state -->" class="{local_res.css.eventteaser_title_name_state} {res.mainCss.label}">
              <!-- event.state -->
            </div>
            <!-- IFEND -->
          </div>
          <div class="{local_res.css.eventteaser_title_location}">
            <!-- event.venue.name -->,
            <!-- event.date -->
          </div>
        </div>
        <div class="{local_res.css.eventsoverviewrecent_event_arrow}">
          <img src="images/home/arrow-down-grey.png" alt="{i18n.goToEventOverview}" class="{local_res.css.eventsoverviewrecent_event_arrow_image}"></img>
        </div>
      </a>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>