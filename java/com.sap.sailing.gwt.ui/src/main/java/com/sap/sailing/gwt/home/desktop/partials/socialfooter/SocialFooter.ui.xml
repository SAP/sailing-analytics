<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="shr" type="com.sap.sailing.gwt.home.shared.SharedHomeResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.desktop.partials.socialfooter.SocialFooterResources" />
  <g:HTMLPanel ui:field="htmlPanel">
    <!-- The search/social media page footer-->
    <div class="{local_res.css.socialfooter}">
      <div class="{res.mediaCss.grid}">
        <h3 class="{local_res.css.socialfooter_heading} {res.mediaCss.small12} {res.mediaCss.columns}">
          <ui:text from="{i18n.followSapSports}" />
        </h3>
        <div class="{local_res.css.socialfooter_item} {local_res.css.socialfooter_itemleft} {res.mediaCss.small4} {res.mediaCss.columns}">
          <a href="http://twitter.com/SAPSports" target="_blank" class="{local_res.css.socialfooter_item_contentwrapper} {local_res.css.socialfooter_item_contentwrappertwitter}">
            <img src="{shr.twitter.getSafeUri}" class="{local_res.css.socialfooter_item_icon}"></img>
            <div class="{local_res.css.socialfooter_item_text}">
              <div class="{local_res.css.socialfooter_item_text_top}">
                <ui:text from='{i18n.sapSportsOn}' />
              </div>
              <div class="{local_res.css.socialfooter_item_text_bottom}">Twitter</div>
            </div>
          </a>
        </div>
        <div class="{local_res.css.socialfooter_item} {local_res.css.socialfooter_itemcenter} {res.mediaCss.small4} {res.mediaCss.columns}">
          <a href="http://www.facebook.com/SAPSports" target="_blank" class="{local_res.css.socialfooter_item_contentwrapper} {local_res.css.socialfooter_item_contentwrapperfacebook}">
            <img src="{shr.facebook.getSafeUri}" class="{local_res.css.socialfooter_item_icon}"></img>
            <div class="{local_res.css.socialfooter_item_text}">
              <div class="{local_res.css.socialfooter_item_text_top}">
                <ui:text from='{i18n.sapSportsOn}' />
              </div>
              <div class="{local_res.css.socialfooter_item_text_bottom}">Facebook</div>
            </div>
          </a>
        </div>
        <div class="{local_res.css.socialfooter_item} {local_res.css.socialfooter_itemright} {res.mediaCss.small4} {res.mediaCss.columns}">
          <a href="https://www.instagram.com/sapsports" target="_blank" class="{local_res.css.socialfooter_item_contentwrapper} {local_res.css.socialfooter_item_contentwrapperinstagram}">
            <img src="{shr.instagram.getSafeUri}" class="{local_res.css.socialfooter_item_icon}"></img>
            <div class="{local_res.css.socialfooter_item_text_inverse}">
              <div class="{local_res.css.socialfooter_item_text_top}">
                <ui:text from='{i18n.sapSportsOn}' />
              </div>
              <div class="{local_res.css.socialfooter_item_text_bottom}">Instagram</div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>