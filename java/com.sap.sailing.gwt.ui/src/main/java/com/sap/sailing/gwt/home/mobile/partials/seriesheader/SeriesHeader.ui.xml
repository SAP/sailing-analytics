<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
	xmlns:dp="urn:import:com.sap.sailing.gwt.home.mobile.partials"
    xmlns:m="urn:import:com.sap.sse.gwt.client.media">

	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.seriesheader.SeriesHeaderResources" />

	<g:HTMLPanel>
		<div class="{res.mediaCss.grid}">
			<div class="{local_res.css.eventheader} {res.mediaCss.small12} {res.mediaCss.columns}">
				<div class="{local_res.css.eventheader_info} {res.mediaCss.small12} {res.mediaCss.columns}">
					<div class="{local_res.css.eventheader_info_title}">
						<!-- IF event.name -->
						<h3 class="{local_res.css.eventheader_info_title_text}">
							<span ui:field="eventNameUi"></span>
							<div data-labeltype="live" ui:field="eventStateUi" class="{local_res.css.eventheader_info_title_text_label} {res.mainCss.label}">
							</div>
						</h3>
						<!-- IF END -->
					</div>
					<div>
						<!-- IF event.logo -->
						<a ui:field="eventLogoUi" class="{local_res.css.eventheader_info_subtitle_logo} {res.mainCss.media_wrapper}">
                          <m:MediaMenuIcon ui:field="seriesLogoMenuButton" fontSize="5px" />
                        </a>
						<!-- IF END -->
						<div class="{local_res.css.eventheader_info_subtitle_info} {local_res.css.eventheader_info_subtitle}">
							<div ui:field="locationsUi" class="{local_res.css.eventheader_info_subtitle_info_location}">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<dp:sharing.SharingButtons ui:field="sharingButtons"/>
	</g:HTMLPanel>
</ui:UiBinder>