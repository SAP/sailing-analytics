<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
		xmlns:p="urn:import:com.sap.sailing.gwt.home.client.place.event.partials">
	<ui:with field="res"
		type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
  		.legend_and_filter {
			text-align: right;
		}
  		.legend_and_filter > div {
			display: inline-block;
			vertical-align: middle;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{res.mediaCss.grid}">
			<div class="{res.mediaCss.small12} {res.mediaCss.columns} {res.mainCss.spacermarginbottommedium}">
				<p:raceListLive.RacesListLive ui:field="racesListLiveUi" addStyleNames="{res.mainCss.spacermargintopmedium}" />
				<div class="{res.mainCss.spacermargintopmedium} {style.legend_and_filter}">
					<p:multiRegattaList.MultiRegattaListStepsLegend />
			        <p:listNavigation.DropdownFilter ui:field="boatCategoryFilterUi" />
		        </div>
				<p:multiRegattaList.MultiRegattaList ui:field="regattaListUi" />
			</div>
		</div>
		<g:SimplePanel ui:field="content" />
	</g:HTMLPanel>
</ui:UiBinder>