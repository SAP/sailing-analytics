<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="i18n_ubi" type="com.sap.sailing.gwt.common.client.i18n.TextMessages" />
	<ui:style gss="true" type="com.sap.sailing.gwt.home.shared.partials.fullscreen.FullscreenContainer.Style">
		.popup {
			position: fixed !important;
			top: 0;
			bottom: 0;
			left: 0;
			right: 0;
			background-color: rgba(0,0,0,0.9);
		}
		.logoLink {
			position: absolute;
		}
		.logo {
			height: 50px;
    		padding: 10px 5px 5px 5px;
		}
		.header {
			color: white
		}
		.header:after {
			clear: both;
		}
		.headerContent {
			padding: 9px 10px;
		}
		.toolbar {
			float: right;
			padding-left: 30px;
			white-space: nowrap;
		}
		.toolbarContent {
			display: inline-block;
		}
		.toolbarInfo {
			display: inline-block;
			padding: 9px 10px;
			vertical-align: top;
		}
		.toolbarAction {
			display: inline-block;
			height: 50px;
			width: auto;
			cursor: pointer;
			padding: 10px;
		}
		.toolbarAction:hover {
			background-color: #d79900;
		}
		.container {
			width: 100%;
			height: 100%;
		}
		.content {
			overflow: auto !important;
		}
		.contentBorder {
			border-color: rgba(0,0,0,0);
			border-width: 0 5px 5px;
			border-style: solid;
		}
	</ui:style>
	<g:HeaderPanel>
		<g:HTMLPanel styleName="{style.header}">
			<a href="http://sapsponsorships.com" class="{style.logoLink}" style="display:none;" ui:field="logoUi">
		    	<img src="images/home/logo-small@2x.png" alt="{i18n_ubi.headerLogo}" class="{style.logo}"></img>
	        </a>
			<div class="{style.toolbar}">
				<g:FlowPanel styleName="{style.toolbarContent}" ui:field="toolbarUi"/>
				<g:Image title="{i18n.closeFullscreenView}" url="images/home/close.svg" styleName="{style.toolbarAction}" ui:field="closeActionUi"/>
			</div>
			<g:SimplePanel styleName="{style.headerContent}" ui:field="headerContentUi"/>
		</g:HTMLPanel>
		<g:SimpleLayoutPanel styleName="{style.container}" ui:field="contentUi" />
	</g:HeaderPanel>
</ui:UiBinder> 