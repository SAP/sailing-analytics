<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:f="urn:import:com.sap.sailing.gwt.home.shared.partials.filter"
    xmlns:ms="urn:import:com.sap.sailing.gwt.home.mobile.partials.section"
    xmlns:sh="urn:import:com.sap.sailing.gwt.home.mobile.partials.sectionHeader"
    xmlns:p="urn:import:com.sap.sailing.gwt.home.mobile.partials">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
        .panel{
        font-size: 1.3333em;
        font-weight: bold;
        margin-bottom: 3px;
        margin-top:10px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{res.mediaCss.grid}">
        <g:FlowPanel addStyleNames="{res.mediaCss.column} {res.mediaCss.small12}" ui:field="contentUi">
            <ms:MobileSection>
                <ms:header>
                    <p:sectionHeader.SectionHeaderContent ui:field="competitorsUi" sectionTitle="{i18n.competitors}"/>
                </ms:header>
                <ms:content>
                    <g:HTMLPanel ui:field="contentContainerCompetitorsUi"
                        addStyleNames="{style.panel} {res.mainCss.spacermarginbottomsmall}">
                    </g:HTMLPanel>
                </ms:content>
            </ms:MobileSection>

            <ms:MobileSection>
                <ms:header>
                    <p:sectionHeader.SectionHeaderContent ui:field="imagesUi" sectionTitle="{i18n.images}" />
                </ms:header>
                <ms:content>
                    <g:HTMLPanel ui:field="contentContainerImagesUi"
                        addStyleNames="{style.panel} {res.mainCss.spacermarginbottomsmall}">
                    </g:HTMLPanel>
                </ms:content>
            </ms:MobileSection>

            <ms:MobileSection>
                <ms:header>
                    <p:sectionHeader.SectionHeaderContent ui:field="boatclassesUi" sectionTitle="{i18n.boatClasses}" />
                </ms:header>
                <ms:content>
                    <g:HTMLPanel ui:field="contentContainerBoatclassesUi"
                        addStyleNames="{style.panel} {res.mainCss.spacermarginbottomsmall}">
                    </g:HTMLPanel>
                </ms:content>
            </ms:MobileSection>

            <ms:MobileSection>
                <ms:header>
                    <p:sectionHeader.SectionHeaderContent ui:field="eventsUi" sectionTitle="{i18n.events}" />
                </ms:header>
                <ms:content>
                    <g:HTMLPanel ui:field="contentContainerEventsUi"
                        addStyleNames="{style.panel} {res.mainCss.spacermarginbottomsmall}">
                    </g:HTMLPanel>
                </ms:content>
            </ms:MobileSection>

            <ms:MobileSection>
                <ms:header>
                    <p:sectionHeader.SectionHeaderContent ui:field="statisticsUi" sectionTitle="{i18n.statistics}" />
                </ms:header>
                <ms:content>
                    <g:HTMLPanel ui:field="contentContainerStatisticsUi"
                        addStyleNames="{style.panel} {res.mainCss.spacermarginbottomsmall}">
                    </g:HTMLPanel>
                </ms:content>
            </ms:MobileSection>

            <ms:MobileSection>
                <ms:header>
                    <p:sectionHeader.SectionHeaderContent ui:field="polarDiagramUi" sectionTitle="{i18n.polarSheetChart}" />
                </ms:header>
                <ms:content>
                    <g:HTMLPanel ui:field="contentContainerPolarDiagramUi"
                        addStyleNames="{style.panel} {res.mainCss.spacermarginbottomsmall}">
                    </g:HTMLPanel>
                </ms:content>
            </ms:MobileSection>

        </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder> 