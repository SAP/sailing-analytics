.message {
  font-size: 1rem;
  padding: 1.333333333333333em 2.8em 1.333333333333333em 4em;
}
.message_icon {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
     -moz-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
}
.message_iconnotification {
  left: 1em;
  width: 2em;
}
.message_iconclose {
  right: 1em;
  width: 0.8em;
}
.message_text {
  font-size: 0.866666666666667em;
  font-weight: 600;
}
