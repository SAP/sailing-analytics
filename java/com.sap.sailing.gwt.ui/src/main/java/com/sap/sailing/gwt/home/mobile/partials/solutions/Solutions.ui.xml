<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:a="urn:import:com.sap.sailing.gwt.home.mobile.partials.accordion"
        xmlns:s="urn:import:com.sap.sailing.gwt.home.mobile.partials.solutions">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
     <ui:style>
        .storeBadgesContainer>a>img {
            height: 60px;
            width: auto;
            margin-right: 10px;
        }
        .storeBadgesContainer {
            margin: 20px 0px;
        }
    </ui:style>
    
    <a:Accordion>
        <a:item>
            <s:SolutionsItem title="{i18n.sapInSailing}"
                    imageUrl="images/mobile/solutions-sap-in-sailing.jpg" showInitial="true">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentSapInSailing1}' />
                        </p>
                        <ul>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing2}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing3}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing4}' />
                            </li>
                        </ul>
                        <p>
                            <ui:text from='{i18n.contentSapInSailing5}' />
                        </p>
                        <ul>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing6}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing7}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing8}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing9}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing10}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing11}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing12}' />
                            </li>
                            <li>
                                <ui:text from='{i18n.contentSapInSailing13}' />
                            </li>
                        </ul>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
        <a:item>
            <s:SolutionsItem title="{i18n.sapSailingAnalyticsTitle}"
                    imageUrl="images/mobile/solutions-sap-trimmed.png" showInitial="false">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentSapSailingAnalytics1}' />
                        </p>
                        <p>
                            <ui:text from='{i18n.contentSapSailingAnalytics2}' />
                        </p>
                        <a class="{res.mainCss.button}" ui:field="sailingAnalyticsDetailsAnchor">
                           <ui:text from="{i18n.sapSailingAnalyticsReadMore}"/>
                        </a>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
        <a:item>
            <s:SolutionsItem title="{i18n.sapSailingRaceManager}"
                    imageUrl="images/mobile/solutions-race.png" showInitial="false">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentSapSailingRaceManager}' />
                        </p>
                        <div class="{style.storeBadgesContainer}">
                            <a ui:field="raceManagerPlayStoreLinkUi" target="_blank">
                                <img ui:field="raceManagerPlayStoreImgUi" alt="Get it on Google Play" />
                            </a>
                        </div>
                        <a class="{res.mainCss.button}" ui:field="raceManagerAppDetailsAnchor">
                           <ui:text from="{i18n.sapSailingRaceManagerReadMore}"/>
                        </a>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
        <a:item>
            <s:SolutionsItem title="{i18n.sapSailInSight}"
                    imageUrl="images/mobile/solutions-sap-sailing-insight.png" showInitial="false">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentSapSailInSight}' />
                        </p>
                        <div class="{style.storeBadgesContainer}">
                            <a ui:field="inSightAppStoreLinkUi" target="_blank">
                                <img ui:field="inSightAppStoreImgUi" alt="Get it on AppStore" />
                            </a>
                        </div>
                        <div class="{style.storeBadgesContainer}">
                            <a ui:field="inSightPlayStoreLinkUi" target="_blank">
                                <img ui:field="inSightPlayStoreImgUi" alt="Get it on Google Play"/>
                            </a>
                        </div>
                        <a class="{res.mainCss.button}" ui:field="sailInSightAppDetailsAnchor">
                           <ui:text from="{i18n.sapSailInSightReadMore}"/>
                        </a>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
        <a:item>
            <s:SolutionsItem title="{i18n.sapSailingBuoyPinger}"
                    imageUrl="images/mobile/solutions-sap-sailing-buoy-pinger.png" showInitial="false">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentSapSailingBuoyPinger}' />
                        </p>
                        <div class="{style.storeBadgesContainer}">
                            <a ui:field="buoyPingerPlayStoreLinkUi" target="_blank">
                                <img ui:field="buoyPingerPlayStoreImgUi" alt="Get it on Google Play"/>
                            </a>
                        </div>
                        <a class="{res.mainCss.button}" ui:field="buoyPingerAppDetailsAnchor">
                           <ui:text from="{i18n.sapSailingBuoyPingerReadMore}"/>
                        </a>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
        <a:item>
            <s:SolutionsItem title="{i18n.postRaceAnalytics}"
                    imageUrl="images/mobile/solutions-post-trimmed.png" showInitial="false">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentPostRaceAnalytics1}' />
                        </p>
                        <p>
                            <ui:text from='{i18n.contentPostRaceAnalytics2}' />
                        </p>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
        <a:item>
            <s:SolutionsItem title="{i18n.strategySimulator}"
                    imageUrl="images/mobile/solutions-simulator-trimmed.png" showInitial="false">
                <s:content>
                    <g:HTMLPanel>
                        <p>
                            <ui:text from='{i18n.contentStrategySimulator}' />
                        </p>
                        <a class="{res.mainCss.button}" ui:field="simulatorAppDetailsAnchor">
                           <ui:text from="{i18n.strategySimulatorReadMore}"/>
                        </a>
                    </g:HTMLPanel>
                </s:content>
            </s:SolutionsItem>
        </a:item>
    </a:Accordion>
</ui:UiBinder>