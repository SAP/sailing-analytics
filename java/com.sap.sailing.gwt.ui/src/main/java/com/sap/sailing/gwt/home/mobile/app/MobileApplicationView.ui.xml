<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:s="urn:import:com.sap.sailing.gwt.home.mobile.partials"
	>
	<ui:with field="res"
		type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
	.mainContent {
		height: 100%;
	}
    .subHeaderPanel>* {
        padding: 0.5em 1em;
        border-bottom: 1px solid #ccc;
    }
	</ui:style>

	<g:HTMLPanel addStyleNames="{style.mainContent}">
		<div class="{res.mainCss.wrapper}">
			<s:header.Header ui:field="headerPanel" />
			<g:SimplePanel ui:field="subHeaderPanel" addStyleNames="{style.subHeaderPanel}" />
			<g:SimplePanel ui:field="mainContentPanel" />
		</div>
		<s:footer.Footer ui:field="footerPanel" />
	</g:HTMLPanel>
</ui:UiBinder>
