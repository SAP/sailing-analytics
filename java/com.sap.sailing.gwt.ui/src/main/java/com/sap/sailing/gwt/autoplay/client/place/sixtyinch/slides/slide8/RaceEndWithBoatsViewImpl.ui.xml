<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rf="urn:import:com.sap.sse.gwt.client.panels">
	<ui:with field="res"
		type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
	<ui:style>
	.left {
		position: absolute;
		display: inline-block;
		width: 50%;
		height: 100%;
		overflow-y: auto;
	}
	
	.right {
		position: absolute;
		display: inline-block;
		right: 0px;
		height: 100%;
		width: 50%;
	}
	
	.image {
		top: 5%;
		display: block;
		margin: auto;
		min-width: 10%;
		max-width: 30% height: 90%;
		width: auto;
	}
	
	.subline1 {
		font-size: 20px;
		font-weight: bold;
		text-align: center;
	}
	
	.subline2 {
		font-size: 20px;
		text-align: center;
	}
	
	.subline3 {
		font-size: 20px;
		text-align: center;
	}
	
	.bottom {
		font-size: 20px;
		text-align: center;
	}
	
	.bottomLine {
		
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{res.style.slideBackground}">
		<rf:ResizableFlowPanel ui:field="leaderBoardHolder"
			styleName="{style.left}" />
		<rf:ResizableFlowPanel ui:field="infoHolder"
			styleName="{style.right}">
			<g:Image ui:field="image1" styleName="{style.image}" />
			<g:Image ui:field="image2" styleName="{style.image}" />
			<g:Image ui:field="image3" styleName="{style.image}" />
			<g:Label ui:field="subline1" styleName="{style.subline1}" />
			<g:Label ui:field="subline2" styleName="{style.subline2}" />
			<g:Label ui:field="subline3" styleName="{style.subline3}" />
		</rf:ResizableFlowPanel>
		<rf:ResizableFlowPanel styleName="{res.style.bottom">
			<g:Label ui:field="bottomText" styleName="{style.bottomLine" />
		</rf:ResizableFlowPanel>
	</rf:ResizableFlowPanel>
</ui:UiBinder> 