<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.app.start"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:style>
.events {
  font-size: 16px;
  font-size: 1rem;
  padding: 3.75em 0;
}
.events-banner {
  font-size: 16px;
  font-size: 1rem;
  line-height: 1;
  background-position: top center;
  background-repeat: no-repeat;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  background-size: cover;
  height: 36.25em;
  position: relative;
}
.events-banner_title {
  position: absolute;
  top: 4.0625em;
  left: 0;
  right: 0;
  text-shadow: 0 0 1.125em rgba(0,0,0,0.13), 0 0.125em 0.0625em rgba(0,0,0,0.25);
  text-align: center;
}
.events-banner_title_series {
  font-size: 2.25em;
  font-weight: 400;
  color: #fff;
  margin: 0;
}
.events-banner_title_name {
  font-size: 6.625em;
  font-weight: 700;
  color: #fff;
  margin: 0;
}
.events-banner_title_location {
  font-size: 1.875em;
  font-weight: 600;
  color: #fff;
  margin: 0;
}
.events-banner_band {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: rgba(51,51,51,0.6);
  text-align: center;
  padding: 1.5625em;
}
.events-banner_band_message {
  display: inline-block;
  color: #f0ab00;
  font-size: 1.5em;
  font-weight: 700;
  text-shadow: 0 0 0.625em rgba(51,51,51,0.45);
  text-transform: uppercase;
}
.events-banner_band_name {
  display: inline-block;
  color: #fff;
  font-size: 1.5em;
  text-shadow: 0 0 0.625em rgba(51,51,51,0.45);
}
.events-banner_band_action {
  font-size: 1.125em;
  padding: 0.875em 1.875em;
  margin-left: 1.25em;
  text-transform: none;
}
    </ui:style>
 
   	<g:HTMLPanel>
		<div style="background-image: url('images/banner-background.jpg')" class="events-banner">
		  <div class="{style.events-banner_title}">
		    <h3 class="{style.events-banner_title_series}"><g:Label ui:field="bannerSeriesName" /></h3>
		    <h2 class="{style.events-banner_title_name}"><g:Label ui:field="bannerName" /></h2>
		    <h3 class="{style.events-banner_title_location}"><g:Label ui:field="bannerLocation" />,&nbsp;
		    </h3>
		  </div>
		  <div class="{style.events-banner_band}">
		    <div class="{res.mainCss.grid}">
		      <div class="{res.mainCss.small12} {res.mainCss.columns}">
		        <div class="{style.events-banner_band_message}"><g:Label ui:field="upcomingMessage" />&nbsp;-
		        </div>
		        <div class="{style.events-banner_band_name}"><g:Label ui:field="upcomingName" /></div>
		        <button class="{res.mainCss.button} {style.events-banner_band_action}"><g:Label ui:field="upcomingAction" /></button>
		      </div>
		    </div>
		  </div>
		</div>
		<button class="{res.mainCss.button} events_show-all">Show all events</button>
   	</g:HTMLPanel>
   		
</ui:UiBinder>    
