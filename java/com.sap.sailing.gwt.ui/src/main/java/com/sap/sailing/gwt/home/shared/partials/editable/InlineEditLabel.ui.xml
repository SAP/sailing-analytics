<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:e="urn:import:com.sap.sailing.gwt.home.shared.partials.editable">
    <ui:with field="res" type="com.sap.sailing.gwt.home.shared.partials.editable.EditableResources" />
    <ui:style>
        .label{
        margin-left: 2px;
        margin-right: 4px;
        margin-top: 4px;
        margin-bottom: 4px;
        }
        .inline{
        display:inline-block
        }
    </ui:style>
    <g:HTMLPanel>
        <g:TextBox ui:field="textBoxUi" styleName="{style.inline}" height="45" width="45" />
        <g:Label ui:field="labelUi" styleName="{style.label} {style.inline}" />
        <e:InlineEditButton ui:field="editButtonUi" styleName="{style.inline}" />
    </g:HTMLPanel>
</ui:UiBinder> 