<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .button {
        font-weight: bold;
        }
        .label{
        margin-left: 2px;
        margin-right: 4px;
        margin-top: 4px;
        margin-bottom: 4px;
        }
        .inline{
        display:inline-block
        }
    </ui:style>
    <g:HTMLPanel>
        <g:TextBox ui:field="textBox" styleName="{style.inline}" />
        <g:Label ui:field="label" styleName="{style.label} {style.inline}" />
        <g:Button styleName="{style.button} {style.inline}" ui:field="button" text="Edit" />
    </g:HTMLPanel>
</ui:UiBinder> 