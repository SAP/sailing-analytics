<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
        .iconGPS, .iconWind, .iconVideo, .iconAudio {
            line-height: 1.5em;
            position: relative;
            height:1.666666666666667rem;
            display: inline-block;
            padding-left: 2.333333333333333em;
            background-size: 1.666666666666667rem 1.666666666666667rem;
            background-position: left bottom;
            background-repeat: no-repeat;
        }
       .iconGPS {
            background-image:url('images/home/raw_gps_fixes.png');
        }
        .iconWind {
            margin-left: 0.666666666666667em;
            background-image:url('images/home/icon-wind.png');
            border-left: 1px solid #ccc;
        }
        .iconVideo {
            background-image:url('images/home/icon-video.png');
            padding-top: 0.277777777777778em;
        }
        .iconAudio {
            margin-left: 0.666666666666667em;
            background-image:url('images/home/icon-audio.png');
            border-left: 1px solid #ccc;
            padding-top: 0.277777777777778em;
        }
    </ui:style>
    <g:HTMLPanel>
	    <table>
	        <tr>
	            <td><div ui:field="iconGPS" class="{style.iconGPS}"/></td>
	            <td><div ui:field="txtGPS"/></td>
	            <td><div ui:field="iconWind" class="{style.iconWind}"/></td>
	            <td><div ui:field="txtWind"/></td>
	        </tr>
	        <tr>
	            <td><div ui:field="iconVideo" class="{style.iconVideo}"/></td>
	            <td><div ui:field="txtVideo"/></td>
	            <td><div ui:field="iconAudio" class="{style.iconAudio}"/></td>
	            <td><div ui:field="txtAudio"/></td>
	       </tr>
	    </table>
    </g:HTMLPanel>
</ui:UiBinder> 