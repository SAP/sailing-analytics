<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:rf="urn:import:com.sap.sse.gwt.client.panels"
             xmlns:m="urn:import:com.sap.sse.gwt.client.media">
	<ui:with field="res" type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
    <ui:with field="shared_res" type="com.sap.sse.gwt.common.CommonSharedResources" />
        
	<ui:style>
	.left {
		position: absolute;
		display: inline-block;
		width: 50%;
		top: 0px;
		bottom: 0px;
		overflow-y: auto;
	}
	
	.right {
		position: absolute;
		display: inline-block;
		right: 0px;
		height: 100%;
		width: 50%;
		padding: 70px 20px 20px 40px
	}
	
	.bottom {
		width: 100%;
		height: 80px;
		font-size: 40px;
		line-height: 70px;
		text-align: center;
		position: absolute;
		bottom: 0px;
		background-color: #008fcc;
		color: white;
		padding: 10px;
	}
	
	.image {
		top: 5%;
		display: block;
		margin: auto;
		min-width: 50%;
		height: 85%;
		width: auto;
		padding-bottom: 2em;
	}
	
	.subline1 {
		font-size: 20px;
		font-weight: bold;
		text-align: center;
	}
	
	.subline2 {
		font-size: 20px;
		text-align: center;
	}
	
	.subline3 {
		font-size: 20px;
		text-align: center;
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{res.style.slideBackground}">
		<rf:ResizableFlowPanel ui:field="leaderBoardHolder"
			styleName="{style.left}" />
		<rf:ResizableFlowPanel ui:field="infoHolder" styleName="{style.right}">
			<g:FlowPanel ui:field="image" styleName="{style.image} {shared_res.mainCss.media_wrapper}">
              <m:MediaMenuIcon ui:field="takedownButton"/>
            </g:FlowPanel>
			<g:Label ui:field="subline1" styleName="{style.subline1}" />
			<g:Label ui:field="subline2" styleName="{style.subline2}" />
			<g:Label ui:field="subline3" styleName="{style.subline3}" />
		</rf:ResizableFlowPanel>
		<rf:ResizableFlowPanel ui:field="nextRace" styleName="{style.bottom}">
			<g:Label ui:field="bottomInfoPanel" />
		</rf:ResizableFlowPanel>
	</rf:ResizableFlowPanel>
</ui:UiBinder> 