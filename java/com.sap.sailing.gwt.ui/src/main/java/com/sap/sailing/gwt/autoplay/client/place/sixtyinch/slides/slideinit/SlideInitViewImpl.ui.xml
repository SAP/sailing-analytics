<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res"
        type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
    <ui:style>
    .fullscreen {
    	width: 100%;
    	height: 100%;
    	background-repeat: no-repeat;
    	background-size: contain;
    }
    
    .errorBox {
    	display: none;
    	background-color: rgba(255, 255, 255, 0.9);
    	border-radius: 10px;
    	border: 2px solid red;
    	height: 200px;
    	width: 400px;
    	position: absolute;
    	bottom: 100px;
    	right: 100px;
    	padding: 10px;
    }
    
    .errorMessage {
    	font-weight: bold;
    }
    
    .errorControls {
    	text-align: right;
    	vertical-align: top;
    	margin-bottom: 50px;
    	padding: 4px;
    	border-bottom: 2px solid red; 
    }
    
    .errorAnchor {
    	font-style: italic;
    	cursor: pointer;
    }
    </ui:style>
    <g:SimpleLayoutPanel styleName="{res.style.slideBackground}">
        <g:HTMLPanel>
            <g:SimplePanel ui:field="content" styleName="{style.fullscreen}" />
            <div class="{style.errorBox}" ui:field="errorBoxUi">
                <div class="{style.errorControls}">
                    <g:Anchor styleName="{style.errorAnchor}"
                        ui:field="errorContinueUi">CONTINUE</g:Anchor>
                    <g:Anchor styleName="{style.errorAnchor}"
                        ui:field="errorResetUi">RESET</g:Anchor>
                </div>
                <div class="{style.errorMessage}" ui:field="errorMessageUi"></div>
            </div>
        </g:HTMLPanel>
    </g:SimpleLayoutPanel>
</ui:UiBinder> 