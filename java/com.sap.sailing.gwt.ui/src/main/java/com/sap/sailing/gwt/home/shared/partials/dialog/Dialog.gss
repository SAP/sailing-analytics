.dialog {
    left: 50% !important;
    top: 50% !important;
    position: absolute !important;
    background-color: #f2f2f2;
    padding: 1em;
    border: 1px solid #ccc;
    border-radius: 1em;
    width: 50%;
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    box-shadow: 0.1em 0.1em 1em #bbb;
}

.message {
    margin-bottom: .5em;
}

.yesButton {
    background-color: #e94a1b;
}

.yesButton:hover {
    background-color: #cd3e14;
}

.yesButton:active {
    background-color: #a73210;
}

.noButton {
    background-color: #008fcc;
}

.noButton:hover {
    background-color: #00b3ff;
}

.noButton:active {
    background-color: #0074a6;
}

.button {
    font-size: 1.1111em;
    display: inline;
    width: 4em;
    height: 2.5em;
    border-radius: .25em;
    border: none;
    font-weight: 700;
    color: #fff;
}

.buttonPanel {
    text-align: center;
}

.backgroundPanel {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .33333333);
}