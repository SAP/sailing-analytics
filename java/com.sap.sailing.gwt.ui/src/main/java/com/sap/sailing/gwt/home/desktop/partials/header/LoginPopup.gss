.mainLayout {
	visibility: hidden;
}

@media ( min-width: 49em) {
	.mainLayout {
		visibility: visible;
		right: 7px !important;
		top: 55px !important;
	}
}

@media ( min-width: 76em) {
	.mainLayout {
		visibility: visible;
		right: calc(( 100vw - 80rem)/2) !important;
	}
}

.mobileLayout {
	right: 0px;
	top: 70px !important;
	position: absolute;
	overflow: visible;
	z-index: 4;
}