		xmlns:p='urn:import:com.sap.sailing.gwt.home.client.place.event.partials'>
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <g:HTMLPanel ui:field="contentPanel" addStyleNames="{res.mediaCss.grid}">
    	<g:FlowPanel ui:field="latestUpdateContainer" addStyleNames="{res.mediaCss.small12} {res.mediaCss.columns}"/>
    	<div class="{res.mediaCss.small12} {res.mediaCss.columns}" style="border-top: 10px solid red; margin: 10px 0;"></div>
