<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style gss="true" type="com.sap.sailing.gwt.home.shared.partials.fullscreen.FullscreenViewer.Style">
	.popup {
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
	}
	.background {
		background-color: rgba(0,0,0,0.9);
	}
	.toolbar {
		padding: 0 5px;
	}
	.toolbarAction, .toolbarInfoTextRight {
		float: right;
	}
	.toolbarInfoTextLeft, .toolbarInfoTextRight {
		padding: 6px 10px;
		color: white;
	}
	.toolbarInfoTextLeft {
		padding-right: 25px;
	}
	.toolbarInfoTextRight {
		text-align: right;
	}
	.toolbarAction {
		height: 50px;
		width: auto;
		cursor: pointer;
		padding: 10px;
	}
	.toolbarAction:hover {
		background-color: #d79900;
	}
	.container {
		width: 100%;
		height: 100%;
	}
	.content {
		background-color: white;
		overflow: auto !important;
		border-color: rgba(0,0,0,0.9);
		border-width: 0 5px 5px;
		border-style: solid;
	}
	</ui:style>
	<g:HeaderPanel styleName="{style.background}">
		<g:FlowPanel styleName="{style.toolbar}" ui:field="toolbarUi" />
		<g:SimpleLayoutPanel styleName="{style.container}" ui:field="contentUi" />
	</g:HeaderPanel>
</ui:UiBinder> 