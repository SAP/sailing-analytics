<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.socialfooter.SocialFooterResources" />
    <g:HTMLPanel>
<!-- The search/social media page footer-->
<div class="{res.mainCss.mainsection} {local_res.css.socialfooter}">
  <div class="{res.mainCss.grid}">
    <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
      <header class="{res.mainCss.mainsection_header}">
        <h3 class="{local_res.css.mainsection_header_title}">Recommend SAP Sailing Analytics</h3>
      </header>
      <div class="{res.mainCss.mainsection_navigation}">
        <div class="{local_res.css.socialfooter_button} {local_res.css.socialfooter_buttontwitter}">
          <div class="{local_res.css.socialfooter_button_text}">Share this on <span>Twitter</span></div>
          <div class="{local_res.css.socialfooter_button_widget}"><img src="images/temp--twitter-badge.png" /></div>
        </div>
        <div class="{local_res.css.socialfooter_button} {local_res.css.socialfooter_buttonfacebook}">
          <div class="{local_res.css.socialfooter_button_text}">Share this on <span>Facebook</span></div>
          <div class="{local_res.css.socialfooter_button_widget}"><img src="images/temp--facebook-badge.png" /></div>
        </div>
      </div>
    </div>
  </div>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
