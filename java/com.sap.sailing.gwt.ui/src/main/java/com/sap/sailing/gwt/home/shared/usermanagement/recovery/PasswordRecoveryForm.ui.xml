<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.shared.usermanagement.UserManagementResources" />
    <g:HTMLPanel>
        <div class="{local_res.css.form_title}">TODO Forgot Password</div>
        <div class="{local_res.css.form_errors}" ui:field="formErrorUi"></div>
        <label class="{local_res.css.form_label}">TODO Username or Email</label>
        <g:TextBox addStyleNames="{local_res.css.form_input}" ui:field="loginNameUi"/>
        <div class="{local_res.css.form_actions}">
            <g:Anchor addStyleNames="{local_res.css.form_action_button} {res.mainCss.button} {res.mainCss.buttonprimary} {res.mainCss.buttonarrowrightwhite}" 
                    ui:field="resetPasswordUi">TODO Reset password</g:Anchor>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
