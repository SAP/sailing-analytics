<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.recentevent.RecentEventResources" />
    <g:HTMLPanel>
	  <div class="{local_res.css.eventsoverviewrecent}">
	    <div ui:field="recentEventsGrid" class="{res.mainCss.grid}">
	      <div ui:field="headlineDiv" class="{res.mediaCss.small12} {res.mediaCss.columns}">
	        <h3 ui:field="titleHeading" />
	      </div>
	      <!-- the recent event widget will be inserted here -->
	    </div>
	  </div>
    </g:HTMLPanel>
</ui:UiBinder>
