<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
		xmlns:sp="urn:import:com.sap.sailing.gwt.home.shared.partials"
		xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.stage.StageResources" />
	<ui:style>
	.countdownPosition {
		position: absolute;
		top: 2.5em;
		width: 100%;
		transform: scale(0.66);
	}
	</ui:style>
	<g:HTMLPanel styleName="{local_res.css.stageteaser} {local_res.css.swiperslide}">
		<div class="{local_res.css.stageteaser_background}">
			<div ui:field="teaserImage" class="{local_res.css.stageteaser_background_image}" />
		</div>
		<div class="{local_res.css.stageteaser_content}" >
			<header class="{local_res.css.stageteaser_content_header}"  style="display:none;">
				<p class="{local_res.css.stageteaser_content_header_subtitle}" >
					<span ui:field="subtitle"/>
				</p>
				<h2 class="{local_res.css.stageteaser_content_header_title}">
					<span ui:field="title" />
				</h2>
			</header>
		</div>
		<div class="{style.countdownPosition}">
			<sp:countdowntimer.CountdownTimer ui:field="countdownTimerUi" />
		</div>
		<div ui:field="bandCount" data-bandcount="" class="{local_res.css.stageteaser_content_band}">
			<div class="{res.mediaCss.grid}">
				<g:HTMLPanel ui:field="stageTeaserBandsPanel" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
