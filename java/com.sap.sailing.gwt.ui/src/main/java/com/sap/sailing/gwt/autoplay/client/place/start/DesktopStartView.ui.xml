<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.autoplay.client.shared"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
    <ui:style>
		.row {
			padding-bottom:1em;
		}
		.configTabPanel {
			width: 100%;
		}
		.configTabContent {
			border: 1px solid lightgray;
			padding: 8px;
		}
    </ui:style>
    <g:HTMLPanel>
        <s:header.SAPHeader ui:field="sapHeader" />
        <div style="height:1em;" />
        <div class="{res.mainCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Display language:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="localeSelectionBox" />
	        </div>
        </div>
		<div class="{res.mainCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Start browser in full screen mode:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:CheckBox ui:field="startInFullscreenModeBox" />
	        </div>
		</div>
		<div class="{res.mainCss.grid} {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Event:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="eventSelectionBox" />
	        </div>
		</div>
		<div ui:field="leaderboardSelectionDiv" class="{res.mainCss.grid}  {style.row}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    <span>Leaderboard:</span>
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
				<g:ListBox ui:field="leaderboardSelectionBox" />
	        </div>
		</div>
		
		<div class="{res.mainCss.grid} {style.row}">
			<div class="{res.mediaCss.columns}">
				Screen configuration
			</div>
			<div class="{res.mediaCss.columns}">
				<div ui:field="components" class="{res.mainCss.grid} {style.row}">
					<g:TabPanel ui:field="componentConfigurationTabPanel" styleName="{style.configTabPanel}">
					    <g:Tab text="Leaderboard">
					    	<g:HTMLPanel ui:field="leaderboardConfigPanel" styleName="{style.configTabContent}">
								<div class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Settings:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
							    		<g:Button ui:field="leaderboardSettingsButton" text="Configure" styleName="{res.mainCss.button}" />
							        </div>
								</div>
								<div ui:field="leaderboardAutoZoomDiv" class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Auto-Zoom:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
										<g:CheckBox ui:field="leaderboardAutoZoomBox" />
							        </div>
								</div>
								<div ui:field="leaderboardZoomDiv" class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Zoom-Factor:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
										<g:TextBox ui:field="leaderboardZoomBox" />
							        </div>
								</div>
					    	
					    	</g:HTMLPanel>
					    </g:Tab>
					    <g:Tab text="Raceboard">
					    	<g:HTMLPanel ui:field="raceboardConfigPanel" styleName="{style.configTabContent}">
								<div class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Leaderboard Settings:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
							    		<g:Button ui:field="leaderboardInRaceboardSettingsButton" text="Configure" styleName="{res.mainCss.button}" />
							        </div>
								</div>
								<div class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Map Settings:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
							    		<g:Button ui:field="mapInRaceboardSettingsButton" text="Configure" styleName="{res.mainCss.button}" />
							        </div>
								</div>
					    	
								<div class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Auto switch when race active:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
										<g:CheckBox ui:field="autoSwitchToRaceboard" />
							        </div>
								</div>
								<div class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.columns} {style.row}">
										Trigger to switch to raceboard
									</div>
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Time to race start (in s):</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
										<g:TextBox ui:field="timeToRaceStartInSeconds" />
							        </div>
								</div>
								<div class="{res.mainCss.grid} {style.row}">
									<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
									    <span>Auto-Play video:</span>
							        </div>
								    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
										<g:CheckBox ui:field="autoSelectMediaBox" />
							        </div>
								</div>
					    	</g:HTMLPanel>
					    </g:Tab>
					</g:TabPanel>
				</div>
			</div>
		</div>
		<div class="{res.mainCss.grid}">
			<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large3} {res.mediaCss.columns}">
			    &nbsp;
	        </div>
		    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large9} {res.mediaCss.columns}">
	    		<g:Button ui:field="startAutoPlayButton" text="Start autoplay" styleName="{res.mainCss.button}" />
		    </div>
		</div>
		
	</g:HTMLPanel>
</ui:UiBinder>    
