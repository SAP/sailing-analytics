<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cell="urn:import:com.google.gwt.user.cellview.client"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:style>
		.outerPanel {
			margin-top: 20px;
		}
		
		.majorHeader {
			margin: 30px 0 30px 0;
			font-weight: bold;
			font-size: 2em;
		}
		
		.listbox {
			display: block;
			width: 100%;
			height: 3em;
			line-height: 2em;
			font-size: 1.6em;
			border: 1px solid #ccc;
			border-radius: 4px;
			box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
			font-weight: bold;
		}
		
		.owner {
			margin-top: 30px;
			font-size: 1.3em;
		}
		
		.homepage {
			display: block;
			margin-top: 40px;
		}
		
		.acknowledgement {
			margin-top: 40px;
			display: block;
			overflow: auto;
			font-size: smaller;
		}
		
		.licenseText {
			display: block;
			margin: 50px 10px;
			padding: 10px 0 10px 0;
		}
	</ui:style>
    <g:HTMLPanel addStyleNames="{res.mediaCss.grid} {style.outerPanel}">
        <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
            <div class= "{style.majorHeader}">Legal Disclaimers: </div>
            <g:FlowPanel ui:field="disclaimers"/>
            <div class= "{style.majorHeader}">Further Components used: </div>
            <g:ValueListBox ui:field="componentListUi"
                addStyleNames="{style.listbox}" />
            <div ui:field="ownerUi" class="{style.owner}"/>
            <a ui:field="homepageUi" class="{style.homepage}"/>
            <div ui:field="acknowledgmentUi" class="{style.acknowledgement}"/>
            <div ui:field="licenseTextUi" class="{style.licenseText}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>    
