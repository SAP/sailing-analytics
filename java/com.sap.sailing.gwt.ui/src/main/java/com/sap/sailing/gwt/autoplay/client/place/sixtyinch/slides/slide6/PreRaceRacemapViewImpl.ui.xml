<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:rf="urn:import:com.sap.sse.gwt.client.panels">
	<ui:with field="res"
		type="com.sap.sailing.gwt.autoplay.client.resources.SixtyInchBundle" />
	<ui:style>
	.left {
		position: absolute;
		display: inline-block;
		width: 50%;
		height: 100%;
		bottom: 55px;
		overflow-y: auto;
	}
	
	.right {
		position: absolute;
		display: inline-block;
		right: 0px;
		height: 100%;
		width: 50%;
	}
	
	.image {
		top: 5%;
		display: block;
		margin: auto;
		min-width: 50%;
		height: 90%;
		width: auto;
	}
	
	.subline1 {
		font-size: 20px;
		font-weight: bold;
		text-align: center;
	}
	
	.bottom {
		width: 100%;
		height: 60px;
		font-size: 50px;
		text-align: center;
		position: absolute;
		bottom: 0px;
		background-color: #008fcc;
		color: white;
	}
	
	.subline2 {
		font-size: 20px;
		text-align: center;
	}
	
	.subline3 {
		font-size: 20px;
		text-align: center;
	}
	</ui:style>
	<rf:ResizableFlowPanel styleName="{res.style.slideBackground}">
		<rf:ResizableFlowPanel ui:field="raceInfoHolder"
			styleName="{style.right}" />
		<rf:ResizableFlowPanel ui:field="racemap"
			styleName="{style.left}" />
		<rf:ResizableFlowPanel ui:field="nextRace"
			styleName="{style.bottom}">
			<g:Label ui:field="bottomInfoPanel" />
		</rf:ResizableFlowPanel>
	</rf:ResizableFlowPanel>
</ui:UiBinder> 