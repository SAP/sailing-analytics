<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:sse="urn:import:com.sap.sse.gwt.client.controls">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.desktop.partials.mainmedia.MainMediaResources" />
	<g:HTMLPanel>
		<!-- Partial for media like image and video -->
		<div class="{res.mainCss.mainsection} {local_res.css.media}">
			<div class="{res.mediaCss.grid}">
				<div class="{res.mediaCss.small12} {res.mediaCss.columns}">
					<header class="{res.mainCss.mainsection_header}">
						<h3 class="{res.mainCss.mainsection_header_title}">
							<ui:text from='{i18n.mainMediaTitle}' />
						</h3>
						<p>
							<ui:text from='{i18n.mainMediaSubtitle}' />
						</p>
					</header>
				</div>
			</div>
			<div class="{res.mediaCss.grid}">
				<g:SimplePanel ui:field="imageCarouselHolderUi" addStyleNames="{res.mediaCss.small12} {res.mediaCss.columns}" />
			</div>
		</div>
		<div class="{res.mainCss.mainsection} {local_res.css.media} {local_res.css.mediavideos}">
			<div class="{res.mediaCss.grid}">
				<div class="{res.mediaCss.small12} {res.mediaCss.columns}">
					<header class="{res.mainCss.mainsection_header}">
						<h3 class="{res.mainCss.mainsection_header_title}">
							<ui:text from='{i18n.mainMediaVideosTitle}' />
						</h3>
						<p>
							<ui:text from='{i18n.mainMediaVideosSubtitle}' />
						</p>
					</header>
				</div>
			</div>
			<div class="{res.mediaCss.grid} {res.mainCss.lightbox}">
				<g:HTMLPanel ui:field="videosPanel" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
