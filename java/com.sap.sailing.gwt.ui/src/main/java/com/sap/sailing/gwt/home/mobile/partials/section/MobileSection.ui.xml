<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared" xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.section.MobileSectionResources" />
	<g:HTMLPanel styleName="{local_res.css.section}">
		<div class="{res.mediaCss.grid}">
			<div ui:field="sectionHeaderHolderUi" class="{local_res.css.sectionHeader} {res.mediaCss.small12} {res.mediaCss.columns}">
				<g:SimplePanel ui:field="sectionHeaderUi" />
			</div>
			<div ui:field="sectionContentHolderUi" class="{local_res.css.sectionContentHolder} {res.mediaCss.small12} {res.mediaCss.columns}">
				<g:FlowPanel ui:field="sectionContentUi" styleName="{local_res.css.sectionContent}" />
			    <g:SimplePanel ui:field="sectionFooterUi" />
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>