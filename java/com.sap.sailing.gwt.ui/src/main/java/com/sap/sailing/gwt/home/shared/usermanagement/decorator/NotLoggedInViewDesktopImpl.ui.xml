<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
    .message {
        font-weight: bold;
        font-style: italic;
        display: inline-block;
        padding-right: 1em;
    }
    
    </ui:style>
    <g:HTMLPanel addStyleNames="{res.mainCss.spacermargintopmedium} {res.mainCss.spacermarginbottommedium} {res.mediaCss.grid}">
        <div class="{res.mediaCss.columns} {res.mediaCss.small12}">
            <div ui:field="messageUi" class="{style.message}" />
            <g:Button addStyleNames="{res.mainCss.button} {res.mainCss.buttonprimary}" ui:field="buttonUi" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 