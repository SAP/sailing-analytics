<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
	<ui:with field="pageNames" type="com.sap.sailing.gwt.home.client.shared.PageNameConstants" />

	<ui:style>
.sitenavigation_link {
  display: inline-block;
  font-size: 0.875em;
  font-weight: 600;
  color: #f6f9fc;
  text-transform: uppercase;
  padding: 0 2.1875em;
}
.sitenavigation_link:hover {
  background-color: rgba(246,249,252,0.1);
  text-decoration: none;
}
.sitenavigation_linksearch img {
  vertical-align: middle;
}
.sitenavigationhome .sitenavigation_linkhome,
.sitenavigationevents .sitenavigation_linkevents,
.sitenavigationboatclasses .sitenavigation_linkboatclasses,
.sitenavigationsolutions .sitenavigation_linksolutions,
.sitenavigationsponsoring .sitenavigation_linksponsoring {
  background: #f0ab00;
}
.sitenavigationhome .sitenavigation_linkhome:hover,
.sitenavigationevents .sitenavigation_linkevents:hover,
.sitenavigationboatclasses .sitenavigation_linkboatclasses:hover,
.sitenavigationsolutions .sitenavigation_linksolutions:hover,
.sitenavigationsponsoring .sitenavigation_linksponsoring:hover {
  background-color: rgba(240,171,0,0.9);
}
	    
	</ui:style>
    <g:HTMLPanel>
    	<g:Anchor ui:field="startPageLink" styleName="{style.sitenavigation_link}" text="{i18n.home}" href="javascript:;"/>
        <g:Anchor ui:field="eventsPageLink" styleName="{style.sitenavigation_link}" text="{i18n.events}" href="javascript:;"/>
        <g:Anchor ui:field="aboutUsPageLink" styleName="{style.sitenavigation_link}" text="{i18n.aboutUs}" href="javascript:;"/>
        <g:Anchor ui:field="contactPageLink" styleName="{style.sitenavigation_link}" text="{i18n.contact}" href="javascript:;"/>
        
        <a href="" class="{style.sitenavigation_link} {style.sitenavigation_linksearch}"><img src="images/search-icon.png" alt="Search"></img></a>
	</g:HTMLPanel>
</ui:UiBinder>

