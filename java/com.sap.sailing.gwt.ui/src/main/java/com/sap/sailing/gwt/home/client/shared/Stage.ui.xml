<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
	<ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.StageResources" />
	<g:HTMLPanel>
		<!-- The main stage -->
		<div style="background-image: url('images/home/banner-background.jpg')" class="{local_res.css.stage}">
			<header class="{local_res.css.stage_header}">
				<p class="{local_res.css.stage_header_subtitle}"><g:Label ui:field='subtitle' /></p>
				<h2 class="{local_res.css.stage_header_title}"><g:Label ui:field='title' /></h2>
				<div class="{local_res.css.stage_header_message}"><g:Label ui:field='message' /></div>
			</header>
			<div class="{local_res.css.stage_band}">
				<div class="{res.mainCss.grid}">
					<div class="{res.mainCss.small12} {res.mainCss.columns}">
						<div class="{local_res.css.stage_band_message}"><g:Label ui:field='message2' />&nbsp;-
						</div>
						<div class="{local_res.css.stage_band_name}"><g:Label ui:field='name' /></div>
						<button class="{res.mainCss.button} {local_res.css.stage_band_action}"><g:Label ui:field='action' text='Full event schedule'/></button>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
