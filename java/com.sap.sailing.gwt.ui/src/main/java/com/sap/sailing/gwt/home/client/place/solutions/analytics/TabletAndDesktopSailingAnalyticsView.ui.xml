<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages" />
	<ui:style>
	    .analyticsheader {
			background: #f2f2f2;
			padding: 1em 0;
			border-bottom: 1px solid darkgray;
		}
		.analytics_nav {
			border-bottom: 1px solid #ddd;
			background: #fff;
			z-index: 10;
			text-align: center;
		}
		.analytics_nav_link {
  			display: inline-block;
  			padding: 1em 0 0.733333333333333em 0;
  			border-bottom: 0.266666666666667em solid transparent;
  			font-weight: 600;
  			color: #666;
  			-webkit-transition: 0.2s border ease;
  			-moz-transition: 0.2s border ease;
  			-o-transition: 0.2s border ease;
  			-ms-transition: 0.2s border ease;
  			transition: 0.2s border ease;
  			margin-right: 1em;
		}
		.analytics_nav_link:hover,
		.analytics_nav_link:focus,
		.analytics_nav_linkactive {
  			border-bottom-color: #f0ab00;
  			text-decoration: none;
  			color: #333;
		}
		.analytics_nav_link:last-child {
  			margin-right: 0;
		}
		.analytics_subtitle {
			font-weight: bold;
		}
	</ui:style>
    <g:HTMLPanel>
    <div class="{res.mainCss.grid} {style.analyticsheader}">
		<div class="{res.mediaCss.small9} {res.mediaCss.large8} {res.mediaCss.columns}">
        	<h3>SAP Sailing Analytics</h3>
        	<div class="{style.analytics_subtitle}" ui:field="subTitle"></div>
        </div>
	</div>
	<div class="{style.analytics_nav}">
	    <div class="{res.mainCss.grid}">
	      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
	          <g:Anchor ui:field="overviewAnchor" href="javascript:;" styleName="{style.analytics_nav_link}"><ui:text from='{i18n.overview}'/></g:Anchor>
	          <g:Anchor ui:field="featuresAnchor" href="javascript:;" styleName="{style.analytics_nav_link}"><ui:text from='{i18n.features}'/></g:Anchor>
	          <g:Anchor ui:field="releaseNotesAnchor" href="javascript:;" styleName="{style.analytics_nav_link}"><ui:text from='{i18n.releaseNotes}'/></g:Anchor>
		  </div>
	    </div>
	</div>
    <div class="{res.mainCss.grid}">
		<div class="{res.mediaCss.small9} {res.mediaCss.large8} {res.mediaCss.columns}">
    	    <g:HTML ui:field="contentOverview" />
		    <g:HTML ui:field="contentFeatures" />
    	    <g:HTML ui:field="contentReleaseNotes" />
    	</div>
	</div>
		    
	</g:HTMLPanel>
</ui:UiBinder>    
