<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:sp="urn:import:com.sap.sailing.gwt.home.shared.partials">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res"
        type="com.sap.sailing.gwt.home.shared.partials.multiselection.SuggestedMultiSelectionResources" />

    <ui:style>
        .toggleEditButton {
        position: absolute;
        right: 2em;
        top: 1em;
        }

    </ui:style>
    <g:HTMLPanel>
        <div ui:field="parentPanel">
            <div ui:field="listContainerUi" class="{local_res.css.suggestions}">
                <div class="{local_res.css.suggestionsHeader}">
                    <span class="{local_res.css.suggestionsHeaderTitle}" ui:field="headerTitleUi" />
                </div>
                <div class="{local_res.css.suggestionsContent}">
                    <g:FlowPanel addStyleNames="{local_res.css.suggestionsContentTable}"
                        ui:field="itemContainerUi" />
                </div>
            </div>
            <sp:multiselection.SuggestedMultiSelection ui:field="multiSelect" />
        </div>
        <g:Button addStyleNames="{res.mainCss.button} {style.toggleEditButton}" ui:field="toggleEditButtonUi">
            <ui:text from="{i18n.edit}" />
        </g:Button>
    </g:HTMLPanel>
</ui:UiBinder> 