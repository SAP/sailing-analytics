<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.recentevent.RecentEventResources" />
    <ui:style>
.img-fixedsize-temp {
	width: 370px;
	height: auto;
}
    </ui:style>
    <g:HTMLPanel>
    <div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large4} {res.mediaCss.columns}">
        <a href="javascript:;" ui:field="eventOverviewLink" class="{local_res.css.eventteaser}">
	        <figure class="{local_res.css.eventteaser_image}"><img ui:field='eventImage' class='{style.img-fixedsize-temp}' />
	          <div class="{local_res.css.eventteaser_series} {res.mainCss.label}"></div>
	        </figure>
	        <div class="{local_res.css.eventteaser_name}"><span ui:field="eventName" /></div>
	        <div class="{local_res.css.eventteaser_location}">
	            <span ui:field="venueName" />,&nbsp;<span ui:field="eventStartDate" />
	        </div>
        </a>
    </div>
    </g:HTMLPanel>
</ui:UiBinder>
