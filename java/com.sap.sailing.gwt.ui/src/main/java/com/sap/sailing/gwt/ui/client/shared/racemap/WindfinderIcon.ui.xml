<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:style>
        .container {
            display: block;
            margin: .15em .5em 0 0;
        }
        .content {
            background-color:#d0021b;
            border-radius:.5em;
            width: 8em;
            height: 8em;
            text-align: center;
            color: #fff;
            display: inline-block;
        }
        .icon {
            width: 4em;
            margin: .75em auto 0;
        }
        .icon svg {
            fill: #fff;
        }
        .text {
            font-size: 1.25em;
            font-family: Arial;
            padding: .33333333em .5em;
            letter-spacing: 1px;
        }
    </ui:style>
    <a target="_blank" class="{style.container}" ui:field="anchorUi">
        <div class="{style.content}">
            <div class="{style.icon}" ui:field="iconContainerUi"></div>
            <div class="{style.text}" ui:field="textContainerUi"></div>
        </div>
    </a>
</ui:UiBinder>