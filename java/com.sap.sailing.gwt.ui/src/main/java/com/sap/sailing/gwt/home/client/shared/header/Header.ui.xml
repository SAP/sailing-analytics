<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.header.HeaderResources" />
	<g:HTMLPanel>
		<header class="{local_res.css.siteheader}">
		  <div class="{res.mainCss.grid}">
		    <div class="{res.mediaCss.small2} {res.mediaCss.large3} {res.mediaCss.columns}">
		        <a ui:field="homeLink" href="javascript:;">
					<g:Image resource="{local_res.logo}" pixelSize="80, 40" altText="SAP Sailing Analytics" styleName="{local_res.css.logo}"/>
				</a>					
				<p class="{local_res.css.logotitle}">Sailing Analytics</p>
		    </div>
		    <div class="{res.mediaCss.small9} {res.mediaCss.medium7} {res.mediaCss.large6} {res.mediaCss.columns}">
				<nav class="{local_res.css.sitenavigation}">
					<g:Anchor ui:field="startPageLink"
						styleName="{local_res.css.sitenavigation_link}" text="{i18n.home}" href="javascript:;"/>
					<g:Anchor ui:field="eventsPageLink"
						styleName="{local_res.css.sitenavigation_link}" text="{i18n.events}" href="javascript:;"/>
					<g:Anchor ui:field="solutionsPageLink"
						styleName="{local_res.css.sitenavigation_link}" text="{i18n.solutions}" href="javascript:;"/>
					<!-- 
					<g:Anchor ui:field="sponsoringPageLink"
						styleName="{local_res.css.sitenavigation_link}" text="{i18n.sponsoring}" href="javascript:;" />
					 -->
				</nav>
		    </div>
		    <span class="{local_res.css.sitenavigation_search} {res.mediaCss.small1} {res.mediaCss.medium3} {res.mediaCss.columns}">
	          <div class="{local_res.css.search}">
	            <g:Button ui:field="searchButton" text="Search" styleName="{res.mainCss.button} {res.mainCss.buttonsearch} {local_res.css.search_button}" />
	            <g:TextBox ui:field="searchText" styleName="{local_res.css.search_textfield}" />
	          </div>		        
      		</span>
		  </div>
		</header>
	</g:HTMLPanel>
</ui:UiBinder>