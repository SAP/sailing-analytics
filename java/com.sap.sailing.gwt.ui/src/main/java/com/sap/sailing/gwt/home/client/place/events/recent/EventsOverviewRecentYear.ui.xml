<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
  <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages"/>
  <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.events.recent.EventsOverviewRecentResources" />
  <g:HTMLPanel>
    <div class="{local_res.css.eventsoverviewrecent_year}">
      <g:HTMLPanel ui:field="headerDiv" styleName="{local_res.css.eventsoverviewrecent_year_header}">
        <div class="{res.mediaCss.grid}">
          <div class="{res.mediaCss.small12} {res.mediaCss.medium2} {res.mediaCss.columns}">
            <h3 class="{local_res.css.eventsoverviewrecent_year_header_title}">
              <!-- year.title -->
              <span ui:field="year" />
            </h3>
          </div>
          <div class="{res.mediaCss.small12} {res.mediaCss.medium10} {res.mediaCss.columns}">
            <table class="{local_res.css.eventsoverviewrecent_year_header_info}">
              <tr>
                <td>
                  <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}">
                    <span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}">
                      <!-- year.eventsCount -->
                      <span ui:field="eventsCount" />
                      <ui:text from='{i18n.eventsOverviewRecentEvents}' />
                    </span>
                  </div>
                </td>
                <td>
                  <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}">
                    <span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}">
                      <!-- year.countriesCount -->
                      <span ui:field="countriesCount" />
                      <ui:text from='{i18n.eventsOverviewRecentCountries}' />
                    </span>
                  </div>
                </td>
                <td>
                  <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}">
                    <span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}">
                      <!-- year.sailorsCount -->
                      <span ui:field="sailorsCount" />
                      <ui:text from='{i18n.eventsOverviewRecentSailors}' />
                    </span>
                  </div>
                </td>
                <td>
                  <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}">
                    <span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}">
                      <!-- year.trackedRacesCount -->
                      <span ui:field="trackedRacesCount" />
                      <ui:text from='{i18n.eventsOverviewRecentTrackedRaces}' />
                    </span>
                  </div>
                </td>
                <td>
                  <div class="{local_res.css.eventsoverviewrecent_year_header_info_arrow}">
                    <img src="images/home/arrow-down-yellow.png" class="{local_res.css.eventsoverviewrecent_year_header_info_arrow_image}"></img>
                  </div>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field="contentDiv" styleName="{local_res.css.eventsoverviewrecent_year_content}">
        <div ui:field="recentEventsTeaserPanel" class="{res.mediaCss.grid}">
          <!-- EACH event in year.events -->
          <!-- <s:eventsOverviewRecent.RecentEventTeaser ui:field='event'></s> -->
          <!-- EACHEND -->
        </div>
      </g:HTMLPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>