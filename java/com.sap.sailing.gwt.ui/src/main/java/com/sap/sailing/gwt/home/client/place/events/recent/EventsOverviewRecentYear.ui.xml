<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.events.recent.EventsOverviewRecentResources" />
    <g:HTMLPanel>
<div class="{local_res.css.eventsoverviewrecent_year}">
  <g:HTMLPanel ui:field="headerDiv" styleName="{local_res.css.eventsoverviewrecent_year_header}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.medium2} {res.mediaCss.columns}">
        <h3 class="{local_res.css.eventsoverviewrecent_year_header_title}"><span ui:field="year" /></h3>
      </div>
      <div class="{res.mediaCss.small12} {res.mediaCss.medium10} {res.mediaCss.columns}">
        <table class="{local_res.css.eventsoverviewrecent_year_header_info}">
          <tr>
            <td>
              <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}"><span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}"><span ui:field="eventsCount" /></span><ui:text from='{i18n.eventsOverviewRecentEvents}'/></div>
            </td>
            <!-- 
            <td>
              <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}"><span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}"><span ui:field="countriesCount" /></span><ui:text from='{i18n.eventsOverviewRecentCountries}'/></div>
            </td>
            <td>
              <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}"><span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}"><span ui:field="sailorsCount" /></span><ui:text from='{i18n.eventsOverviewRecentSailors}'/></div>
            </td>
            <td>
              <div class="{local_res.css.eventsoverviewrecent_year_header_info_item}"><span class="{local_res.css.eventsoverviewrecent_year_header_info_item_value}"><span ui:field="trackedRacesCount" /></span><ui:text from='{i18n.eventsOverviewRecentTrackedRaces}'/></div>
            </td>
             -->
            <td>
              <div class="{local_res.css.eventsoverviewrecent_year_header_info_arrow}"><img src="images/home/arrow-down-yellow.png" class="{local_res.css.eventsoverviewrecent_year_header_info_arrow_image}"></img></div>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </g:HTMLPanel>
  <g:HTMLPanel ui:field="contentDiv" styleName="{local_res.css.eventsoverviewrecent_year_content}">
    <div ui:field="recentEventsTeaserPanel" class="{res.mainCss.grid}">
    </div>
  </g:HTMLPanel>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
