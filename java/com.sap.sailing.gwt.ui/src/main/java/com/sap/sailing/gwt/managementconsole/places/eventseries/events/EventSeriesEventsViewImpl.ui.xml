<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:p="urn:import:com.sap.sailing.gwt.managementconsole.partials"
    xmlns:esp="urn:import:com.sap.sailing.gwt.managementconsole.places.eventseries.events.partials">

    <ui:with field="res"
        type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res"
        type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="event_res"
        type="com.sap.sailing.gwt.managementconsole.places.event.overview.EventOverviewResources" />
    <ui:with field="local_res"
        type="com.sap.sailing.gwt.managementconsole.places.eventseries.events.EventSeriesEventsResources" />
    <ui:with field="i18n"
        type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <g:HTMLPanel addStyleNames="{res.mediaCss.grid}">
        <div ui:field="headerContainer" class="{res.mediaCss.grid}">
            <esp:EventSeriesHeader
                ui:field="eventSeriesHeader" />
        </div>
        <div class="{res.mediaCss.grid}">
            <div
                class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="eventSeriesName">
                    <ui:textfield
                        from='{i18n.eventSeriesName}' />
                </label>
                <g:TextBox ui:field="eventSeriesName" />
            </div>
            <div
                class="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6}">
                <label for="eventSeriesDescription">
                    <ui:textfield
                        from='{i18n.eventSeriesName}' />
                </label>
                <g:TextBox ui:field="eventSeriesDescription" />
            </div>
        </div>
        <div class="{res.mediaCss.column} {res.mediaCss.small12} {app_res.style.pageHeader} {app_res.style.flexContainer}">
            <div class="{app_res.fonts.pageTitle} {app_res.style.ellipsis}">
                <ui:text from='{i18n.series}' />
            </div>
            <g:Anchor ui:field="addEventAnchor"
                addStyleNames="{app_res.icons.icon} {app_res.icons.iconAdd} {app_res.style.flexItemFixedWidth}" />
            <div class="{app_res.style.flexItemAutoWidth}" />
            <g:Anchor ui:field="filterEventAnchor"
                addStyleNames="{app_res.icons.icon} {app_res.icons.iconFilter} {app_res.style.flexItemFixedWidth}" />
            <g:Anchor ui:field="searchEventAnchor"
                addStyleNames="{app_res.icons.icon} {app_res.icons.iconSearch} {app_res.style.flexItemFixedWidth}" />
        </div>
        <g:ScrollPanel ui:field="scrollContainer">
            <g:FlowPanel addStyleNames="{res.mediaCss.grid}">
                <g:FlowPanel ui:field="cards"
                    addStyleNames="{event_res.style.eventCards}" />
            </g:FlowPanel>
        </g:ScrollPanel>
    </g:HTMLPanel>
</ui:UiBinder>