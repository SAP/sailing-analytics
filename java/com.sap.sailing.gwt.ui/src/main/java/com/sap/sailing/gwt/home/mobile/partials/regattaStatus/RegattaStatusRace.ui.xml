<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
		xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"	xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.regattaStatus.RegattaStatusResources" />
	<ui:with field="shr" type="com.sap.sailing.gwt.home.shared.resources.SharedHomeResources" />
	<g:HTMLPanel>
		<a title="" ui:field="linkUi">
			<div class="{local_res.css.regattastatus_content_regatta_race} {res.mediaCss.grid}">
				<div class="{res.mainCss.fleetcorner}" ui:field="fleetCornerUi"></div>
				<div class="{local_res.css.regattastatus_content_regatta_race_title} {res.mediaCss.small3} {res.mediaCss.columns}" 
					ui:field="raceTitleUi"><!-- race.title -->
				</div>
				<div class="{local_res.css.regattastatus_content_regatta_race_flag} {res.mediaCss.small3} {res.mediaCss.columns}"
					ui:field="raceFlagContainerUi" >
				</div>
				<div class="{local_res.css.regattastatus_content_regatta_race_state} {res.mediaCss.small6} {res.mediaCss.columns}"
					ui:field="raceStateInfoUi">
					<!-- IF race.starttime != 'false' && race.currentlyRunning === 'false' ==> race.starttime -->
					<!-- IF race.finished != 'false' ==> race.finished -->
					<!-- IF race.currentlyRunning === 'true' && race.tracked === 'false' ==> race.running -->
				</div>
				<!-- IF race.currentlyRunning === 'true' && race.tracked === 'true' -->
				<div class="{local_res.css.regattastatus_content_regatta_race_legs} {res.mediaCss.small6} {res.mediaCss.columns}"
						ui:field="raceLegsInfoUi">
					<div ui:field="raceLegsInfoLabelUi"></div><!-- race.currentLegs / race.maxLegs -->
					<div class="{local_res.css.regattastatus_content_regatta_race_legs_progressbar}">
						<div class="{local_res.css.regattastatus_content_regatta_race_legs_progressbar_progress}" 
							ui:field="raceLegsInfoProgressUi"></div>
					</div>
				</div>
				<!-- IF END -->
				<!-- <img src="{hsr.arrowRightGrey.getSafeUri}" class="{local_res.css.regattastatus_content_regatta_race_arrow}"></img> -->
			</div>
		</a>
	</g:HTMLPanel>
</ui:UiBinder>