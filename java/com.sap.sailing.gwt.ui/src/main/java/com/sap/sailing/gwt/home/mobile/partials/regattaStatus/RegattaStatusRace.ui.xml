<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared"
	xmlns:mp="urn:import:com.sap.sailing.gwt.home.mobile.partials">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="i18n_ubi" type="com.sap.sailing.gwt.common.client.i18n.TextMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.home.mobile.resources.SharedResources" />
	<ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.regattaStatus.RegattaStatusResources" />
	<g:HTMLPanel>
		<a title="<!-- race.title -->">
			<div class="{local_res.css.regattastatus_content_regatta_race} {res.mediaCss.grid}">
				<div style="border-color: race.fleetColor;" class="res.mainCss.fleetcorner"></div>
				<div class="{local_res.css.regattastatus_content_regatta_race_title} {res.mediaCss.small4} {res.mediaCss.columns}">
					<!-- race.title -->
				</div>
				<div class="{local_res.css.regattastatus_content_regatta_race_flag} {res.mediaCss.small2} {res.mediaCss.columns}">
					<img src="<!-- race.flag -->" alt="" />
				</div>
				<!-- IF race.starttime != 'false' && race.currentlyRunning === 'false' -->
				<div class="{local_res.css.regattastatus_content_regatta_race_state} {res.mediaCss.small6} {res.mediaCss.columns}">
					<!-- race.starttime -->
				</div>
				<!-- IF END -->
				<!-- IF race.finished != 'false' -->
				<div class="{local_res.css.regattastatus_content_regatta_race_state} {res.mediaCss.small6} {res.mediaCss.columns}">
					<!-- race.finished -->
				</div>
				<!-- IF END -->
				<!-- IF race.currentlyRunning === 'true' && race.tracked === 'false' -->
				<div class="{local_res.css.regattastatus_content_regatta_race_state} {res.mediaCss.small6} {res.mediaCss.columns}">
					<ui:text from='{i18n.running}' />
				</div>
				<!-- IF END -->
				<!-- IF race.currentlyRunning === 'true' && race.tracked === 'true' -->
				<div class="{local_res.css.regattastatus_content_regatta_race_legs} {res.mediaCss.small6} {res.mediaCss.columns}">
					<ui:text from='{i18n.legLabel}' /><!-- race.currentLegs / race.maxLegs -->
					<div class="{local_res.css.regattastatus_content_regatta_race_legs_progressbar}">
						<div style="width:NaN%" class="{local_res.css.regattastatus_content_regatta_race_legs_progressbar_progress}"></div>
					</div>
				</div>
				<!-- IF END -->
				<img src="images/home/arrow-grey-right.png" class="{local_res.css.regattastatus_content_regatta_race_arrow}"></img>
			</div>
		</a>
	</g:HTMLPanel>
</ui:UiBinder>