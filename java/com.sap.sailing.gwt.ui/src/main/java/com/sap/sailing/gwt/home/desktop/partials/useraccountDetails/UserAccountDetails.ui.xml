<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
  <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
  <ui:with field="i18n_ubi" type="com.sap.sailing.gwt.common.client.i18n.TextMessages" />
  <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.desktop.partials.useraccountDetails.UseraccountDetailsResources" />
  <g:HTMLPanel>
    <div class="{local_res.css.useraccountdetails}">
      <div class="{res.mediaCss.grid}">
        <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
          <a href="#" ui:field="editImageLinkUi" class="{local_res.css.useraccountdetails_image}">
            <div class="{local_res.css.useraccountdetails_image_editbutton}"></div>
          </a>
          <div class="{local_res.css.useraccountdetails_content}">
            <div class="{local_res.css.useraccountdetails_content_detail}">
              <label class="{local_res.css.useraccountdetails_content_detail_label}">
                <!-- <ui:text from="{i18n.username}" /> -->
                TODO username
              </label>
              <input ui:field="usernameUi" type="text" class="{local_res.css.useraccountdetails_content_detail_input}" />
            </div>
            <div class="{local_res.css.useraccountdetails_content_detail}">
              <label class="{local_res.css.useraccountdetails_content_detail_label}">
                <ui:text from='{i18n.name}' />
              </label>
              <input ui:field="nameUi" type="text" class="{local_res.css.useraccountdetails_content_detail_input}" />
            </div>
            <div class="{local_res.css.useraccountdetails_content_detail}">
              <label class="{local_res.css.useraccountdetails_content_detail_label}">
                <ui:text from='{i18n.password}' />
              </label>
              <!-- placeholder="{i18n.passwordwordText}" -->
              <input type="password" placeholder="TODO placeholder text" class="{local_res.css.useraccountdetails_content_detail_input}"></input>
            </div>
            <div class="{local_res.css.useraccountdetails_content_detail}">
              <label class="{local_res.css.useraccountdetails_content_detail_label}">
                <ui:text from='{i18n.email}' />
              </label>
              <input ui:field="emailUi" type="email" class="{local_res.css.useraccountdetails_content_detail_input}" />
            </div>
            <div class="{local_res.css.useraccountdetails_content_detail}">
              <label class="{local_res.css.useraccountdetails_content_detail_label}">
              <!-- <ui:text from='{i18n_ubi.passwordConfirmation}' /> -->
                TODO password confirmation
              </label>
              <!-- placeholder="{i18n.passwordConfirmationText}" -->
              <input type="password" placeholder="TODO placeholder text" class="{local_res.css.useraccountdetails_content_detail_input}"></input>
            </div>
            <div class="{local_res.css.useraccountdetails_content_submit}">
              <div class="{res.mainCss.button} {res.mainCss.buttonprimary}">
                <ui:text from='{i18n.save}' />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>