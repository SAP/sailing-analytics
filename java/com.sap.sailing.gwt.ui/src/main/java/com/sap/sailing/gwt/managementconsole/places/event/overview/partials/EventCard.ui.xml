<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.managementconsole.places.event.overview.EventOverviewResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    
    <g:HTMLPanel addStyleNames="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large4} {local_res.style.cardPanel}">
        <div class="{local_res.style.eventCard}" ui:field="card">
            <div class="{local_res.style.eventCardContainer}">
                <div class="{app_res.style.oneLineContainer}">
                    <div class="{app_res.style.oneLineAutoWidthItem}">
                        <h1>
                            <span ui:field="title"></span>
                        </h1>
                        <div class="{app_res.style.oneLineContainer}">
                            <div class="{app_res.style.oneLineItem} {app_res.icons.icon} {app_res.icons.iconLocation}">&#160;</div>
                            <h2 ui:field="subTitle" class="{app_res.style.oneLineAutoWidthItem}"/>
                        </div>
                    </div>
                    <div>
                        <g:Anchor href="javascript:;" ui:field="advancedSettingsEventAnchor" 
                            styleName="{app_res.style.oneLineItem} {app_res.icons.iconElipse} {app_res.icons.icon} {app_res.style.right}">&#160;</g:Anchor>
                    </div>                
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>