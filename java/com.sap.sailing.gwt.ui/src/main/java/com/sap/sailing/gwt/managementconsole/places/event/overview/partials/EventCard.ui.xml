<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="app_res" type="com.sap.sailing.gwt.managementconsole.resources.ManagementConsoleResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.managementconsole.places.event.overview.EventOverviewResources" />
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    
    <g:HTMLPanel addStyleNames="{res.mediaCss.column} {res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large4}">
        <div class="{local_res.style.eventCard}" ui:field="card">
            <div class="{res.mediaCss.grid} {local_res.style.eventCardContainer}">
                <div class="{res.mediaCss.column} {res.mediaCss.hideonsmall} {res.mediaCss.medium4}">
                    <div class="{local_res.style.featuredMarker}" ui:field="eventState1">
                        <ui:text from='{i18n.live}' />
                    </div>
                </div>
                <h1 class="{res.mediaCss.column} {res.mediaCss.small8} {res.mediaCss.medium12}" ui:field="title"/>
                <div class="{res.mediaCss.column} {res.mediaCss.small4} {res.mediaCss.showonsmall}">
                    <div class="{local_res.style.featuredMarker}" ui:field="eventState2">
                        <ui:text from='{i18n.live}' />
                    </div>
                </div>
                <h2 class="{res.mediaCss.column} {res.mediaCss.small12} {app_res.icons.icon} {app_res.icons.iconLocation} {local_res.style.location}"
                    ui:field="subTitle"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>