<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.events.upcoming.EventsOverviewUpcomingResources" />
    <g:HTMLPanel>

<!-- Page displays all upcoming events-->
<div class="{local_res.css.eventsoverviewupcoming}">
  <div class="{local_res.css.eventsoverviewupcoming}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
        <h2>Coming soon</h2>
      </div>
    </div>
    <div class="{local_res.css.eventslist_header}">
      <div class="{res.mainCss.grid}">
        <div class="{res.mediaCss.small3} {res.mediaCss.columns} {local_res.css.eventslist_header_item}">Date</div>
        <div class="{res.mediaCss.small3} {res.mediaCss.columns} {local_res.css.eventslist_header_item}">Event</div>
        <div class="{res.mediaCss.small4} {res.mediaCss.columns} {local_res.css.eventslist_header_item}">Location</div>
        <div class="{res.mediaCss.small2} {res.mediaCss.columns} {local_res.css.eventslist_header_item} {local_res.css.eventslist_header_itemseries}">Series</div>
      </div>
    </div>
    <g:HTMLPanel ui:field='eventsPlaceholder' >
		<!-- the upcoming event widgets will be inserted here -->
    </g:HTMLPanel>
    </div>
  <div class="{local_res.css.eventsoverviewupcoming_teaser}">
    <div class="{res.mainCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">More Events To Be Announced Soon!</div>
    </div>
  </div>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
