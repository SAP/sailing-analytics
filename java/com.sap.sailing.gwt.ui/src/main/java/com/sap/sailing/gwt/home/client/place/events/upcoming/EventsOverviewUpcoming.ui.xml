<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.common.client.i18n.TextMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.place.events.upcoming.EventsOverviewUpcomingResources" />
  <g:FlowPanel addStyleNames="{local_res.css.eventsoverviewupcoming} {local_res.css.accordion}">
      <g:HTMLPanel ui:field="header" addStyleNames="{local_res.css.eventsoverviewupcoming_header} {local_res.css.accordion_trigger}">
        <div class="{res.mediaCss.grid}">
          <div class="{res.mediaCss.small6} {res.mediaCss.columns}">
            <h3><ui:text from='{i18n.seriesHeaderUpcoming}'/></h3>
          </div>
          <div class="{res.mediaCss.small6} {res.mediaCss.columns}">
            <table class="{local_res.css.eventsoverviewupcoming_header_info}">
              <tr>
                <td>
                  <div class="{local_res.css.eventsoverviewupcoming_header_info_item}">
                    <span class="{local_res.css.eventsoverviewupcoming_header_info_item_value}">
                      <span ui:field="eventsCount"></span>
                      <ui:text from='{i18n.events}' />
                    </span>
                  </div>
                </td>
                <td>
                  <div class="{local_res.css.eventsoverviewupcoming_header_info_arrow}">
                    <img src="images/home/arrow-down-yellow.png" class="{local_res.css.eventsoverviewupcoming_header_info_arrow_image}"></img>
                  </div>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </g:HTMLPanel>
      <g:HTMLPanel ui:field='eventsPlaceholder' addStyleNames="{local_res.css.eventsoverviewupcoming_content} {local_res.css.accordion_content}" >
        <!-- the upcoming event widgets will be inserted here -->
      </g:HTMLPanel>
  </g:FlowPanel>
</ui:UiBinder>
