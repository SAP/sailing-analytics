<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.mobile.partials.accordion.AccordionResources" />
    <ui:style>

    </ui:style>
    <g:HTMLPanel
        addStyleNames="{local_res.css.solutions_item} {res.mediaCss.small12} {res.mediaCss.columns}">
        <div ui:field="headerUi"
            class="{local_res.css.solutions_item_header} {local_res.css.accordion_trigger}">
            <h2 ui:field="titleUi" class="{local_res.css.solutions_item_header_title}">
            </h2>
            <img src="images/mobile/arrow-down-grey.png" alt=""
                class="{local_res.css.solutions_item_header_arrow}"></img>
        </div>
        <div ui:field="contentWrapperUi"
            class="{local_res.css.solutions_item_body} {local_res.css.accordion_content}">
            <img ui:field="imageUi"></img>
            <g:SimplePanel ui:field="contentUi" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 