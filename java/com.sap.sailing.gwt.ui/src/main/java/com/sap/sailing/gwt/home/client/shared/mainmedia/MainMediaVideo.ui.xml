<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
    <ui:with field="i18n" type="com.sap.sailing.gwt.home.client.i18n.TextMessages"/>
    <ui:with field="res" type="com.sap.sailing.gwt.home.client.HomeResources" />
    <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.mainmedia.MainMediaResources" />
    <g:HTMLPanel>

<div class="{res.mediaCss.small12} {res.mediaCss.medium6} {res.mediaCss.large4} {res.mediaCss.columns}">
  <figure data-src="videoFile" class="{local_res.css.videopreview} {res.mainCss.lightbox_item}"><img src="images/videoThumb"></img>
    <figcaption><a href="videoLink" class="{local_res.css.videopreview_title}"><span ui:field="videoTitle" /></a>
      <time><span ui:field="videoTime" /></time>
    </figcaption>
  </figure>
</div>
    </g:HTMLPanel>
</ui:UiBinder>
