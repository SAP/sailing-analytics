<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:s="urn:import:com.sap.sailing.gwt.home.client.shared">
	<ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
	<ui:with field="res" type="com.sap.sailing.gwt.home.mobile.resources.SharedResources" />

	<ui:style>
		.minileaderboard_item_legend {
			margin: 0 !important;
			position: relative;
			padding: 1em 0.75em;
	  		font-size: 0.866666666666667em;
	  		min-height: 4.5em;
	  		background-color: #f2f2f2;
		}
		.minileaderboard_item_legend_description, .minileaderboard_item_legend_score {
			position: absolute;
			top: 50%;
			-webkit-transform: translateY(-50%);
			   -moz-transform: translateY(-50%);
			    -ms-transform: translateY(-50%);
			        transform: translateY(-50%);
		}
		.minileaderboard_item_legend_description {
	     	margin: 0 6.25em 0 0.5em;
	     	font-style: italic;
		}
		.minileaderboard_item_legend_score {
			right: 1em;
			width: 5em;
			text-align: center;
			padding: 0.230769230769231em 0;
			background: #ebebeb;
			border: 1px solid #dedede;
			border-radius: 0.384615384615385em;
		}
		.minileaderboard_item_legend_points {
			font-weight: bold;
		}
		.minileaderboard_item_legend_racecount {
			font-size: 0.866666666666667em;
		}
	</ui:style>

	<div class="{res.mediaCss.grid} {style.minileaderboard_item_legend}">
		<div class="{style.minileaderboard_item_legend_description}" ui:field="competitorNameUi">
			<ui:text from="{i18n.miniLeeaderboardLegendText}"/>:
		</div>
		<div class="{style.minileaderboard_item_legend_score}">
			<div class="{style.minileaderboard_item_legend_points}" ui:field="competitorPointsUi">
				<ui:text from="{i18n.points}"/>
			</div>
			<div class="{style.minileaderboard_item_legend_racecount}" ui:field="competitorRacesUi">
				(<ui:text from="{i18n.numberOfRacesShort}"/>)
			</div>
		</div>
	</div>

</ui:UiBinder>