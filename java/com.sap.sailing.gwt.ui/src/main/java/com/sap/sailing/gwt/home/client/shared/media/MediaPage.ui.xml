<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.sap.sse.gwt.theme.client.component">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
    .important {
        font-weight: bold;
    }
    </ui:style>
    <g:HTMLPanel>
    <div class="{res.mediaCss.grid}">
        <div class="{res.mediaCss.small12} {res.mediaCss.columns}" style="min-height: 300px;">
            <h3 ui:field="noContent" style="display: none; padding-top: 2em;"><ui:text from="{i18n.mediaNoContent}" /></h3>
            <c:imagegallery.ImageGallery ui:field="photos" visible="false" />
            <c:videogallery.VideoGallery ui:field="videos" visible="false" />
        </div>
      </div>
    </g:HTMLPanel>
</ui:UiBinder> 