<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:sse="urn:import:com.sap.sse.gwt.client.controls">
<!--   xmlns:c="urn:import:com.sap.sse.gwt.theme.client.component" -->
  <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
  <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
  <ui:with field="local_res" type="com.sap.sailing.gwt.home.client.shared.media.MediaPageResources" />
  <ui:style>
  </ui:style>
  <g:HTMLPanel>
    <div class="{res.mediaCss.grid}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
<!--           <c:imagegallery.ImageGallery ui:field="photos" visible="false" /> -->
<!--           <c:videogallery.VideoGallery ui:field="videos" visible="false" /> -->
      </div>
    </div>
    <div ui:field="photoWrapper" style="display: none;" class="{res.mediaCss.grid} {local_res.css.media}">
      <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
        <header class="{res.mainCss.mainsection_header}">
          <h3 class="{res.mainCss.mainsection_header_title}">
            <ui:text from='{i18n.photos}' />
          </h3>
        </header>
        <sse:carousel.ImageCarousel ui:field="imageCarousel" /> 
      </div>
    </div>
    <div ui:field="videoWrapper" style="display: none;" class="{res.mainCss.mainsection} {local_res.css.media}">
      <div class="{res.mediaCss.grid} {res.mainCss.lightbox}">
        <div class="{res.mediaCss.small12} {res.mediaCss.columns}">
          <header class="{res.mainCss.mainsection_header}">
            <h3 class="{res.mainCss.mainsection_header_title}">
             <ui:text from='{i18n.videos}' />
            </h3>
           </header>
          <div ui:field="videosPanel" />
        </div>
      </div>
    </div>
  </g:HTMLPanel>
</ui:UiBinder> 