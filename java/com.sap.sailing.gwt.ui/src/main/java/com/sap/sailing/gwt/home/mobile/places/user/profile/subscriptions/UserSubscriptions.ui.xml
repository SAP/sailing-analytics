<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:com.sap.sailing.gwt.home.shared.partials.filter">
    <ui:with field="i18n" type="com.sap.sailing.gwt.ui.client.StringMessages" />
    <ui:with field="res" type="com.sap.sailing.gwt.common.client.SharedResources" />
    <ui:style>
        .footerContainer {
            border-top: 2px solid #ccc;
            padding-top: 1rem;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{res.mediaCss.grid} {res.mainCss.spacermarginbottommediumsmall}">
        <g:FlowPanel ui:field="subscriptionsContainerUi" addStyleNames="{res.mediaCss.column} {res.mediaCss.small12}" />
        <g:FlowPanel addStyleNames="{res.mediaCss.column} {style.footerContainer}">
            <g:Button ui:field="subscribeButtonUi" addStyleNames=" {res.mediaCss.small12} {res.mainCss.button} {res.mainCss.buttonprimary}">
                <ui:text from="{i18n.subscribe}" />
            </g:Button>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{res.mediaCss.column} {style.footerContainer}">
            <g:Button ui:field="selfServiceControlUi" addStyleNames=" {res.mediaCss.small12} {res.mainCss.button}">
                <ui:text from="{i18n.goToSelfServicePortalDialogTitle}" />
            </g:Button>
        </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder> 