<?xml version="1.0" encoding="UTF-8"?>
<!-- Could not determine the version of your GWT SDK; using the module DTD 
	from GWT 1.6.4. You may want to change this. -->
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.7.0//EN" "http://gwtproject.org/doctype/2.7.0/gwt-module.dtd">
<module>
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name='com.google.gwt.user.User' />
	<inherits name="com.google.gwt.http.HTTP"/>

	<inherits name="com.sap.sse.gwt.EmulatedJRE" />
	<inherits name='com.sap.sailing.gwt.FormFactor'/>
	
	<!-- Inherit the default GWT style sheet. You can change -->
	<!-- the theme of your GWT application by uncommenting -->
	<!-- any one of the following lines. -->
	<inherits name='com.google.gwt.debug.Debug' />

	<inherits name="com.google.gwt.resources.Resources" />
	<inherits name="com.google.gwt.logging.Logging" />

	<!-- Other module inherits -->
	<inherits name='com.sap.sse.gwt.theme.SSEThemeLibrary'/>
	<inherits name="com.sap.sse.gwt.SSESharedGWT" />
	<inherits name="com.sap.sse.SSECommon" />
	<inherits name="com.sap.sailing.domain.SailingDomain" />
	<inherits name="com.sap.sse.gwt.AdminConsole" />
	<inherits name="com.sap.sse.security.ui.LoginPanel" />
	
	<!-- Highcharts API -->
	<inherits name="org.moxieapps.gwt.highcharts.Highcharts" />
	
	<!-- Google Maps API -->
	<inherits name='com.google.gwt.ajaxloader.AjaxLoader' />
  	<inherits name='com.google.gwt.maps.Maps' />
  	
  	<!--  Bootstrap API -->
  	<inherits name="com.github.gwtbootstrap.BootstrapNoResources" />
  	<inherits name='com.github.gwtbootstrap.datetimepicker.DatetimepickerNoResources' />
  	
	<!-- Default is Tablet/Desktop -->
	<replace-with
		class="com.sap.sailing.gwt.home.client.app.TabletAndDesktopApplicationClientFactory">
		<when-type-is class="com.sap.sailing.gwt.home.client.app.ApplicationClientFactory" />
	</replace-with>

	<replace-with class="com.sap.sailing.gwt.home.client.app.TabletAndDesktopApplicationClientFactory">
		<when-type-is class="com.sap.sailing.gwt.home.client.app.ApplicationClientFactory" />
		<when-property-is name="formfactor" value="tablet" />
	</replace-with>

	<replace-with class="com.sap.sailing.gwt.home.client.app.SmartphoneApplicationClientFactory">
		<when-type-is class="com.sap.sailing.gwt.home.client.app.ApplicationClientFactory" />
		<when-property-is name="formfactor" value="mobile" />
	</replace-with>

	<!-- Specify the app entry point class. -->

	<!-- Specify the paths for translatable code -->
	<extend-property name="locale" values="de" />

	<!-- Uncomment this to get clear-text CSS style/class names in generated output -->
	<!-- 
	<set-configuration-property name="CssResource.style" value="pretty" />
	-->
	
	<set-property name="gwt.logging.enabled" value="TRUE"/> 
	<set-property name="gwt.logging.logLevel" value="INFO"/>
	
	<set-property name="gwt.logging.consoleHandler" value="ENABLED" />
	<set-property name="gwt.logging.developmentModeHandler" value="DISABLED" />
	<set-property name="gwt.logging.systemHandler" value="ENABLED" />

	<add-linker name="xsiframe" />
	<set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>
	<set-configuration-property name="devModeRedirectEnabled" value="true" />
    <set-property name="compiler.useSourceMaps" value="true" />
    
    <set-configuration-property name="CssResource.enableGss" value="true" />
    <set-configuration-property name="CssResource.legacy" value="true" />
	
	<source path='home' />
	<source path='common' />
	<source path='idangerous' />
		
	<source path='ui/common' />
	<source path='ui/client' />
	<source path='ui/shared' />
	<source path='ui/actions' />
	<source path='ui/simulator' />
	<source path='ui/adminconsole' />
	<source path='ui/usermanagement' />
	<source path='ui/masterdataimport' />
	<source path='ui/regattaoverview' />
	<source path='ui/leaderboard'/>
	
	
		<entry-point class='com.sap.sailing.gwt.home.client.HomeEntryPoint' />
	
</module>
