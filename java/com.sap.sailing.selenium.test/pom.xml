<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>root</artifactId>
        <groupId>com.sap.sailing</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>com.sap.sailing.selenium.test</artifactId>
    <packaging>eclipse-test-plugin</packaging>

    <properties>
        <parameters.jetty>
          -Djetty.home=${basedir}/../target/configuration/jetty -Djetty.port=8085
        </parameters.jetty>
        <!--
          NOTE: The actual value for "parameters.integration-tests" and "parameters.proxy" should be defined in the
          local settings.xml, because of the differences between the CI-Build and the local setup.
        -->
        <tycho.tests.argLine>
          ${parameters.integration-tests} ${parameters.proxy} ${parameters.jetty} -Xmx1024m
        </tycho.tests.argLine>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-surefire-plugin</artifactId>
                <configuration>
                    <!-- Skip the normal tests, we'll run them in the integration-test phase -->
                    <skip>true</skip>
                </configuration>
                
                <executions>
                    <execution>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <skip>${skipTests}</skip>
                            <excludes>  
                               <exclude>**/core/**</exclude>  
                            </excludes>
                            
                            <argLine>${tycho.tests.argLine}</argLine>
                            <appArgLine>-consoleLog -console -clean</appArgLine>
                            
                            <product>raceanalysis.product</product>
                            <application>raceanalysis.application</application>
                            
                            <!--
                              TODO: The "dependencies" as well as the "bundleStartLevel" should not be needed, since we
                                    start a product for which a definition exists. However at the moment this definition
                                    seems to be ignored by tycho.
                                    
                                    See also https://bugs.eclipse.org/bugs/show_bug.cgi?id=386988
                            -->
	                    <dependencies>
                                <dependency>
                                    <type>eclipse-feature</type>
                                    <artifactId>com.sap.sailing.feature</artifactId>
                                    <version>0.0.0</version>
                                </dependency>
                                <dependency>
                                    <type>eclipse-feature</type>
                                    <artifactId>com.sap.sailing.feature.runtime</artifactId>
                                   <version>0.0.0</version>
                                </dependency>
                                <!-- This bundle should only be deployed in a test environment! -->
                                <dependency>
                                    <type>eclipse-plugin</type>
                                    <artifactId>com.sap.sailing.server.gateway.test.support</artifactId>
                                    <version>0.0.0</version>
                                </dependency>
                                -->
                            </dependencies>
                            
                            <bundleStartLevel>
                                <bundle>
                                    <id>com.sap.sailing.server.gateway.test.support</id>
                                    <level>4</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                
                                <bundle>
                                    <id>com.sap.sailing.ess40.resultimport</id>
                                    <level>3</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                    <id>com.sap.sailing.freg.resultimport</id>
                                    <level>3</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                    <id>com.sap.sse.gwt</id>
                                    <level>4</level>
                                    <autoStart>true</autoStart>
                                </bundle>
								<bundle>
                                    <id>com.sap.sailing.gwt.home</id>
                                    <level>5</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                    <id>com.sap.sailing.gwt.ui</id>
                                    <level>4</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                    <id>com.sap.sailing.kiworesultimport</id>
                                    <level>3</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <!--
                                <bundle>
                                    <id>com.sap.sailing.monitoring</id>
                                    <level>5</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                -->
                                <bundle>
                                    <id>com.sap.sailing.server</id>
                                    <level>4</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                    <id>com.sap.sailing.server.gateway</id>
                                    <level>4</level>
                                    <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                    <id>com.sap.sailing.server.replication</id>
                                    <level>4</level>
