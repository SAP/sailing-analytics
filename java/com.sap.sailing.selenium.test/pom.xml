                                </bundle>
                                <bundle>
                                   <id>org.eclipse.jetty.deploy</id>
                                   <level>4</level>
                                   <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                   <id>org.eclipse.jetty.http</id>
                                   <level>4</level>
                                   <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                   <id>org.eclipse.jetty.io</id>
                                   <level>4</level>
                                   <autoStart>true</autoStart>
                                </bundle>
                                <bundle>
                                   <id>org.eclipse.jetty.jmx</id>
