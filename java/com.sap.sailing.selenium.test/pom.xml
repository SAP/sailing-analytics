                                </bundle>
                                <bundle>
                                   <id>org.mortbay.jetty.util</id>
                                   <level>4</level>
                                   <autoStart>true</autoStart>
                                </bundle>
                            </bundleStartLevel>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
